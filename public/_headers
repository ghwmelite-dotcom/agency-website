# Prevent caching of client dashboard and dynamic pages
/client/*
  Cache-Control: no-store, no-cache, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Prevent caching of admin pages
/admin/*
  Cache-Control: no-store, no-cache, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Prevent caching of API routes
/api/*
  Cache-Control: no-store, no-cache, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Allow caching of static assets
/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# Allow caching of images
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Default for other pages - short cache
/*
  Cache-Control: public, max-age=300, must-revalidate
