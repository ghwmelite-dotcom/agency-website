---
// AI Project Estimator Call-to-Action Component
---

<section class="ai-estimator-cta">
  <div class="container">
    <div class="cta-grid">
      <div class="cta-content">
        <div class="badge">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2L2 7l10 5 10-5-10-5z"/>
            <path d="M2 17l10 5 10-5"/>
            <path d="M2 12l10 5 10-5"/>
          </svg>
          <span>AI-Powered</span>
        </div>

        <h2 class="section-title">
          Get Your Project Estimate in
          <span class="gradient-text">60 Seconds</span>
        </h2>

        <p class="section-description">
          Our AI-powered estimator analyzes your project requirements and provides instant,
          accurate cost estimates, timeline projections, and technology recommendations.
          No waiting, no sales calls required.
        </p>

        <div class="features-grid">
          <div class="feature-item">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
            </div>
            <div>
              <h4>Instant Results</h4>
              <p>Get estimates in under 60 seconds</p>
            </div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2v20M2 12h20"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
            </div>
            <div>
              <h4>AI Analysis</h4>
              <p>Powered by advanced AI technology</p>
            </div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
            </div>
            <div>
              <h4>Detailed Breakdown</h4>
              <p>Timeline, tech stack, and risk analysis</p>
            </div>
          </div>
        </div>

        <div class="cta-actions">
          <a href="/estimate-project" class="btn btn-primary btn-lg">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 11l3 3L22 4"/>
              <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"/>
            </svg>
            Get Your Free Estimate
          </a>
          <a href="/#portfolio" class="btn btn-secondary btn-lg">
            View Our Work
          </a>
        </div>
      </div>

      <div class="cta-visual">
        <div class="mockup-container">
          <div class="mockup-screen">
            <div class="mockup-header">
              <div class="mockup-dots">
                <span></span>
                <span></span>
                <span></span>
              </div>
              <div class="mockup-title">AI Project Estimator</div>
            </div>

            <div class="mockup-content">
              <div class="estimate-card">
                <div class="estimate-row">
                  <span class="estimate-label">Estimated Cost</span>
                  <span class="estimate-value gradient-text">$25,000 - $45,000</span>
                </div>
                <div class="estimate-row">
                  <span class="estimate-label">Timeline</span>
                  <span class="estimate-value">12-16 weeks</span>
                </div>
                <div class="estimate-row">
                  <span class="estimate-label">Team Size</span>
                  <span class="estimate-value">4-5 developers</span>
                </div>
                <div class="estimate-row">
                  <span class="estimate-label">Risk Level</span>
                  <span class="estimate-badge low">Low Risk</span>
                </div>
              </div>

              <div class="tech-stack">
                <div class="tech-tag">React</div>
                <div class="tech-tag">Node.js</div>
                <div class="tech-tag">PostgreSQL</div>
                <div class="tech-tag">AWS</div>
              </div>

              <div class="ai-badge">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                  <path d="M2 17l10 5 10-5"/>
                </svg>
                <span>Powered by AI</span>
              </div>
            </div>
          </div>

          <!-- Floating elements -->
          <div class="float-element float-1">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
            </svg>
          </div>
          <div class="float-element float-2">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 16V8a2 2 0 00-1-1.73l-7-4a2 2 0 00-2 0l-7 4A2 2 0 003 8v8a2 2 0 001 1.73l7 4a2 2 0 002 0l7-4A2 2 0 0021 16z"/>
            </svg>
          </div>
          <div class="float-element float-3">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="2" y1="12" x2="22" y2="12"/>
              <path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .ai-estimator-cta {
    padding: var(--spacing-section) 0;
    background: linear-gradient(135deg,
      rgba(102, 126, 234, 0.05) 0%,
      rgba(118, 75, 162, 0.05) 100%
    );
    position: relative;
    overflow: hidden;
  }

  [data-theme="dark"] .ai-estimator-cta {
    background: linear-gradient(135deg,
      rgba(102, 126, 234, 0.03) 0%,
      rgba(118, 75, 162, 0.03) 100%
    );
  }

  .cta-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    align-items: center;
  }

  .cta-content {
    max-width: 600px;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    border: 1px solid rgba(102, 126, 234, 0.2);
    border-radius: var(--radius-full);
    color: var(--color-primary);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
  }

  .badge svg {
    color: var(--color-primary);
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
  }

  .gradient-text {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-lg);
  }

  .features-grid {
    display: grid;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
  }

  .feature-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: var(--color-primary);
  }

  .feature-item h4 {
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
    color: var(--color-text);
  }

  .feature-item p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .cta-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.0625rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(102, 126, 234, 0.5);
  }

  .btn-secondary {
    background: var(--color-surface);
    color: var(--color-text);
    border: 1px solid var(--glass-border);
  }

  .btn-secondary:hover {
    background: var(--color-bg-alt);
  }

  /* Visual Mockup */
  .cta-visual {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mockup-container {
    position: relative;
    width: 100%;
    max-width: 500px;
  }

  .mockup-screen {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    padding: var(--spacing-lg);
    box-shadow: var(--shadow-xl);
    position: relative;
    z-index: 2;
  }

  .mockup-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-md);
    border-bottom: 1px solid var(--glass-border);
  }

  .mockup-dots {
    display: flex;
    gap: 0.5rem;
  }

  .mockup-dots span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--glass-border);
  }

  .mockup-dots span:nth-child(1) { background: #ff5f56; }
  .mockup-dots span:nth-child(2) { background: #ffbd2e; }
  .mockup-dots span:nth-child(3) { background: #27c93f; }

  .mockup-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-muted);
  }

  .mockup-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .estimate-card {
    background: var(--color-surface);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .estimate-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .estimate-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .estimate-value {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .estimate-badge {
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
  }

  .estimate-badge.low {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
  }

  .tech-stack {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tech-tag {
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    border: 1px solid rgba(102, 126, 234, 0.2);
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  .ai-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: var(--radius-full);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    width: fit-content;
  }

  /* Floating Elements */
  .float-element {
    position: absolute;
    width: 60px;
    height: 60px;
    border-radius: var(--radius-lg);
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    animation: float 6s ease-in-out infinite;
    z-index: 1;
  }

  .float-1 {
    top: 10%;
    right: -10%;
    animation-delay: 0s;
  }

  .float-2 {
    bottom: 20%;
    right: -5%;
    animation-delay: 2s;
  }

  .float-3 {
    top: 50%;
    left: -8%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(10deg);
    }
  }

  @media (max-width: 768px) {
    .cta-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .cta-visual {
      order: -1;
    }

    .mockup-container {
      max-width: 100%;
    }

    .float-element {
      display: none;
    }

    .cta-actions {
      flex-direction: column;
    }

    .cta-actions a {
      width: 100%;
      justify-content: center;
    }
  }
</style>
