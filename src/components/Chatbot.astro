---
// AI Chatbot Widget Component - Elite Modern Design
---

<div class="chatbot-container" id="chatbot-container">
  <button class="chatbot-toggle" id="chatbot-toggle" aria-label="Toggle chatbot">
    <div class="chatbot-toggle-inner">
      <svg class="chat-icon" width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2L2 7L12 12L22 7L12 2Z" fill="url(#chatGradient1)" opacity="0.8"/>
        <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <circle cx="12" cy="7" r="1.5" fill="currentColor"/>
        <defs>
          <linearGradient id="chatGradient1" x1="2" y1="2" x2="22" y2="12">
            <stop offset="0%" stop-color="#6366f1"/>
            <stop offset="100%" stop-color="#ec4899"/>
          </linearGradient>
        </defs>
      </svg>
      <svg class="close-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>
      <div class="chatbot-glow"></div>
    </div>
    <span class="chatbot-badge">1</span>
  </button>

  <div class="chatbot-window" id="chatbot-window">
    <div class="chatbot-header">
      <div class="chatbot-avatar">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L2 7L12 12L22 7L12 2Z" fill="currentColor" opacity="0.9"/>
          <path d="M2 17L12 22L22 17M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <circle cx="12" cy="7" r="2" fill="white"/>
        </svg>
        <div class="avatar-glow"></div>
      </div>
      <div class="chatbot-info">
        <h4>Kodie - AI Assistant</h4>
        <span class="chatbot-status">
          <span class="status-dot"></span>
          <span>Online Now</span>
        </span>
      </div>
      <button class="chatbot-minimize" aria-label="Minimize chat">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"/>
        </svg>
      </button>
    </div>

    <!-- Welcome Screen -->
    <div class="chatbot-welcome" id="chatbot-welcome">
      <div class="welcome-header">
        <div class="welcome-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L2 7L12 12L22 7L12 2Z" fill="url(#welcomeGrad)" opacity="0.9"/>
            <path d="M2 17L12 22L22 17M2 12L12 17L22 12" stroke="url(#welcomeGrad)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="12" cy="7" r="3" fill="white"/>
            <defs>
              <linearGradient id="welcomeGrad" x1="2" y1="2" x2="22" y2="22">
                <stop offset="0%" stop-color="#667eea"/>
                <stop offset="100%" stop-color="#f093fb"/>
              </linearGradient>
            </defs>
          </svg>
        </div>
        <h3>Welcome! ðŸ‘‹</h3>
        <p>I'm Kodie, your AI assistant. I can help with web development, WordPress, SEO, debugging, and technical questions.</p>
      </div>
      <form class="welcome-form" id="welcome-form">
        <div class="form-group">
          <input type="text" id="user-name" placeholder="Your name" required />
        </div>
        <div class="form-group">
          <input type="email" id="user-email" placeholder="Your email (optional)" />
        </div>
        <button type="submit" class="start-chat-btn">
          Start Chat
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </button>
      </form>
    </div>

    <div class="chatbot-messages" id="chatbot-messages" style="display: none;">
      <!-- Messages will be added here dynamically -->
    </div>

    <form class="chatbot-input" id="chatbot-form" style="display: none;">
      <input
        type="text"
        id="chatbot-message"
        placeholder="Type your message..."
        autocomplete="off"
        required
      />
      <button type="submit" aria-label="Send message">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="22" y1="2" x2="11" y2="13"/>
          <polygon points="22 2 15 22 11 13 2 9 22 2"/>
        </svg>
      </button>
    </form>

    <div class="chatbot-footer">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
      </svg>
      <span>Powered by Hodges & Co.</span>
    </div>
  </div>
</div>

<style>
  .chatbot-container {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: 9999;
  }

  .chatbot-toggle {
    width: 68px;
    height: 68px;
    border-radius: var(--radius-full);
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .chatbot-toggle-inner {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: var(--radius-full);
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 40px rgba(102, 126, 234, 0.4), 0 0 0 0 rgba(102, 126, 234, 0.4);
    animation: pulse-ring 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse-ring {
    0%, 100% {
      box-shadow: 0 10px 40px rgba(102, 126, 234, 0.4), 0 0 0 0 rgba(102, 126, 234, 0.4);
    }
    50% {
      box-shadow: 0 10px 40px rgba(102, 126, 234, 0.5), 0 0 0 10px rgba(102, 126, 234, 0);
    }
  }

  .chatbot-toggle:hover .chatbot-toggle-inner {
    transform: scale(1.05) rotate(5deg);
    box-shadow: 0 15px 50px rgba(102, 126, 234, 0.6), 0 0 0 0 rgba(102, 126, 234, 0.4);
  }

  .chatbot-glow {
    position: absolute;
    inset: -2px;
    border-radius: var(--radius-full);
    background: linear-gradient(135deg, #667eea, #764ba2, #f093fb);
    filter: blur(12px);
    opacity: 0.7;
    z-index: -1;
    animation: rotate-glow 3s linear infinite;
  }

  @keyframes rotate-glow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .chatbot-toggle .close-icon {
    display: none;
  }

  .chatbot-toggle.active .chat-icon {
    display: none;
  }

  .chatbot-toggle.active .close-icon {
    display: block;
  }

  .chatbot-toggle.active .chatbot-toggle-inner {
    background: linear-gradient(135deg, #f093fb 0%, #764ba2 50%, #667eea 100%);
  }

  .chatbot-badge {
    position: absolute;
    top: -6px;
    right: -6px;
    min-width: 26px;
    height: 26px;
    padding: 0 6px;
    background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
    color: white;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 800;
    border: 3px solid var(--color-bg);
    box-shadow: 0 4px 12px rgba(255, 107, 107, 0.5);
    animation: bounce-badge 2s ease-in-out infinite;
  }

  @keyframes bounce-badge {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .chatbot-badge.hidden {
    display: none;
  }

  .chatbot-window {
    position: absolute;
    bottom: 90px;
    right: 0;
    width: 420px;
    height: min(600px, calc(100vh - 180px));
    max-height: calc(100vh - 180px);
    background: var(--color-surface);
    border-radius: 24px;
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(255, 255, 255, 0.1);
    border: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    opacity: 0;
    transform: translateY(30px) scale(0.9);
    pointer-events: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    backdrop-filter: blur(20px);
  }

  .chatbot-window::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.03), rgba(118, 75, 162, 0.03));
    pointer-events: none;
  }

  .chatbot-window.active {
    opacity: 1;
    transform: translateY(0) scale(1);
    pointer-events: all;
  }

  .chatbot-header {
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    gap: 0.875rem;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.08), rgba(118, 75, 162, 0.05));
    border-radius: 20px 20px 0 0;
    position: relative;
    z-index: 1;
    min-height: 70px;
  }

  .chatbot-avatar {
    width: 44px;
    height: 44px;
    border-radius: 14px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    position: relative;
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    flex-shrink: 0;
  }

  .avatar-glow {
    position: absolute;
    inset: -3px;
    border-radius: 18px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    filter: blur(8px);
    opacity: 0.4;
    z-index: -1;
    animation: pulse-avatar 2s ease-in-out infinite;
  }

  @keyframes pulse-avatar {
    0%, 100% { opacity: 0.4; }
    50% { opacity: 0.6; }
  }

  .chatbot-info {
    flex: 1;
  }

  .chatbot-info h4 {
    font-size: 0.95rem;
    margin: 0 0 0.25rem 0;
    color: var(--color-text);
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .chatbot-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.825rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: linear-gradient(135deg, #10b981, #34d399);
    box-shadow: 0 0 8px rgba(16, 185, 129, 0.6);
    animation: pulse-dot 2s infinite;
  }

  @keyframes pulse-dot {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.2);
    }
  }

  .chatbot-minimize {
    width: 36px;
    height: 36px;
    border-radius: 12px;
    background: transparent;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .chatbot-minimize:hover {
    background: var(--color-bg-alt);
    color: var(--color-text);
    transform: scale(1.05);
  }

  .chatbot-welcome {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: 1.5rem 1.25rem;
    text-align: center;
    overflow-y: auto;
  }

  .chatbot-welcome.hidden {
    display: none !important;
  }

  .welcome-header {
    margin-bottom: 1.5rem;
  }

  .welcome-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(240, 147, 251, 0.1));
    border-radius: 16px;
    animation: pulse-icon 3s ease-in-out infinite;
  }

  @keyframes pulse-icon {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .welcome-header h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: var(--color-text);
  }

  .welcome-header p {
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--color-text-muted);
    margin: 0;
  }

  .welcome-form {
    width: 100%;
    max-width: 100%;
    padding: 0 0.5rem;
  }

  .welcome-form .form-group {
    margin-bottom: 0.75rem;
  }

  .welcome-form input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1.5px solid var(--color-border);
    border-radius: 10px;
    font-size: 0.875rem;
    font-family: var(--font-sans);
    transition: all 0.3s ease;
    background: var(--color-bg);
    color: var(--color-text);
  }

  .welcome-form input:focus {
    outline: none;
    border-color: #667eea;
    background: var(--color-surface);
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
  }

  .welcome-form input::placeholder {
    color: var(--color-text-muted);
    opacity: 0.7;
  }

  .start-chat-btn {
    width: 100%;
    padding: 0.875rem 1.25rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 0.925rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  .start-chat-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
  }

  .start-chat-btn:active {
    transform: translateY(0);
  }

  .chatbot-messages {
    flex: 1;
    overflow-y: auto;
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .chatbot-messages::-webkit-scrollbar {
    width: 6px;
  }

  .chatbot-messages::-webkit-scrollbar-track {
    background: transparent;
  }

  .chatbot-messages::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 3px;
  }

  .chatbot-messages::-webkit-scrollbar-thumb:hover {
    background: var(--color-text-muted);
  }

  .message {
    display: flex;
    gap: 0.75rem;
    max-width: 80%;
    animation: slide-in 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .bot-message {
    align-self: flex-start;
  }

  .user-message {
    align-self: flex-end;
    flex-direction: row-reverse;
  }

  .message-avatar {
    width: 36px;
    height: 36px;
    border-radius: 12px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.25);
  }

  .user-message .message-avatar {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    box-shadow: 0 4px 12px rgba(240, 147, 251, 0.3);
  }

  .message-content {
    padding: 0.75rem 1rem;
    border-radius: 16px;
    font-size: 0.9rem;
    line-height: 1.5;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    position: relative;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Bot message styling - Light background */
  .bot-message .message-content {
    background: #f3f4f6;
    color: #1f2937;
    border-bottom-left-radius: 6px;
  }

  [data-theme="dark"] .bot-message .message-content {
    background: #374151;
    color: #f9fafb;
  }

  /* User message styling - Purple gradient background */
  .user-message .message-content {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    color: white !important;
    border-bottom-right-radius: 6px;
    box-shadow: 0 4px 16px rgba(102, 126, 234, 0.4);
  }

  .message-content p {
    margin: 0;
    color: inherit;
  }

  .typing-indicator {
    display: flex;
    gap: 0.35rem;
    padding: 1rem 1.25rem;
  }

  .typing-indicator span {
    width: 9px;
    height: 9px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea, #764ba2);
    animation: typing 1.4s infinite ease-in-out;
  }

  .typing-indicator span:nth-child(2) {
    animation-delay: 0.2s;
  }

  .typing-indicator span:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes typing {
    0%, 60%, 100% {
      transform: translateY(0);
      opacity: 0.6;
    }
    30% {
      transform: translateY(-12px);
      opacity: 1;
    }
  }

  .quick-replies {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    margin-top: 0.75rem;
  }

  .quick-reply {
    padding: 0.875rem 1.125rem;
    background: var(--color-surface);
    border: 1.5px solid var(--color-border);
    border-radius: 14px;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-align: left;
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: 0.625rem;
    position: relative;
    overflow: hidden;
  }

  .quick-reply::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .quick-reply svg {
    flex-shrink: 0;
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .quick-reply:hover {
    border-color: #667eea;
    color: #667eea;
    transform: translateX(4px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
  }

  .quick-reply:hover::before {
    opacity: 1;
  }

  .quick-reply:hover svg {
    opacity: 1;
    transform: scale(1.1);
  }

  .chatbot-input {
    padding: 1.25rem 1.5rem;
    border-top: 1px solid var(--color-border);
    display: flex;
    gap: 0.75rem;
    background: var(--color-surface);
  }

  .chatbot-input input {
    flex: 1;
    padding: 0.875rem 1.25rem;
    border: 1.5px solid var(--color-border);
    border-radius: 16px;
    background: var(--color-bg);
    color: var(--color-text);
    font-size: 0.95rem;
    font-family: var(--font-sans);
    transition: all 0.3s ease;
  }

  .chatbot-input input:focus {
    outline: none;
    border-color: #667eea;
    background: var(--color-surface);
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
  }

  .chatbot-input input::placeholder {
    color: var(--color-text-muted);
    opacity: 0.7;
  }

  .chatbot-input button {
    width: 48px;
    height: 48px;
    border-radius: 14px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    position: relative;
    overflow: hidden;
  }

  .chatbot-input button::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #764ba2 0%, #f093fb 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .chatbot-input button svg {
    position: relative;
    z-index: 1;
  }

  .chatbot-input button:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
  }

  .chatbot-input button:hover::before {
    opacity: 1;
  }

  .chatbot-input button:active {
    transform: translateY(0) scale(0.98);
  }

  .chatbot-footer {
    padding: 0.875rem;
    text-align: center;
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--color-text-muted);
    border-top: 1px solid var(--color-border);
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.02), rgba(118, 75, 162, 0.02));
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .chatbot-footer svg {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .chatbot-window {
      width: calc(100vw - 3rem);
      max-width: 400px;
      bottom: 80px;
      right: 0;
      left: 50%;
      transform: translateX(-50%) translateY(30px) scale(0.9);
    }

    .chatbot-window.active {
      transform: translateX(-50%) translateY(0) scale(1);
    }
  }

  @media (max-width: 480px) {
    .chatbot-container {
      bottom: 1rem;
      right: 1rem;
    }

    .chatbot-toggle {
      width: 60px;
      height: 60px;
    }

    .chatbot-window {
      width: calc(100vw - 2rem);
      height: calc(100vh - 140px);
      max-height: calc(100vh - 140px);
      max-width: 400px;
      border-radius: 20px;
      bottom: 75px;
    }

    .chatbot-header {
      padding: 1rem 1.25rem;
    }

    .chatbot-messages {
      padding: 1rem;
    }

    .chatbot-input {
      padding: 1rem;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .chatbot-toggle-inner,
    .chatbot-glow,
    .avatar-glow,
    .status-dot,
    .typing-indicator span,
    .message,
    .chatbot-badge {
      animation: none;
    }

    .chatbot-window,
    .chatbot-toggle,
    .quick-reply,
    .chatbot-input button {
      transition: none;
    }
  }
</style>

<script>
  let chatHistory: Array<{ role: 'user' | 'assistant'; content: string }> = [];
  let userInfo = { name: '', email: '' };
  let chatStarted = false;

  function initChatbot() {
    const toggle = document.getElementById('chatbot-toggle');
    const window = document.getElementById('chatbot-window');
    const form = document.getElementById('chatbot-form') as HTMLFormElement;
    const input = document.getElementById('chatbot-message') as HTMLInputElement;
    const messages = document.getElementById('chatbot-messages');
    const badge = document.querySelector('.chatbot-badge');
    const minimize = document.querySelector('.chatbot-minimize');
    const welcomeForm = document.getElementById('welcome-form') as HTMLFormElement;
    const welcomeScreen = document.getElementById('chatbot-welcome');
    const userNameInput = document.getElementById('user-name') as HTMLInputElement;
    const userEmailInput = document.getElementById('user-email') as HTMLInputElement;

    // Check all required elements exist
    if (!toggle || !window || !form || !input || !messages || !welcomeForm || !welcomeScreen || !userNameInput) {
      console.error('Chatbot: Required elements not found');
      return;
    }

    // Handle welcome form submission
    welcomeForm.addEventListener('submit', (e) => {
      e.preventDefault();
      userInfo.name = userNameInput.value.trim();
      userInfo.email = userEmailInput.value.trim();
      chatStarted = true;

      // Hide welcome screen and show chat
      welcomeScreen.classList.add('hidden');
      messages.style.display = 'flex';
      form.style.display = 'flex';

      // Add welcome message from bot
      addMessage(`Hi ${userInfo.name}! ðŸ‘‹ I'm Kodie, your AI assistant at Hodges & Co. I can help with web development, WordPress, SEO, performance optimization, and technical questions. What would you like to know?`, 'bot');
      
      // Focus on input
      input.focus();
    });

    // Toggle chatbot
    toggle.addEventListener('click', () => {
      toggle.classList.toggle('active');
      window.classList.toggle('active');
      badge?.classList.add('hidden');

      if (window.classList.contains('active')) {
        // Only focus input if chat has started
        if (chatStarted) {
          input.focus();
        }
      }
    });

    // Minimize button
    minimize?.addEventListener('click', () => {
      toggle.classList.remove('active');
      window.classList.remove('active');
    });

    // Handle form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      if (!chatStarted) {
        return; // Don't allow messages before user info is collected
      }

      const message = input.value.trim();
      if (!message) return;

      // Add user message to chat
      addMessage(message, 'user');
      chatHistory.push({ role: 'user', content: message });
      input.value = '';

      // Show typing indicator with realistic delay
      const typingId = showTypingIndicator();

      try {
        // Send to API with user info - Using Gemini 2.5 Flash AI
        const response = await fetch('/api/chat/kodie', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            message,
            conversation_history: chatHistory.slice(0, -1), // Don't include current message
            userName: userInfo.name,
            userEmail: userInfo.email || 'Not provided',
          }),
        });

        const data = await response.json();

        // Extract the AI response message
        const aiMessage = data.response?.message || data.response;

        // Add realistic typing delay based on response length
        const responseLength = aiMessage?.length || 100;
        const typingDelay = Math.min(800 + (responseLength * 15), 3000); // 800ms to 3s
        await new Promise(resolve => setTimeout(resolve, typingDelay));

        // Remove typing indicator
        removeTypingIndicator(typingId);

        if (data.success && aiMessage) {
          addMessage(aiMessage, 'bot');
          chatHistory.push({ role: 'assistant', content: aiMessage });
        } else {
          console.error('Chat API error:', data);
          const errorMsg = data.details || data.error || 'Sorry, I encountered an error. Please try again.';
          addMessage(errorMsg, 'bot');

          // Log debug info
          if (data.debug) {
            console.log('Debug info:', data.debug);
          }
        }
      } catch (error) {
        console.error('Chat fetch error:', error);
        removeTypingIndicator(typingId);
        addMessage('Sorry, I encountered an error connecting to the server. Please try again.', 'bot');
      }
    });

    function addMessage(content: string, type: 'user' | 'bot') {
      const messageDiv = document.createElement('div');
      messageDiv.className = `message ${type === 'user' ? 'user-message' : 'bot-message'}`;

      const avatarIcon = type === 'bot' 
        ? `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L2 7L12 12L22 7L12 2Z" fill="currentColor" opacity="0.9"/>
            <path d="M2 17L12 22L22 17M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="12" cy="7" r="2" fill="white"/>
          </svg>`
        : `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>`;

      messageDiv.innerHTML = `
        <div class="message-avatar">
          ${avatarIcon}
        </div>
        <div class="message-content">
          <p>${content}</p>
        </div>
      `;

      messages?.appendChild(messageDiv);
      messages!.scrollTop = messages!.scrollHeight;
    }

    function showTypingIndicator(): string {
      const id = 'typing-' + Date.now();
      const typingDiv = document.createElement('div');
      typingDiv.id = id;
      typingDiv.className = 'message bot-message';
      typingDiv.innerHTML = `
        <div class="message-avatar">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L2 7L12 12L22 7L12 2Z" fill="currentColor" opacity="0.9"/>
            <path d="M2 17L12 22L22 17M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="12" cy="7" r="2" fill="white"/>
          </svg>
        </div>
        <div class="message-content typing-indicator">
          <span></span><span></span><span></span>
        </div>
      `;

      messages?.appendChild(typingDiv);
      messages!.scrollTop = messages!.scrollHeight;
      return id;
    }

    function removeTypingIndicator(id: string) {
      document.getElementById(id)?.remove();
    }
  }

  initChatbot();
  document.addEventListener('astro:page-load', initChatbot);
</script>
