<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--glass-border);
    box-shadow: var(--shadow-sm);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
    gap: 2rem;
  }

  .logo-link {
    text-decoration: none;
    display: flex;
    align-items: center;
    transition: transform 0.3s ease;
  }

  .logo-link:hover {
    transform: translateY(-2px);
  }

  #header-logo-img:hover {
    transform: scale(1.05);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: var(--color-text);
    font-weight: 500;
    font-size: 0.95rem;
    transition: color var(--transition-fast);
    position: relative;
  }

  [data-theme="dark"] .nav-links a {
    color: rgba(255, 255, 255, 0.9);
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gradient-primary);
    transition: width var(--transition-base);
  }

  .nav-links a:hover {
    color: var(--color-primary);
  }

  [data-theme="dark"] .nav-links a:hover {
    color: #818cf8;
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  /* Highlighted nav item (Get Estimate) */
  .nav-highlight {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 0.5rem 1.25rem !important;
    border-radius: var(--radius-full);
    font-weight: 600 !important;
    color: white !important;
    transition: all var(--transition-base);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }

  .nav-highlight:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    color: white !important;
  }

  .nav-highlight::after {
    display: none !important;
  }

  /* Dropdown Navigation */
  .nav-dropdown {
    position: relative;
  }

  .dropdown-trigger {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .dropdown-trigger svg {
    transition: transform var(--transition-fast);
  }

  .nav-dropdown:hover .dropdown-trigger svg {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    padding-top: 1.5rem; /* Padding to bridge the gap */
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-base);
    pointer-events: none;
  }

  .dropdown-menu::before {
    /* Invisible bridge to prevent gap */
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1.5rem;
  }

  .dropdown-menu-content {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    min-width: 600px;
    padding: var(--spacing-lg);
    transform: translateY(-10px);
    transition: transform var(--transition-base);
  }

  .nav-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    pointer-events: all;
  }

  .nav-dropdown:hover .dropdown-menu-content {
    transform: translateY(0);
  }

  .dropdown-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-lg);
  }

  .dropdown-col h4 {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-sm);
    font-weight: 600;
  }

  .dropdown-col a {
    display: block;
    padding: 0.5rem 0;
    color: var(--color-text);
    font-size: 0.9rem;
    transition: all var(--transition-fast);
  }

  .dropdown-col a::after {
    display: none;
  }

  .dropdown-col a:hover {
    color: var(--color-primary);
    padding-left: 0.5rem;
  }

  .dropdown-col a.view-all {
    color: var(--color-primary);
    font-weight: 600;
    margin-top: var(--spacing-sm);
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .theme-toggle {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    border: none;
    background: var(--color-surface);
    color: var(--color-text);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-base);
    position: relative;
  }

  .theme-toggle:hover {
    background: var(--color-bg-alt);
    transform: scale(1.05);
  }

  .sun-icon,
  .moon-icon {
    position: absolute;
    transition: all var(--transition-base);
  }

  [data-theme="light"] .moon-icon {
    opacity: 0;
    transform: rotate(90deg);
  }

  [data-theme="dark"] .sun-icon {
    opacity: 0;
    transform: rotate(-90deg);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: var(--color-text);
    border-radius: 2px;
    transition: all var(--transition-base);
  }

  @media (max-width: 768px) {
    .header {
      padding: 0 var(--spacing-md);
    }

    .nav {
      height: 70px;
    }

    .logo {
      font-size: 1.25rem;
    }

    #header-logo-img {
      height: 38px !important;
      max-width: 140px !important;
    }

    .nav-links {
      position: absolute;
      top: 70px;
      left: 0;
      right: 0;
      flex-direction: column;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      padding: 2rem var(--spacing-md);
      gap: 1.5rem;
      border-bottom: 1px solid var(--glass-border);
      transform: translateY(-100%);
      opacity: 0;
      pointer-events: none;
      transition: all var(--transition-base);
      max-height: calc(100vh - 70px);
      overflow-y: auto;
    }

    .nav-links.active {
      transform: translateY(0);
      opacity: 1;
      pointer-events: all;
    }

    /* Mobile dropdown styles */
    .dropdown-menu {
      position: static;
      transform: none;
      padding-top: 0.5rem;
      min-width: auto;
      width: 100%;
      display: none;
    }

    .dropdown-menu-content {
      min-width: auto;
      padding: var(--spacing-md);
      transform: none;
    }

    .nav-dropdown.active .dropdown-menu {
      display: block;
      opacity: 1;
      visibility: visible;
    }

    .nav-dropdown.active .dropdown-menu-content {
      transform: none;
    }

    .dropdown-trigger {
      justify-content: space-between;
      width: 100%;
    }

    .dropdown-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .btn-primary {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .header {
      padding: 0 1rem;
    }

    .nav {
      height: 65px;
    }

    .logo {
      font-size: 1.125rem;
    }

    #header-logo-img {
      height: 32px !important;
      max-width: 120px !important;
    }

    .nav-links {
      top: 65px;
      padding: 1.5rem 1rem;
    }
  }
</style>

<script>
  function initMobileMenu() {
    const toggle = document.querySelector('.mobile-menu-toggle');
    const menu = document.querySelector('.nav-links');

    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('active');
        toggle.classList.toggle('active');
      });
    }

    // Mobile dropdown toggle
    const dropdownTriggers = document.querySelectorAll('.nav-dropdown .dropdown-trigger');
    dropdownTriggers.forEach(trigger => {
      trigger.addEventListener('click', (e) => {
        if (window.innerWidth <= 768) {
          e.preventDefault();
          const parent = trigger.closest('.nav-dropdown');
          parent?.classList.toggle('active');
        }
      });
    });
  }

  initMobileMenu();
  document.addEventListener('astro:page-load', initMobileMenu);

  // Load dynamic site name and logo from API
  async function loadSiteName() {
    try {
      const response = await fetch('/api/admin/content');
      if (response.ok) {
        const data = await response.json();
        if (data.success && data.content) {
          // Update site name
          if (data.content.site_name) {
            const siteNameEl = document.getElementById('header-site-name');
            if (siteNameEl) {
              siteNameEl.textContent = data.content.site_name;
            }
          }

          // Update logo if available
          if (data.content.site_logo && data.content.site_logo.trim() !== '') {
            const logoImg = document.getElementById('header-logo-img') as HTMLImageElement;
            const logoText = document.getElementById('header-site-name');

            if (logoImg) {
              logoImg.src = data.content.site_logo;
              logoImg.style.display = 'block';

              // Hide text logo when image logo is shown
              if (logoText) {
                logoText.style.display = 'none';
              }

              // Fallback to text if image fails to load
              logoImg.onerror = () => {
                logoImg.style.display = 'none';
                if (logoText) {
                  logoText.style.display = 'inline';
                }
              };
            }
          }
        }
      }
    } catch (error) {
      console.error('Error loading site name:', error);
    }
  }

  loadSiteName();
  document.addEventListener('astro:page-load', loadSiteName);
</script>
