  }

  @media (max-width: 768px) {
    .theme-toggle {
      width: 36px;
      height: 36px;
    }
  }
</style>

<script>
  function initMobileMenu() {
    const toggle = document.querySelector('.mobile-menu-toggle');
    const menu = document.querySelector('.nav-links');

    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('active');
        toggle.classList.toggle('active');
      });
    }

    // Mobile dropdown toggle
    const dropdownTriggers = document.querySelectorAll('.nav-dropdown .dropdown-trigger');
    dropdownTriggers.forEach(trigger => {
      trigger.addEventListener('click', (e) => {
        if (window.innerWidth <= 768) {
          e.preventDefault();
          const parent = trigger.closest('.nav-dropdown');
          parent?.classList.toggle('active');
        }
      });
    });
  }

  initMobileMenu();
  document.addEventListener('astro:page-load', initMobileMenu);

  // Load dynamic site name and logo from API
  async function loadSiteName() {
    try {
      const response = await fetch('/api/admin/content');
      if (response.ok) {
        const data = await response.json();
        if (data.success && data.content) {
          // Update site name
          if (data.content.site_name) {
            const siteNameEl = document.getElementById('header-site-name');
            if (siteNameEl) {
              siteNameEl.textContent = data.content.site_name;
            }
          }

          // Update logo if available
          if (data.content.site_logo && data.content.site_logo.trim() !== '') {
            const logoImg = document.getElementById('header-logo-img') as HTMLImageElement;
            const logoText = document.getElementById('header-site-name');

            if (logoImg) {
              logoImg.src = data.content.site_logo;
              logoImg.style.display = 'block';

              // Hide text logo when image logo is shown
              if (logoText) {
                logoText.style.display = 'none';
              }

              // Fallback to text if image fails to load
              logoImg.onerror = () => {
                logoImg.style.display = 'none';
                if (logoText) {
                  logoText.style.display = 'inline';
                }
              };
            }
          }
        }
      }
    } catch (error) {
      console.error('Error loading site name:', error);
    }
  }

  loadSiteName();
  document.addEventListener('astro:page-load', loadSiteName);

  // Load dynamic blog post count
  async function loadBlogPostCount() {
    try {
      const response = await fetch('/api/admin/blog');
      console.log('Blog API response status:', response.status);

      if (response.ok) {
        const data = await response.json();
        console.log('Blog API data:', data);

        const counter = document.getElementById('blog-post-counter');
        const dropdownCounter = document.getElementById('blog-post-counter-dropdown');

        if (!counter && !dropdownCounter) {
          console.error('Blog counter elements not found');
          return;
        }

        if (data.success && data.posts) {
          const count = data.posts.length;
          console.log('Blog post count:', count);

          if (counter) {
            counter.textContent = count.toString();
            counter.style.display = 'flex';
          }
          if (dropdownCounter) {
            dropdownCounter.textContent = count.toString();
            dropdownCounter.style.display = 'inline-flex';
          }
        } else {
          console.warn('Unexpected API response structure:', data);
          if (counter) {
            counter.textContent = '0';
            counter.style.display = 'flex';
          }
          if (dropdownCounter) {
            dropdownCounter.textContent = '0';
            dropdownCounter.style.display = 'inline-flex';
          }
        }
      } else {
        console.error('Blog API request failed with status:', response.status);
        const counter = document.getElementById('blog-post-counter');
        const dropdownCounter = document.getElementById('blog-post-counter-dropdown');

        if (counter) {
          counter.textContent = '0';
          counter.style.display = 'flex';
        }
        if (dropdownCounter) {
          dropdownCounter.textContent = '0';
          dropdownCounter.style.display = 'inline-flex';
        }
      }
    } catch (error) {
      console.error('Error loading blog post count:', error);
      const counter = document.getElementById('blog-post-counter');
      const dropdownCounter = document.getElementById('blog-post-counter-dropdown');

      if (counter) {
        counter.textContent = '0';
        counter.style.display = 'flex';
      }
      if (dropdownCounter) {
        dropdownCounter.textContent = '0';
        dropdownCounter.style.display = 'inline-flex';
      }
    }
  }

  loadBlogPostCount();
  document.addEventListener('astro:page-load', loadBlogPostCount);

  // Theme Toggle Functionality
  function initThemeToggle() {
    const themeToggle = document.getElementById('theme-toggle');
    const html = document.documentElement;

    // Check for saved theme preference or default to light mode
    const currentTheme = localStorage.getItem('theme') || 'light';
    html.setAttribute('data-theme', currentTheme);

    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const currentTheme = html.getAttribute('data-theme');
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';

        html.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
      });
    }
  }

  initThemeToggle();
  document.addEventListener('astro:page-load', initThemeToggle);
</script>
