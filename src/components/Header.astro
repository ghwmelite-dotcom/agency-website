<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--glass-border);
    box-shadow: var(--shadow-sm);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
    gap: 2rem;
  }

  .logo-link {
    text-decoration: none;
    display: flex;
    align-items: center;
    transition: transform 0.3s ease;
  }

  .logo-link:hover {
    transform: translateY(-2px);
  }

  #header-logo-img:hover {
    transform: scale(1.05);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: var(--color-text);
    font-weight: 500;
    font-size: 0.95rem;
    transition: color var(--transition-fast);
    position: relative;
  }

  [data-theme="dark"] .nav-links a {
    color: rgba(255, 255, 255, 0.9);
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gradient-primary);
    transition: width var(--transition-base);
  }

  .nav-links a:hover {
    color: var(--color-primary);
  }

  [data-theme="dark"] .nav-links a:hover {
    color: #818cf8;
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  /* Dropdown Navigation */
  .nav-dropdown {
    position: relative;
  }

  .dropdown-trigger {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .dropdown-trigger svg {
    transition: transform var(--transition-fast);
  }

  .nav-dropdown:hover .dropdown-trigger svg {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    padding-top: 1.5rem; /* Padding to bridge the gap */
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-base);
    pointer-events: none;
  }

  .dropdown-menu::before {
    /* Invisible bridge to prevent gap */
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1.5rem;
  }

  .dropdown-menu-content {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    min-width: 600px;
    padding: var(--spacing-lg);
    transform: translateY(-10px);
    transition: transform var(--transition-base);
  }

  .nav-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    pointer-events: all;
  }

  .nav-dropdown:hover .dropdown-menu-content {
    transform: translateY(0);
  }

  .dropdown-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-lg);
  }

  .dropdown-col h4 {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-sm);
    font-weight: 600;
  }

  .dropdown-col a {
    display: block;
    padding: 0.5rem 0;
    color: var(--color-text);
    font-size: 0.9rem;
    transition: all var(--transition-fast);
  }

  .dropdown-col a::after {
    display: none;
  }

  .dropdown-col a:hover {
    color: var(--color-primary);
    padding-left: 0.5rem;
  }

  .dropdown-col a.view-all {
    color: var(--color-primary);
    font-weight: 600;
    margin-top: var(--spacing-sm);
  }

  /* Creative Navigation Badges */
  .nav-link-with-badge {
    position: relative;
    display: inline-flex !important;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.15rem 0.5rem;
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 12px;
    white-space: nowrap;
    transition: all var(--transition-fast);
  }

  /* Hot Badge - Pulsing Red/Orange */
  .nav-badge.hot {
    background: linear-gradient(135deg, #ff6b6b, #ee5a24);
    color: white;
    animation: badgePulse 2s ease-in-out infinite;
    box-shadow: 0 0 10px rgba(255, 107, 107, 0.5);
  }

  /* Trending Badge - Electric Blue */
  .nav-badge.trending {
    background: linear-gradient(135deg, #4facfe, #00f2fe);
    color: white;
    animation: badgeGlow 2s ease-in-out infinite alternate;
    box-shadow: 0 0 10px rgba(79, 172, 254, 0.5);
  }

  /* Premium Badge - Gold Shimmer */
  .nav-badge.premium {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 50%, #f093fb 100%);
    background-size: 200% 200%;
    color: white;
    animation: badgeShimmer 3s linear infinite;
    box-shadow: 0 0 10px rgba(240, 147, 251, 0.5);
  }

  /* Hiring Badge - Green Glow */
  .nav-badge.hiring {
    background: linear-gradient(135deg, #11998e, #38ef7d);
    color: white;
    animation: badgeBounce 2s ease-in-out infinite;
    box-shadow: 0 0 10px rgba(56, 239, 125, 0.5);
  }

  /* Counter Badge - Modern Notification Style */
  .nav-counter {
    position: absolute;
    top: -8px;
    right: -12px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 22px;
    height: 22px;
    padding: 0 6px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    font-size: 0.7rem;
    font-weight: 700;
    border-radius: 12px;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    border: 2px solid var(--color-bg);
    transition: all var(--transition-fast);
  }

  .nav-counter.pulse {
    animation: counterPulse 2s ease-in-out infinite;
  }

  /* Badge Animations */
  @keyframes badgePulse {
    0%, 100% {
      transform: scale(1);
      box-shadow: 0 0 10px rgba(255, 107, 107, 0.5);
    }
    50% {
      transform: scale(1.05);
      box-shadow: 0 0 20px rgba(255, 107, 107, 0.8);
    }
  }

  @keyframes badgeGlow {
    from {
      box-shadow: 0 0 10px rgba(79, 172, 254, 0.5);
    }
    to {
      box-shadow: 0 0 20px rgba(79, 172, 254, 0.8), 0 0 30px rgba(79, 172, 254, 0.4);
    }
  }

  @keyframes badgeShimmer {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @keyframes badgeBounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }

  @keyframes counterPulse {
    0%, 100% {
      transform: scale(1);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }
    50% {
      transform: scale(1.15);
      box-shadow: 0 4px 20px rgba(102, 126, 234, 0.6), 0 0 30px rgba(102, 126, 234, 0.3);
    }
  }

  /* Hover Effects */
  .nav-link-with-badge:hover .nav-badge {
    transform: translateY(-2px);
  }

  .nav-link-with-badge:hover .nav-counter {
    transform: scale(1.1) rotate(5deg);
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  /* Header CTA Button - Expert Responsive Design */
  .header-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.25rem;
    font-size: 0.9rem;
    font-weight: 600;
    white-space: nowrap;
    border-radius: var(--radius-lg);
    background: var(--gradient-primary);
    color: white;
    text-decoration: none;
    transition: all var(--transition-base);
    box-shadow: 0 2px 8px rgba(99, 102, 241, 0.25);
    position: relative;
    overflow: hidden;
  }

  .header-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .header-cta:hover::before {
    left: 100%;
  }

  .header-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(99, 102, 241, 0.35);
  }

  .header-cta:active {
    transform: translateY(0);
  }

  .cta-icon {
    flex-shrink: 0;
    transition: transform var(--transition-base);
  }

  .header-cta:hover .cta-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .cta-text-short {
    display: none;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: var(--color-text);
    border-radius: 2px;
    transition: all var(--transition-base);
  }

  /* Tablet Breakpoint - Optimize for medium screens */
  @media (max-width: 1024px) {
    .header-cta {
      padding: 0.55rem 1rem;
      font-size: 0.85rem;
      gap: 0.4rem;
    }

    .cta-icon {
      width: 16px;
      height: 16px;
    }
  }

  /* Small Tablet - Show shorter button text */
  @media (max-width: 900px) {
    .cta-text {
      display: none;
    }

    .cta-text-short {
      display: inline;
    }

    .header-cta {
      padding: 0.55rem 0.9rem;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 768px) {
    .header {
      padding: 0 var(--spacing-md);
    }

    .nav {
      height: 70px;
    }

    .logo {
      font-size: 1.25rem;
    }

    #header-logo-img {
      height: 38px !important;
      max-width: 140px !important;
    }

    /* Mobile badge adjustments */
    .nav-badge {
      font-size: 0.6rem;
      padding: 0.1rem 0.4rem;
    }

    .nav-counter {
      top: -6px;
      right: -10px;
      min-width: 20px;
      height: 20px;
      font-size: 0.65rem;
    }

    /* Compact CTA for mobile */
    .header-cta {
      padding: 0.5rem 0.85rem;
      font-size: 0.8rem;
      gap: 0.35rem;
    }

    .cta-icon {
      width: 15px;
      height: 15px;
    }

    .nav-actions {
      gap: 0.6rem;
    }

    .nav-links {
      position: absolute;
      top: 70px;
      left: 0;
      right: 0;
      flex-direction: column;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      padding: 2rem var(--spacing-md);
      gap: 1.5rem;
      border-bottom: 1px solid var(--glass-border);
      transform: translateY(-100%);
      opacity: 0;
      pointer-events: none;
      transition: all var(--transition-base);
      max-height: calc(100vh - 70px);
      overflow-y: auto;
    }

    .nav-links.active {
      transform: translateY(0);
      opacity: 1;
      pointer-events: all;
    }

    /* Mobile dropdown styles */
    .dropdown-menu {
      position: static;
      transform: none;
      padding-top: 0.5rem;
      min-width: auto;
      width: 100%;
      display: none;
    }

    .dropdown-menu-content {
      min-width: auto;
      padding: var(--spacing-md);
      transform: none;
    }

    .nav-dropdown.active .dropdown-menu {
      display: block;
      opacity: 1;
      visibility: visible;
    }

    .nav-dropdown.active .dropdown-menu-content {
      transform: none;
    }

    .dropdown-trigger {
      justify-content: space-between;
      width: 100%;
    }

    .dropdown-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .mobile-menu-toggle {
      display: flex;
    }
  }

  @media (max-width: 480px) {
    .header {
      padding: 0 1rem;
    }

    .nav {
      height: 65px;
    }

    .logo {
      font-size: 1.125rem;
    }

    #header-logo-img {
      height: 32px !important;
      max-width: 120px !important;
    }

    .nav-links {
      top: 65px;
      padding: 1.5rem 1rem;
    }

    /* Extra compact CTA for smallest screens */
    .header-cta {
      padding: 0.45rem 0.75rem;
      font-size: 0.75rem;
      gap: 0.3rem;
    }

    .cta-icon {
      width: 14px;
