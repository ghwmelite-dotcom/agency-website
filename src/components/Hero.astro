---
import { SITE_CONFIG } from '@/config';
---

<section class="hero">
  <div class="hero-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="gradient-orb orb-3"></div>
  </div>

  <div class="hero-content">
    <div class="hero-text" data-animate>
      <h1>
        Crafting Digital
        <span class="text-gradient">Excellence</span>
        That Drives Results
      </h1>
      <p class="hero-description">
        We design and build stunning, high-performance websites and digital experiences
        for forward-thinking businesses ready to dominate their industry.
      </p>
      <div class="hero-cta">
        <a href="#contact" class="btn btn-primary">
          Start Your Project
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </a>
        <a href="#portfolio" class="btn btn-secondary">
          View Our Work
        </a>
      </div>
      <div class="hero-stats">
        <div class="stat">
          <div class="stat-number">500+</div>
          <div class="stat-label">Projects Delivered</div>
        </div>
        <div class="stat">
          <div class="stat-number">98%</div>
          <div class="stat-label">Client Satisfaction</div>
        </div>
        <div class="stat">
          <div class="stat-number">50+</div>
          <div class="stat-label">Team Members</div>
        </div>
      </div>
    </div>

    <div class="hero-visual" data-animate>
      <div class="visual-card card glass">
        <div class="code-snippet">
          <div class="code-line">
            <span class="code-keyword">const</span>
            <span class="code-variable">success</span> =
            <span class="code-function">buildWith</span>{'({'}
          </div>
          <div class="code-line code-indent">
            <span class="code-property">performance</span>:
            <span class="code-value">'blazing'</span>,
          </div>
          <div class="code-line code-indent">
            <span class="code-property">design</span>:
            <span class="code-value">'stunning'</span>,
          </div>
          <div class="code-line code-indent">
            <span class="code-property">results</span>:
            <span class="code-value">'guaranteed'</span>
          </div>
          <div class="code-line">{'});'}</div>
        </div>
      </div>
      <div class="floating-badge badge-1">
        âš¡ 100/100 Lighthouse
      </div>
      <div class="floating-badge badge-2">
        ðŸš€ Edge Optimized
      </div>
      <div class="floating-badge badge-3">
        âœ¨ Award Winning
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: calc(var(--header-height) + var(--spacing-3xl));
    padding-bottom: var(--spacing-3xl);
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: -1;
    overflow: hidden;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    animation: float 20s ease-in-out infinite;
  }

  .orb-1 {
    width: 500px;
    height: 500px;
    background: linear-gradient(135deg, #6366f1, #ec4899);
    top: -250px;
    right: -100px;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #8b5cf6, #f59e0b);
    bottom: -200px;
    left: -100px;
    animation-delay: 7s;
  }

  .orb-3 {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, #06b6d4, #10b981);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 14s;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-xl);
  }

  .hero-text h1 {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .hero-visual {
    position: relative;
  }

  .visual-card {
    padding: 2rem;
    font-family: 'Monaco', 'Courier New', monospace;
    font-size: 0.95rem;
    line-height: 1.8;
  }

  .code-line {
    white-space: nowrap;
  }

  .code-indent {
    padding-left: 2rem;
  }

  .code-keyword {
    color: #c678dd;
  }

  .code-variable {
    color: #e06c75;
  }

  .code-function {
    color: #61afef;
  }

  .code-property {
    color: #d19a66;
  }

  .code-value {
    color: #98c379;
  }

  .floating-badge {
    position: absolute;
    padding: 0.75rem 1.5rem;
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-full);
    font-size: 0.9rem;
    font-weight: 600;
    box-shadow: var(--shadow-lg);
    animation: float 6s ease-in-out infinite;
  }

  .badge-1 {
    top: -20px;
    right: -20px;
    animation-delay: 0s;
  }

  .badge-2 {
    bottom: 40px;
    left: -40px;
    animation-delay: 2s;
  }

  .badge-3 {
    bottom: -20px;
    right: 60px;
    animation-delay: 4s;
  }

  .scroll-indicator {
    display: none;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(10px);
    }
  }

  @media (max-width: 1024px) {
    .hero {
      padding-top: calc(var(--header-height) + var(--spacing-2xl));
      padding-bottom: var(--spacing-2xl);
    }

    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      padding: 0 var(--spacing-lg);
    }

    .hero-visual {
      order: -1;
    }

    .floating-badge {
      font-size: 0.8rem;
      padding: 0.5rem 1rem;
    }

    .hero-text h1 {
      font-size: clamp(2rem, 7vw, 3.5rem);
    }

    .hero-description {
      font-size: 1.125rem;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: calc(var(--header-height) + var(--spacing-xl));
      padding-bottom: var(--spacing-xl);
    }

    .hero-content {
      gap: 2.5rem;
      padding: 0 var(--spacing-md);
    }

    .hero-text h1 {
      font-size: clamp(1.75rem, 8vw, 2.5rem);
      margin-bottom: 1rem;
    }

    .hero-description {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }
  }

  @media (max-width: 640px) {
    .hero-stats {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding-top: 1.5rem;
      margin-top: 1.5rem;
    }

    .hero-cta {
      flex-direction: column;
      gap: 0.75rem;
    }

    .hero-cta .btn {
      width: 100%;
      justify-content: center;
    }

    .visual-card {
      font-size: 0.75rem;
      padding: 1.5rem 1rem;
    }

    .floating-badge {
      font-size: 0.7rem;
      padding: 0.4rem 0.8rem;
    }

    .scroll-indicator {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding-top: calc(var(--header-height) + var(--spacing-lg));
      padding-bottom: var(--spacing-lg);
    }

    .hero-content {
      gap: 2rem;
      padding: 0 1rem;
    }

    .hero-text h1 {
      font-size: 1.75rem;
      line-height: 1.15;
    }

    .hero-description {
      font-size: 0.95rem;
    }

    .stat-number {
      font-size: 2rem;
    }

    .stat-label {
      font-size: 0.85rem;
    }
  }
</style>
