---
// World-Class Hero Section
// Stunning hero with 3D floating elements, animated gradients, and premium effects
const { content } = Astro.props;
---

<section id="hero" class="hero-world" data-gradient-mesh>
  <div class="hero-container container">
    <!-- Floating 3D Elements -->
    <div class="floating-elements">
      <div class="float-orb orb-1 animate-float"></div>
      <div class="float-orb orb-2 animate-float-slow"></div>
      <div class="float-orb orb-3 animate-float-delayed"></div>
      <div class="float-shape shape-1 animate-spin-slow">
        <svg width="60" height="60" viewBox="0 0 60 60">
          <circle cx="30" cy="30" r="28" stroke="url(#grad1)" stroke-width="2" fill="none"/>
          <defs>
            <linearGradient id="grad1">
              <stop offset="0%" style="stop-color:#6366f1;stop-opacity:0.8" />
              <stop offset="100%" style="stop-color:#ec4899;stop-opacity:0.8" />
            </linearGradient>
          </defs>
        </svg>
      </div>
      <div class="float-shape shape-2 animate-morph" style="background: linear-gradient(135deg, rgba(0, 115, 170, 0.15), rgba(0, 160, 210, 0.15));"></div>
      <div class="float-badge badge-1 animate-float">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
      </div>
      <div class="float-badge badge-2 animate-float-slow">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
        </svg>
      </div>
    </div>

    <!-- Main Hero Content -->
    <div class="hero-content">
      <!-- Badge -->
      <div class="hero-badge animate-in" data-animate>
        <span class="badge-pulse"></span>
        <span class="badge-text">We Speak WordPress Fluently</span>
      </div>

      <!-- Main Headline -->
      <h1 class="hero-title" data-text-reveal>
        Let's Talk About<br/>
        <span class="text-gradient animate-gradient">Your Next Project</span>
      </h1>

      <!-- Subtitle -->
      <p class="hero-subtitle animate-in stagger-1" data-animate>
        Transform your digital presence with world-class WordPress development,
        stunning design, and cutting-edge solutions that drive real results.
      </p>

      <!-- CTA Buttons -->
      <div class="hero-ctas animate-in stagger-2" data-animate>
        <a href="#contact" class="btn btn-primary btn-hero" data-magnetic data-ripple>
          <span>Start Your Project</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="#portfolio" class="btn btn-secondary btn-hero" data-magnetic data-ripple>
          <span>View Our Work</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="hero-stats animate-in stagger-3" data-animate>
        <div class="stat-item">
          <div class="stat-value" data-counter="10" data-suffix="+">0</div>
          <div class="stat-label">Years Experience</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-value" data-counter="400" data-suffix="+">0</div>
          <div class="stat-label">Happy Clients</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-value">100%</div>
          <div class="stat-label">WordPress Focused</div>
        </div>
      </div>
    </div>

    <!-- Visual Elements -->
    <div class="hero-visual animate-in stagger-2" data-animate>
      <!-- Glow Background -->
      <div class="visual-glow"></div>

      <div class="code-mockup glass" data-tilt>
        <!-- Code Editor Mockup -->
        <div class="code-header">
          <div class="code-dots">
            <span class="dot red"></span>
            <span class="dot yellow"></span>
            <span class="dot green"></span>
          </div>
          <div class="code-title">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="16 18 22 12 16 6"></polyline>
              <polyline points="8 6 2 12 8 18"></polyline>
            </svg>
            functions.php
          </div>
          <div class="code-status">
            <span class="status-dot"></span>
            <span class="status-text">Live Preview</span>
          </div>
        </div>
        <div class="code-content">
          <div class="code-line">
            <span class="line-number">1</span>
            <span class="code-keyword">&lt;?php</span>
          </div>
          <div class="code-line">
            <span class="line-number">2</span>
            <span class="code-comment">// Premium WordPress Development</span>
          </div>
          <div class="code-line">
            <span class="line-number">3</span>
            <span class="code-keyword">function</span> <span class="code-function">custom_theme</span><span class="code-bracket">() {</span>
          </div>
          <div class="code-line indent-1">
            <span class="line-number">4</span>
            <span class="code-variable">$design</span> <span class="code-operator">=</span> <span class="code-string">'stunning'</span><span class="code-bracket">;</span>
          </div>
          <div class="code-line indent-1">
            <span class="line-number">5</span>
            <span class="code-variable">$performance</span> <span class="code-operator">=</span> <span class="code-string">'blazing'</span><span class="code-bracket">;</span>
          </div>
          <div class="code-line indent-1">
            <span class="line-number">6</span>
            <span class="code-keyword">return</span> <span class="code-variable">$excellence</span><span class="code-bracket">;</span>
          </div>
          <div class="code-line">
            <span class="line-number">7</span>
            <span class="code-bracket">}</span>
          </div>
          <div class="code-line">
            <span class="line-number">8</span>
            <span class="code-keyword">?&gt;</span>
          </div>
        </div>

        <!-- Animated Cursor -->
        <div class="code-cursor"></div>

        <!-- Floating Tech Badges -->
        <div class="tech-badges">
          <div class="tech-badge badge-wp" data-magnetic>
            <div class="badge-icon badge-icon-wp">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12.158 12.786L9.46 20.625 12.003 21.132 14.638 13.115 14.632 13.104z"></path>
                <path d="M3.009 12c0 3.559 2.068 6.634 5.067 8.092L3.788 8.341C3.289 9.459 3.009 10.696 3.009 12z"></path>
                <path d="M18.069 11.551c0-1.113-.399-1.883-.74-2.482-.456-.74-.883-1.365-.883-2.107 0-.825.627-1.595 1.51-1.595l.113.002c.044.002.088.004.131.009A8.956 8.956 0 0012.009 3c-3.176 0-5.973 1.653-7.584 4.152.213.006.413.01.584.01.949 0 2.417-.114 2.417-.114.489-.027.547.683.057.74 0 0-.491.058-1.038.086L9.6 17.274l2.403-7.205-1.71-4.689c-.489-.028-.952-.086-.952-.086-.489-.027-.433-.767.058-.74 0 0 1.51.114 2.404.114.949 0 2.417-.114 2.417-.114.489-.027.547.683.057.74 0 0-.491.058-1.038.086l3.153 9.384.871-2.906c.376-1.205.663-2.071.663-2.816z"></path>
                <path d="M12.009 21c-4.971 0-9-4.029-9-9s4.029-9 9-9 9 4.029 9 9-4.029 9-9 9zm0-17.5c-4.687 0-8.5 3.813-8.5 8.5s3.813 8.5 8.5 8.5 8.5-3.813 8.5-8.5-3.813-8.5-8.5-8.5z"></path>
              </svg>
            </div>
            <span>WordPress</span>
            <div class="badge-sparkle"></div>
          </div>
          <div class="tech-badge badge-responsive" data-magnetic>
            <div class="badge-icon badge-icon-responsive">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
                <line x1="12" y1="18" x2="12.01" y2="18"></line>
              </svg>
            </div>
            <span>Responsive</span>
            <div class="badge-sparkle"></div>
          </div>
          <div class="tech-badge badge-secure" data-magnetic>
            <div class="badge-icon badge-icon-secure">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
            </div>
            <span>SSL Secure</span>
            <div class="badge-sparkle"></div>
          </div>
          <div class="tech-badge badge-fast" data-magnetic>
            <div class="badge-icon badge-icon-fast">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
              </svg>
            </div>
            <span>Lightning Fast</span>
            <div class="badge-sparkle"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator animate-in stagger-4" data-animate>
    <div class="scroll-icon">
      <div class="scroll-wheel"></div>
    </div>
    <span class="scroll-text">Scroll to explore</span>
  </div>
</section>

<style>
  .hero-world {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg,
      hsl(240, 100%, 99%) 0%,
      hsl(225, 100%, 98%) 25%,
      hsl(210, 100%, 97%) 50%,
      hsl(220, 90%, 96%) 75%,
      hsl(230, 85%, 95%) 100%
    );
    padding: calc(var(--header-height) + 2rem) 0 4rem;
  }

  [data-theme="dark"] .hero-world {
    background: linear-gradient(135deg,
      hsl(222, 47%, 11%) 0%,
      hsl(222, 45%, 13%) 50%,
      hsl(222, 43%, 15%) 100%
    );
  }

  .hero-container {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  /* ========== Floating Elements ========== */
  .floating-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  .float-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.4;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.3), rgba(236, 72, 153, 0.3));
    top: 10%;
    left: 5%;
  }

  .orb-2 {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, rgba(0, 115, 170, 0.3), rgba(0, 160, 210, 0.3));
    bottom: 15%;
    right: 10%;
  }

  .orb-3 {
    width: 250px;
    height: 250px;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.3), rgba(245, 158, 11, 0.3));
    top: 40%;
    right: 20%;
  }

  .float-shape {
    position: absolute;
  }

  .shape-1 {
    top: 20%;
    right: 15%;
  }

  .shape-2 {
    width: 80px;
    height: 80px;
    bottom: 25%;
    left: 10%;
  }

  .float-badge {
    position: absolute;
    width: 60px;
    height: 60px;
    border-radius: var(--radius-xl);
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    box-shadow: var(--shadow-lg);
  }

  .badge-1 {
    top: 35%;
    left: 8%;
  }

  .badge-2 {
    bottom: 30%;
    right: 12%;
  }

  /* ========== Hero Content ========== */
  .hero-content {
    max-width: 600px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-full);
    margin-bottom: 2rem;
    box-shadow: var(--shadow-md);
  }

  .badge-pulse {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  .badge-text {
    font-weight: 600;
    font-size: 0.9375rem;
    color: var(--color-text);
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 5rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
    color: var(--color-text);
  }

  [data-theme="dark"] .hero-title {
    color: var(--color-text);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    margin-bottom: 2.5rem;
  }

  [data-theme="dark"] .hero-subtitle {
    color: var(--color-text-muted);
    opacity: 0.9;
  }

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .btn-hero {
    padding: 1rem 2rem;
    font-size: 1.0625rem;
    gap: 0.75rem;
  }

  .hero-stats {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
  }

  .stat-item {
    text-align: center;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--color-border);
  }

  /* ========== Hero Visual ========== */
  .hero-visual {
    perspective: 1000px;
    position: relative;
  }

  .visual-glow {
    position: absolute;
    inset: -60px;
    background: radial-gradient(circle at center, rgba(99, 102, 241, 0.15) 0%, transparent 70%);
    filter: blur(40px);
    animation: glowPulse 4s ease-in-out infinite;
    pointer-events: none;
  }

  .code-mockup {
    background: var(--color-surface);
    border-radius: var(--radius-2xl);
    overflow: visible;
    box-shadow:
      0 50px 100px rgba(99, 102, 241, 0.15),
      0 30px 60px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    border: 2px solid transparent;
    background-image: linear-gradient(var(--color-surface), var(--color-surface)),
                      linear-gradient(135deg, rgba(99, 102, 241, 0.3), rgba(236, 72, 153, 0.3));
    background-origin: border-box;
    background-clip: padding-box, border-box;
    position: relative;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .code-mockup:hover {
    transform: translateY(-8px);
    box-shadow:
      0 60px 120px rgba(99, 102, 241, 0.2),
      0 40px 80px rgba(0, 0, 0, 0.25);
  }

  [data-theme="dark"] .code-mockup {
    box-shadow:
      0 50px 100px rgba(99, 102, 241, 0.25),
      0 30px 60px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.75rem;
    background: linear-gradient(135deg,
      rgba(99, 102, 241, 0.05) 0%,
      rgba(236, 72, 153, 0.05) 100%);
    border-bottom: 1px solid var(--color-border);
    backdrop-filter: blur(10px);
  }

  .code-dots {
    display: flex;
    gap: 0.5rem;
  }

  .dot {
    width: 13px;
    height: 13px;
    border-radius: 50%;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .dot:hover {
    transform: scale(1.2);
  }

  .dot.red { background: linear-gradient(135deg, #ff6b6b, #ff5f57); }
  .dot.yellow { background: linear-gradient(135deg, #ffd93d, #ffbd2e); }
  .dot.green { background: linear-gradient(135deg, #51cf66, #28ca42); }

  .code-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    color: var(--color-text);
    font-weight: 600;
    font-family: 'Courier New', monospace;
    flex: 1;
  }

  .code-title svg {
    color: #6366f1;
  }

  .code-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.875rem;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(16, 185, 129, 0.1));
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: var(--radius-full);
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
    box-shadow: 0 0 10px rgba(34, 197, 94, 0.6);
  }

  .status-text {
    font-size: 0.75rem;
    font-weight: 600;
    color: #22c55e;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .code-content {
    padding: 2.5rem 2rem;
    font-family: 'Fira Code', 'Courier New', monospace;
    font-size: 1.0625rem;
    line-height: 2;
    position: relative;
    background: var(--color-bg);
  }

  .code-line {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 0.25rem;
    transition: background 0.2s ease;
    padding: 0.25rem 0;
  }

  .code-line:hover {
    background: rgba(99, 102, 241, 0.05);
  }

  .line-number {
    min-width: 30px;
    text-align: right;
    color: var(--color-text-muted);
    opacity: 0.5;
    font-size: 0.875rem;
    user-select: none;
  }

  .indent-1 {
    padding-left: 2rem;
  }

  .code-keyword {
    color: #c678dd;
    font-weight: 600;
  }

  .code-comment {
    color: #5c6370;
    font-style: italic;
    opacity: 0.8;
  }

  .code-function {
    color: #61afef;
    font-weight: 600;
  }

  .code-variable {
    color: #e06c75;
  }

  .code-string {
    color: #98c379;
  }

  .code-operator {
    color: #56b6c2;
  }

  .code-bracket {
    color: #abb2bf;
    font-weight: 600;
  }

  [data-theme="dark"] .code-keyword { color: #c678dd; }
  [data-theme="dark"] .code-function { color: #61afef; }
  [data-theme="dark"] .code-variable { color: #e06c75; }
  [data-theme="dark"] .code-string { color: #98c379; }

  /* Animated Cursor */
  .code-cursor {
    position: absolute;
    width: 2px;
    height: 20px;
    background: #6366f1;
    bottom: 2.75rem;
    left: 13.5rem;
    animation: blink 1s step-end infinite;
    box-shadow: 0 0 8px rgba(99, 102, 241, 0.6);
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .tech-badges {
    position: absolute;
    inset: 0;
    pointer-events: auto;
  }

  .tech-badge {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.875rem 1.5rem;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border: 2px solid transparent;
    background-image: linear-gradient(rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.95)),
                      linear-gradient(135deg, var(--badge-color-1, #6366f1), var(--badge-color-2, #ec4899));
    background-origin: border-box;
    background-clip: padding-box, border-box;
    border-radius: var(--radius-full);
    font-size: 0.9375rem;
    font-weight: 700;
    color: var(--color-text);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.12),
      0 10px 20px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.5);
    white-space: nowrap;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  [data-theme="dark"] .tech-badge {
    background: rgba(30, 35, 50, 0.95);
    background-image: linear-gradient(rgba(30, 35, 50, 0.95), rgba(30, 35, 50, 0.95)),
                      linear-gradient(135deg, var(--badge-color-1, #6366f1), var(--badge-color-2, #ec4899));
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.4),
      0 10px 20px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .tech-badge:hover {
    transform: translateY(-8px) scale(1.08);
    box-shadow:
      0 30px 60px rgba(0, 0, 0, 0.2),
      0 15px 30px rgba(0, 0, 0, 0.15);
  }

  [data-theme="dark"] .tech-badge:hover {
    box-shadow:
      0 30px 60px rgba(0, 0, 0, 0.6),
      0 15px 30px rgba(0, 0, 0, 0.5);
  }

  .badge-icon {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
