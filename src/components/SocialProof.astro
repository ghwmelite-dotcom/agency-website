    init() {
      if (!this.container) return;

      // Show first notification after 3 seconds
      setTimeout(() => {
        this.showRandomNotification();
      }, 3000);

      // Then show notifications at regular intervals
      setInterval(() => {
        this.showRandomNotification();
      }, this.notificationInterval);
    }

    showRandomNotification() {
      if (!this.container) return;

      // Get a random notification that hasn't been shown recently
      let randomIndex: number;
      let attempts = 0;

      do {
        randomIndex = Math.floor(Math.random() * this.notifications.length);
        attempts++;
      } while (this.displayedNotifications.has(randomIndex) && attempts < 50);

      this.displayedNotifications.add(randomIndex);

      // Reset displayed set if all notifications have been shown
      if (this.displayedNotifications.size >= this.notifications.length) {
        this.displayedNotifications.clear();
      }

      const notification = this.notifications[randomIndex];
      this.displayNotification(notification);
    }

    displayNotification(data: typeof this.notifications[0]) {
      if (!this.container) return;

      const el = document.createElement('div');
      el.className = 'social-proof-notification';
      el.innerHTML = `
        <div class="social-proof-avatar">
          ${data.initials}
        </div>
        <div class="social-proof-content">
          <div class="social-proof-name">${data.name} from ${data.location}</div>
          <div class="social-proof-action">${data.action}</div>
          <div class="social-proof-time">
