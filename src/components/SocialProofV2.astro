<div id="social-proof-container" class="social-proof-container"></div>

<style>
  .social-proof-container {
    position: fixed;
    bottom: 2rem;
    left: 2rem;
    z-index: 9999;
    max-width: 450px;
    pointer-events: none;
  }

  .social-proof-notification {
    /* SOLID WHITE BACKGROUND - VERY VISIBLE */
    background: white;

    /* BRIGHT COLORFUL BORDER - VERY VISIBLE */
    border: 3px solid #6366f1;
    border-radius: 20px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    position: relative;
    display: flex;
    align-items: center;
    gap: 1.25rem;
    pointer-events: all;
    cursor: pointer;

    /* STRONG SHADOW - VERY VISIBLE */
    box-shadow:
      0 0 0 3px rgba(99, 102, 241, 0.1),
      0 8px 32px rgba(0, 0, 0, 0.15),
      0 12px 48px rgba(99, 102, 241, 0.2);

    animation: slideIn 0.5s ease-out;
    transition: all 0.3s ease;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .social-proof-notification:hover {
    transform: translateY(-5px);
    border-color: #ec4899;
    box-shadow:
      0 0 0 3px rgba(236, 72, 153, 0.2),
      0 12px 40px rgba(0, 0, 0, 0.2),
      0 16px 56px rgba(236, 72, 153, 0.3);
  }

  [data-theme="dark"] .social-proof-notification {
    background: #1e1e2e;
    border-color: #8b5cf6;
  }

  .social-proof-notification.hide {
    animation: slideOut 0.4s ease-in forwards;
  }

  @keyframes slideOut {
    to {
      opacity: 0;
      transform: translateX(-100px);
    }
  }

  /* LIVE Badge - BRIGHT RED */
  .live-badge {
    position: absolute;
    top: -12px;
    right: -12px;
    background: linear-gradient(135deg, #ef4444, #dc2626);
    color: white;
    font-size: 0.7rem;
    font-weight: 900;
    padding: 0.5rem 0.875rem;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow:
      0 0 0 4px white,
      0 4px 16px rgba(239, 68, 68, 0.6);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    z-index: 30;
    animation: pulse 2s infinite;
  }

  [data-theme="dark"] .live-badge {
    box-shadow:
      0 0 0 4px #1e1e2e,
      0 4px 16px rgba(239, 68, 68, 0.8);
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.08); }
  }

  .live-badge::before {
    content: '';
    width: 8px;
    height: 8px;
    background: white;
    border-radius: 50%;
    animation: blink 1.5s infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  /* Avatar - LARGE AND COLORFUL */
  .social-proof-avatar-container {
    position: relative;
    flex-shrink: 0;
    z-index: 10;
  }

  .social-proof-avatar {
    width: 64px;
    height: 64px;
    border-radius: 20px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6, #ec4899);
    background-size: 200% 200%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 900;
    font-size: 1.5rem;
    box-shadow:
      0 0 0 4px white,
      0 0 0 6px #6366f1,
      0 10px 30px rgba(99, 102, 241, 0.5);
    transition: transform 0.3s ease;
    animation: glow 3s infinite;
  }

  @keyframes glow {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  [data-theme="dark"] .social-proof-avatar {
    box-shadow:
      0 0 0 4px #1e1e2e,
      0 0 0 6px #8b5cf6,
      0 10px 30px rgba(139, 92, 246, 0.6);
  }

  .social-proof-notification:hover .social-proof-avatar {
    transform: scale(1.15) rotate(-5deg);
  }

  /* Verified Badge - GREEN AND PROMINENT */
  .verified-badge {
    position: absolute;
    bottom: -4px;
    right: -4px;
    width: 24px;
    height: 24px;
    background: linear-gradient(135deg, #10b981, #059669);
    border: 4px solid white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.6);
  }

  [data-theme="dark"] .verified-badge {
    border-color: #1e1e2e;
  }

  .verified-badge svg {
    width: 12px;
    height: 12px;
    fill: white;
  }

  /* Content */
  .social-proof-content {
    flex: 1;
    min-width: 0;
    z-index: 10;
  }

  .social-proof-name {
    font-weight: 800;
    font-size: 1.125rem;
    color: #1e293b;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  [data-theme="dark"] .social-proof-name {
    color: #f1f5f9;
  }

  .social-proof-location {
    font-size: 0.8125rem;
    font-weight: 700;
    color: #6366f1;
  }

  .social-proof-action {
    color: #64748b;
    font-size: 1rem;
    line-height: 1.5;
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  [data-theme="dark"] .social-proof-action {
    color: #94a3b8;
  }

  .social-proof-time {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    border-radius: 14px;
    font-size: 0.875rem;
    font-weight: 800;
    color: white;
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
  }

  .social-proof-time svg {
    flex-shrink: 0;
  }

  /* Icon - LARGE AND ANIMATED */
  .social-proof-icon {
    flex-shrink: 0;
    font-size: 2.25rem;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.15));
    animation: bounce 2s infinite;
    z-index: 10;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-10px) scale(1.1);
    }
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .social-proof-container {
      left: 1rem;
      right: 1rem;
      bottom: 1rem;
      max-width: calc(100% - 2rem);
    }

    .social-proof-notification {
      padding: 1.25rem;
      gap: 1rem;
    }

    .social-proof-avatar {
      width: 52px;
      height: 52px;
      font-size: 1.25rem;
    }

    .social-proof-icon {
      font-size: 1.75rem;
    }

    .social-proof-name {
      font-size: 1rem;
    }
  }
</style>

