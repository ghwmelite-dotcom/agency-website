---
// Website Audit Preview Section - Homepage
---

<section class="website-audit-section" id="website-audit">
  <div class="audit-container">
    <div class="audit-header">
      <div class="audit-badge">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 11l3 3L22 4"/>
          <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
        </svg>
        <span>Free Website Audit</span>
      </div>
      <h2>How Does Your Website Perform?</h2>
      <p class="audit-description">
        Get a comprehensive analysis of your website's performance, SEO, accessibility, and security in seconds.
        Discover what's holding your site back and how to fix it.
      </p>
    </div>

    <div class="audit-input-section">
      <form class="audit-form" id="audit-form">
        <div class="input-wrapper">
          <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
          <input
            type="text"
            id="website-url"
            placeholder="Enter your website URL (e.g., example.com)"
            required
          />
          <button type="submit" class="audit-btn">
            <span class="btn-text">Analyze Now</span>
            <svg class="btn-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"/>
              <polyline points="12 5 19 12 12 19"/>
            </svg>
          </button>
        </div>
        <div class="audit-trust">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
          <span>100% Free • No Credit Card Required • Instant Results</span>
        </div>
      </form>

      <!-- Quick Results Preview -->
      <div class="quick-results hidden" id="quick-results">
        <div class="results-header">
          <h3>Quick Analysis Results</h3>
          <button class="view-full-btn" id="view-full-report">
            View Full Report
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="7" y1="17" x2="17" y2="7"/>
              <polyline points="7 7 17 7 17 17"/>
            </svg>
          </button>
        </div>

        <div class="scores-grid">
          <div class="score-card score-overall">
            <div class="score-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="m9 12 2 2 4-4"/>
              </svg>
            </div>
            <div class="score-content">
              <div class="score-label">Overall Score</div>
              <div class="score-value" id="overall-score">--</div>
            </div>
            <div class="score-ring">
              <svg viewBox="0 0 36 36">
                <path d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="#e5e7eb" stroke-width="3"/>
                <path id="overall-ring" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="url(#overallGradient)" stroke-width="3" stroke-dasharray="0, 100"/>
              </svg>
              <defs>
                <linearGradient id="overallGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" stop-color="#6366f1"/>
                  <stop offset="100%" stop-color="#ec4899"/>
                </linearGradient>
              </defs>
            </div>
          </div>

          <div class="score-card">
            <div class="score-icon performance">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
              </svg>
            </div>
            <div class="score-content">
              <div class="score-label">Performance</div>
              <div class="score-value" id="performance-score">--</div>
            </div>
          </div>

          <div class="score-card">
            <div class="score-icon seo">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"/>
                <path d="m21 21-4.35-4.35"/>
              </svg>
            </div>
            <div class="score-content">
              <div class="score-label">SEO</div>
              <div class="score-value" id="seo-score">--</div>
            </div>
          </div>

          <div class="score-card">
            <div class="score-icon accessibility">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <circle cx="12" cy="8" r="2"/>
                <path d="M12 14v6M8 14h8M8 18h8"/>
              </svg>
            </div>
            <div class="score-content">
              <div class="score-label">Accessibility</div>
              <div class="score-value" id="accessibility-score">--</div>
            </div>
          </div>

          <div class="score-card">
            <div class="score-icon security">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              </svg>
            </div>
            <div class="score-content">
              <div class="score-label">Security</div>
              <div class="score-value" id="security-score">--</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Loading State -->
      <div class="loading-state hidden" id="loading-state">
        <div class="loading-spinner">
          <div class="spinner-ring"></div>
          <div class="spinner-ring"></div>
          <div class="spinner-ring"></div>
        </div>
        <p>Analyzing your website...</p>
        <div class="loading-steps">
          <div class="step active">Fetching website</div>
          <div class="step">Checking performance</div>
          <div class="step">Analyzing SEO</div>
          <div class="step">Testing accessibility</div>
        </div>
      </div>
    </div>

    <!-- Features Grid -->
    <div class="audit-features">
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
          </svg>
        </div>
        <h4>Performance Analysis</h4>
        <p>Page speed, load time, Core Web Vitals, and optimization recommendations</p>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
        </div>
        <h4>SEO Insights</h4>
        <p>Meta tags, mobile-friendliness, structured data, and search visibility</p>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <circle cx="12" cy="8" r="2"/>
            <path d="M12 14v6M8 14h8M8 18h8"/>
          </svg>
        </div>
        <h4>Accessibility Check</h4>
        <p>WCAG compliance, screen reader support, and inclusive design practices</p>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
        </div>
        <h4>Security Scan</h4>
        <p>SSL certificates, HTTPS, security headers, and vulnerability detection</p>
      </div>
    </div>
  </div>
</section>

<style>
  .website-audit-section {
    padding: 6rem 2rem;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.03) 0%, rgba(236, 72, 153, 0.03) 100%);
    position: relative;
    overflow: hidden;
  }

  .website-audit-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.08) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
  }

  .audit-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .audit-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .audit-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(236, 72, 153, 0.1));
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 50px;
    color: #6366f1;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .audit-badge svg {
    flex-shrink: 0;
  }

  .audit-header h2 {
    font-size: 3rem;
    font-weight: 900;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .audit-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    max-width: 700px;
    margin: 0 auto;
  }

  .audit-input-section {
    background: var(--color-surface);
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--color-border);
    margin-bottom: 3rem;
  }

  .audit-form {
    max-width: 700px;
    margin: 0 auto;
  }

  .input-wrapper {
    position: relative;
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .input-icon {
    position: absolute;
    left: 1.25rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-muted);
    pointer-events: none;
  }

  #website-url {
    flex: 1;
    padding: 1rem 1rem 1rem 3rem;
    border: 2px solid var(--color-border);
    border-radius: 16px;
    font-size: 1rem;
    font-family: var(--font-sans);
    transition: all 0.3s ease;
    background: var(--color-bg);
    color: var(--color-text);
  }

  #website-url:focus {
    outline: none;
    border-color: #6366f1;
    box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
    background: var(--color-surface);
  }

  .audit-btn {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
    border: none;
    border-radius: 16px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(99, 102, 241, 0.3);
    white-space: nowrap;
  }

  .audit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(99, 102, 241, 0.4);
  }

  .audit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .audit-trust {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .audit-trust svg {
    color: #10b981;
    flex-shrink: 0;
  }

  /* Quick Results */
  .quick-results {
    margin-top: 2rem;
    animation: slideIn 0.5s ease;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .quick-results.hidden,
  .loading-state.hidden {
    display: none;
  }

  .results-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .results-header h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
  }

  .view-full-btn {
    padding: 0.625rem 1.25rem;
    background: transparent;
    border: 1.5px solid #6366f1;
    color: #6366f1;
    border-radius: 12px;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
  }

  .view-full-btn:hover {
    background: #6366f1;
    color: white;
    transform: translateY(-1px);
  }

  .scores-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .score-card {
    background: var(--color-bg);
    border: 1.5px solid var(--color-border);
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .score-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .score-card.score-overall {
    grid-column: 1 / -1;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.05), rgba(236, 72, 153, 0.05));
    border-color: rgba(99, 102, 241, 0.2);
  }

  .score-overall .score-ring {
    position: absolute;
    top: 50%;
    right: 2rem;
    transform: translateY(-50%);
    width: 80px;
    height: 80px;
  }

  .score-icon {
    width: 48px;
    height: 48px;
    border-radius: 14px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6366f1;
  }

  .score-icon.performance { background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.1)); color: #10b981; }
  .score-icon.seo { background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(37, 99, 235, 0.1)); color: #3b82f6; }
  .score-icon.accessibility { background: linear-gradient(135deg, rgba(168, 85, 247, 0.1), rgba(126, 34, 206, 0.1)); color: #a855f7; }
  .score-icon.security { background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(220, 38, 38, 0.1)); color: #ef4444; }

  .score-content .score-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
  }

  .score-content .score-value {
    font-size: 2rem;
    font-weight: 900;
    background: linear-gradient(135deg, #6366f1, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Loading State */
  .loading-state {
    text-align: center;
    padding: 3rem 1rem;
  }

  .loading-spinner {
    position: relative;
    width: 80px;
    height: 80px;
    margin: 0 auto 2rem;
  }

  .spinner-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 3px solid transparent;
    border-top-color: #6366f1;
    border-radius: 50%;
    animation: spin 1.5s cubic-bezier(0.5, 0, 0.5, 1) infinite;
  }

  .spinner-ring:nth-child(2) {
    border-top-color: #8b5cf6;
    animation-delay: -0.3s;
    width: 60px;
    height: 60px;
    top: 10px;
    left: 10px;
  }

  .spinner-ring:nth-child(3) {
    border-top-color: #ec4899;
    animation-delay: -0.6s;
    width: 40px;
    height: 40px;
    top: 20px;
    left: 20px;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .loading-state p {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 1.5rem;
  }

  .loading-steps {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .loading-steps .step {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    border: 1px solid var(--color-border);
    opacity: 0.5;
  }

  .loading-steps .step.active {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(236, 72, 153, 0.1));
    border-color: #6366f1;
    color: #6366f1;
    opacity: 1;
  }

  /* Features Grid */
  .audit-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .feature-card {
    background: var(--color-surface);
    border: 1.5px solid var(--color-border);
    border-radius: 20px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
    border-color: rgba(99, 102, 241, 0.3);
  }

  .feature-icon {
    width: 56px;
    height: 56px;
    border-radius: 16px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(236, 72, 153, 0.1));
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6366f1;
    margin-bottom: 1.25rem;
  }

  .feature-card h4 {
    font-size: 1.125rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    color: var(--color-text);
  }

  .feature-card p {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 768px) {
    .website-audit-section {
      padding: 4rem 1.5rem;
    }

    .audit-header h2 {
      font-size: 2rem;
    }

    .audit-input-section {
      padding: 1.5rem;
    }

    .input-wrapper {
      flex-direction: column;
    }

    .audit-btn {
      width: 100%;
      justify-content: center;
    }

    .scores-grid {
      grid-template-columns: 1fr;
    }

    .score-overall .score-ring {
      display: none;
    }

    .results-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style>

<script>
  let currentAuditResult: any = null;

  function initWebsiteAudit() {
    const form = document.getElementById('audit-form') as HTMLFormElement;
    const urlInput = document.getElementById('website-url') as HTMLInputElement;
    const loadingState = document.getElementById('loading-state');
    const quickResults = document.getElementById('quick-results');
    const viewFullBtn = document.getElementById('view-full-report');

    if (!form || !urlInput) return;

    // Form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const url = urlInput.value.trim();
      if (!url) return;

      // Show loading state
      quickResults?.classList.add('hidden');
      loadingState?.classList.remove('hidden');

      // Animate loading steps
      animateLoadingSteps();

      try {
        const response = await fetch('/api/website-audit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url })
        });

        const data = await response.json();

        if (data.success && data.result) {
          currentAuditResult = data.result;
          displayQuickResults(data.result);

          // Hide loading, show results
          loadingState?.classList.add('hidden');
          quickResults?.classList.remove('hidden');
        } else {
          throw new Error(data.error || 'Audit failed');
        }
      } catch (error) {
        console.error('Audit error:', error);
        loadingState?.classList.add('hidden');
        alert(error instanceof Error ? error.message : 'Failed to analyze website. Please check the URL and try again.');
      }
    });

    // View full report button
    viewFullBtn?.addEventListener('click', () => {
      if (currentAuditResult) {
        // Store in session storage and navigate to full report page
        sessionStorage.setItem('auditResult', JSON.stringify(currentAuditResult));
        window.location.href = '/website-audit';
      }
    });
  }

  function animateLoadingSteps() {
    const steps = document.querySelectorAll('.loading-steps .step');
    let currentStep = 0;

    const interval = setInterval(() => {
      steps.forEach(step => step.classList.remove('active'));
      if (currentStep < steps.length) {
        steps[currentStep].classList.add('active');
        currentStep++;
      } else {
        currentStep = 0;
      }
    }, 1000);

    // Store interval to clear later
    (window as any).loadingInterval = interval;
  }

  function displayQuickResults(result: any) {
    // Clear loading interval
    if ((window as any).loadingInterval) {
      clearInterval((window as any).loadingInterval);
    }

    // Update scores
    document.getElementById('overall-score')!.textContent = result.overallScore;
    document.getElementById('performance-score')!.textContent = result.performanceScore;
    document.getElementById('seo-score')!.textContent = result.seoScore;
    document.getElementById('accessibility-score')!.textContent = result.accessibilityScore;
    document.getElementById('security-score')!.textContent = result.securityScore;

    // Update ring progress
    const ring = document.getElementById('overall-ring');
    if (ring) {
      ring.setAttribute('stroke-dasharray', `${result.overallScore}, 100`);
    }
  }

  // Initialize on page load
  initWebsiteAudit();
  document.addEventListener('astro:page-load', initWebsiteAudit);
</script>
