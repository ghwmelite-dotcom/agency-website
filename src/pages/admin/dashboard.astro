      const data = await response.json();

      const list = document.getElementById('services-list');
      if (!list) return;

      if (data.success && data.services && data.services.length > 0) {
        list.innerHTML = data.services.map((service: any) => `
          <div class="crud-item">
            <div class="crud-item-content">
              <h4>${service.title}</h4>
              <p>${service.description}</p>
              <div class="crud-item-meta">
                <span class="meta-badge">Icon: ${service.icon}</span>
                <span class="meta-badge">Order: ${service.display_order}</span>
              </div>
            </div>
            <div class="crud-item-actions">
              <button class="icon-btn edit" onclick="editService(${service.id})">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
