<script>
  // Check authentication
  const token = localStorage.getItem('admin_token');
  if (!token) {
    window.location.href = '/admin/login';
  }

  // Navigation
  const navItems = document.querySelectorAll('.nav-item');
  const contentSections = document.querySelectorAll('.content-section');
  const sectionTitle = document.getElementById('section-title');
  const sectionSubtitle = document.getElementById('section-subtitle');

  const sectionData: Record<string, { title: string; subtitle: string }> = {
    hero: { title: 'Hero Section', subtitle: 'Manage your homepage hero content' },
    services: { title: 'Services', subtitle: 'Create and manage your service offerings' },
    portfolio: { title: 'Portfolio', subtitle: 'Showcase your best projects' },
    blog: { title: 'Blog Posts', subtitle: 'Create and manage blog posts for your website' },
    about: { title: 'About Page', subtitle: 'Edit your about page content, team, and values' },
    'site-settings': { title: 'Site Settings', subtitle: 'Basic site settings and contact information' },
    footer: { title: 'Footer & Social', subtitle: 'Update footer and social media links' },
    account: { title: 'Account Settings', subtitle: 'Manage your account and security' },
  };

  navItems.forEach(item => {
    item.addEventListener('click', () => {
      const section = item.getAttribute('data-section');

      // Update active nav item
      navItems.forEach(nav => nav.classList.remove('active'));
      item.classList.add('active');

      // Show corresponding content section
      contentSections.forEach(sec => sec.classList.remove('active'));
      const targetSection = document.getElementById(`section-${section}`);
      if (targetSection) {
        targetSection.classList.add('active');
      }

      // Update header
      const data = sectionData[section!];
      if (data && sectionTitle && sectionSubtitle) {
        sectionTitle.textContent = data.title;
        sectionSubtitle.textContent = data.subtitle;
      }

      // Load section-specific data
      if (section === 'services') {
        loadServices();
      } else if (section === 'portfolio') {
        loadPortfolio();
      } else if (section === 'blog') {
        loadBlogPosts();
      } else if (section === 'about') {
        loadAboutContent();
        loadTeam();
        loadValues();
      }
    });
  });

  // Logout
  document.getElementById('logout-btn')?.addEventListener('click', () => {
    localStorage.removeItem('admin_token');
    window.location.href = '/admin/login';
  });

  // Password visibility toggles
  const toggleButtons = document.querySelectorAll('.toggle-password');
  toggleButtons.forEach(button => {
    button.addEventListener('click', () => {
      const targetId = (button as HTMLElement).getAttribute('data-target');
      const input = document.getElementById(targetId!) as HTMLInputElement;
      const eyeOpen = button.querySelector('.eye-open');
      const eyeClosed = button.querySelector('.eye-closed');

      if (input.type === 'password') {
        input.type = 'text';
        if (eyeOpen) (eyeOpen as HTMLElement).style.display = 'none';
        if (eyeClosed) (eyeClosed as HTMLElement).style.display = 'block';
      } else {
        input.type = 'password';
        if (eyeOpen) (eyeOpen as HTMLElement).style.display = 'block';
        if (eyeClosed) (eyeClosed as HTMLElement).style.display = 'none';
      }
    });
  });

  // Password strength indicator
  const newPasswordInput = document.getElementById('new_password') as HTMLInputElement;
  const strengthFill = document.getElementById('strength-fill') as HTMLDivElement;
  const strengthText = document.getElementById('strength-text') as HTMLSpanElement;

  if (newPasswordInput && strengthFill && strengthText) {
    newPasswordInput.addEventListener('input', () => {
      const password = newPasswordInput.value;
      const strength = calculatePasswordStrength(password);

      strengthFill.style.width = strength.percentage + '%';
      strengthFill.style.background = strength.color;
      strengthText.textContent = strength.text;
      strengthText.style.color = strength.color;
    });
  }

  function calculatePasswordStrength(password: string) {
    let score = 0;
    if (password.length >= 8) score += 25;
    if (password.length >= 12) score += 25;
    if (/[a-z]/.test(password) && /[A-Z]/.test(password)) score += 20;
    if (/\d/.test(password)) score += 15;
    if (/[^a-zA-Z\d]/.test(password)) score += 15;

    if (score < 40) return { percentage: score, color: '#ef4444', text: 'Weak password' };
    if (score < 70) return { percentage: score, color: '#f59e0b', text: 'Fair password' };
    if (score < 90) return { percentage: score, color: '#3b82f6', text: 'Good password' };
    return { percentage: 100, color: '#10b981', text: 'Strong password' };
  }

  // Change password form
  const changePasswordForm = document.getElementById('change-password-form') as HTMLFormElement;
  const passwordStatus = document.getElementById('password-status') as HTMLDivElement;

  if (changePasswordForm && passwordStatus) {
    changePasswordForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      const currentPassword = (document.getElementById('current_password') as HTMLInputElement).value;
      const newPassword = (document.getElementById('new_password') as HTMLInputElement).value;
      const confirmPassword = (document.getElementById('confirm_password') as HTMLInputElement).value;

      // Validate passwords match
      if (newPassword !== confirmPassword) {
        passwordStatus.className = 'form-status error';
        passwordStatus.textContent = 'â New passwords do not match';
        return;
      }

      // Validate password strength
      if (newPassword.length < 8) {
        passwordStatus.className = 'form-status error';
        passwordStatus.textContent = 'â Password must be at least 8 characters long';
        return;
      }

      try {
        passwordStatus.className = 'form-status';
        passwordStatus.textContent = 'Updating password...';
        passwordStatus.style.display = 'block';

        const response = await fetch('/api/admin/change-password', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`,
          },
          body: JSON.stringify({
            currentPassword,
            newPassword,
          }),
        });

        const data = await response.json();

        if (response.ok && data.success) {
          passwordStatus.className = 'form-status success';
          passwordStatus.textContent = 'â Password updated successfully!';
          changePasswordForm.reset();

          setTimeout(() => {
            passwordStatus.style.display = 'none';
          }, 3000);
        } else {
          passwordStatus.className = 'form-status error';
          passwordStatus.textContent = `â ${data.error || 'Failed to update password'}`;
        }
      } catch (error) {
        passwordStatus.className = 'form-status error';
        passwordStatus.textContent = 'â Failed to update password. Please try again.';
        console.error('Password change error:', error);
      }
    });
  }

  // Load content from API
  async function loadContent() {
    try {
      const response = await fetch('/api/admin/content');
      const data = await response.json();

      if (data.success) {
        const content = data.content;

        // Populate form fields
        Object.keys(content).forEach(key => {
          const element = document.getElementById(key);
          if (element) {
            (element as HTMLInputElement).value = content[key];
          }
        });

        // Update logo preview if logo URL exists
        if (content.site_logo) {
          updateLogoPreview(content.site_logo);
        }
      }
    } catch (error) {
      console.error('Error loading content:', error);
    }
  }

  // Logo preview functionality
  function updateLogoPreview(url: string) {
    const previewContainer = document.getElementById('logo-preview-container');
    const previewImg = document.getElementById('logo-preview') as HTMLImageElement;

    if (url && url.trim() !== '') {
      if (previewImg) {
        previewImg.src = url;
        previewImg.onerror = () => {
          if (previewContainer) previewContainer.style.display = 'none';
        };
        previewImg.onload = () => {
          if (previewContainer) previewContainer.style.display = 'block';
        };
      }
    } else {
      if (previewContainer) previewContainer.style.display = 'none';
    }
  }

  // Add event listener for logo URL input
  const logoInput = document.getElementById('site_logo') as HTMLInputElement;
  if (logoInput) {
    logoInput.addEventListener('input', (e) => {
      const url = (e.target as HTMLInputElement).value;
      updateLogoPreview(url);
    });
  }

  // Save changes (Hero, Site Settings, Footer)
  document.getElementById('save-btn')?.addEventListener('click', async () => {
    const statusMessage = document.getElementById('status-message');
    const token = localStorage.getItem('admin_token');

    // Collect all form data
    const content: Record<string, string> = {};

    ['hero_title', 'hero_subtitle', 'hero_stat1_number', 'hero_stat1_label',
     'hero_stat2_number', 'hero_stat2_label', 'hero_stat3_number', 'hero_stat3_label',
     'site_name', 'site_tagline', 'site_email', 'site_phone', 'site_logo', 'site_favicon',
     'social_twitter', 'social_linkedin', 'social_github', 'social_instagram', 'footer_copyright'].forEach(id => {
      const element = document.getElementById(id) as HTMLInputElement | HTMLTextAreaElement;
      if (element && element.value) {
        content[id] = element.value;
      }
    });

    try {
      const response = await fetch('/api/admin/content', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`,
        },
        body: JSON.stringify({ content }),
      });

      if (response.ok) {
        if (statusMessage) {
          statusMessage.className = 'status-message success';
          statusMessage.textContent = 'â Changes saved successfully!';
          setTimeout(() => {
            statusMessage.style.display = 'none';
          }, 3000);
        }
      } else {
        const errorData = await response.json();
        throw new Error(errorData.details || errorData.error || 'Failed to save');
      }
    } catch (error) {
      console.error('Save error:', error);
      if (statusMessage) {
        statusMessage.className = 'status-message error';
        const errorMsg = error instanceof Error ? error.message : 'Unknown error';
        statusMessage.textContent = `â Error: ${errorMsg}`;
      }
    }
  });

