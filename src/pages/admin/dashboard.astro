      showToast('Error deleting team member', 'error');
      console.error(error);
    }
  };

  // ==================== VALUES CRUD ====================

  async function loadValues() {
    try {
      const response = await fetch('/api/admin/values');
      const data = await response.json();

      const list = document.getElementById('values-list');
      if (!list) return;

      if (data.success && data.values && data.values.length > 0) {
        list.innerHTML = data.values.map((value: any) => `
          <div class="value-item">
            <div class="value-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
              </svg>
            </div>
            <div class="value-content">
              <h4>${value.title}</h4>
              <p>${value.description}</p>
              <div class="crud-item-actions" style="margin-top: 1rem;">
                <button class="icon-btn edit" onclick="editValue(${value.id})">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                  </svg>
                </button>
                <button class="icon-btn delete" onclick="deleteValue(${value.id})">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="3 6 5 6 21 6"/>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        `).join('');
      } else {
        list.innerHTML = `
          <div class="empty-state">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
            </svg>
            <h4>No Core Values Yet</h4>
            <p>Click "Add Value" to define your first core value</p>
          </div>
        `;
      }
    } catch (error) {
      console.error('Error loading values:', error);
    }
  }

  // Values modal handlers
  document.getElementById('add-value-btn')?.addEventListener('click', () => {
    openValueModal();
  });

  document.getElementById('value-modal-close')?.addEventListener('click', () => {
    closeValueModal();
  });

  document.getElementById('value-cancel-btn')?.addEventListener('click', () => {
    closeValueModal();
  });

  document.getElementById('value-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    await saveValue();
  });

  function openValueModal(value?: any) {
    const modal = document.getElementById('value-modal');
    const modalTitle = document.getElementById('value-modal-title');

    if (value) {
      if (modalTitle) modalTitle.textContent = 'Edit Core Value';
      (document.getElementById('value-id') as HTMLInputElement).value = value.id;
      (document.getElementById('value-title') as HTMLInputElement).value = value.title;
      (document.getElementById('value-description') as HTMLTextAreaElement).value = value.description;
      (document.getElementById('value-icon') as HTMLInputElement).value = value.icon;
      (document.getElementById('value-order') as HTMLInputElement).value = value.display_order || 0;
    } else {
      if (modalTitle) modalTitle.textContent = 'Add Core Value';
      (document.getElementById('value-form') as HTMLFormElement).reset();
      (document.getElementById('value-id') as HTMLInputElement).value = '';
    }

    if (modal) modal.style.display = 'flex';
  }

  function closeValueModal() {
    const modal = document.getElementById('value-modal');
    if (modal) modal.style.display = 'none';
  }

  async function saveValue() {
    const id = (document.getElementById('value-id') as HTMLInputElement).value;
    const title = (document.getElementById('value-title') as HTMLInputElement).value;
    const description = (document.getElementById('value-description') as HTMLTextAreaElement).value;
    const icon = (document.getElementById('value-icon') as HTMLInputElement).value;
    const display_order = parseInt((document.getElementById('value-order') as HTMLInputElement).value) || 0;

    try {
      const response = await fetch('/api/admin/values', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`,
        },
        body: JSON.stringify({ id: id ? parseInt(id) : undefined, title, description, icon, display_order }),
      });

      if (response.ok) {
        closeValueModal();
        loadValues();
        showToast('Core value saved successfully!', 'success');
      } else {
        throw new Error('Failed to save core value');
      }
    } catch (error) {
      showToast('Error saving core value', 'error');
      console.error(error);
    }
  }

  (window as any).editValue = async (id: number) => {
    try {
      const response = await fetch('/api/admin/values');
      const data = await response.json();
      const value = data.values.find((v: any) => v.id === id);
      if (value) {
        openValueModal(value);
      }
    } catch (error) {
      console.error('Error loading value:', error);
    }
  };

  (window as any).deleteValue = async (id: number) => {
    if (!confirm('Are you sure you want to delete this core value?')) return;

    try {
      const response = await fetch(`/api/admin/values?id=${id}`, {
        method: 'DELETE',
        headers: {
          'Authorization': `Bearer ${token}`,
        },
      });

      if (response.ok) {
        loadValues();
        showToast('Core value deleted successfully!', 'success');
      } else {
        throw new Error('Failed to delete core value');
      }
    } catch (error) {
      showToast('Error deleting core value', 'error');
      console.error(error);
    }
  };

  // ==================== UTILITY FUNCTIONS ====================

  function showToast(message: string, type: 'success' | 'error') {
    const statusMessage = document.getElementById('status-message');
    if (statusMessage) {
      statusMessage.className = `status-message ${type}`;
      statusMessage.textContent = type === 'success' ? `â ${message}` : `â ${message}`;
      setTimeout(() => {
        statusMessage.style.display = 'none';
      }, 3000);
    }
  }

  // Initialize
  loadContent();
</script>
