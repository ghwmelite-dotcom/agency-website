---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Admin Dashboard" description="Site content management">
  <div class="admin-layout">
    <!-- Sidebar -->
    <aside class="admin-sidebar">
      <div class="sidebar-header">
        <div class="logo-section">
          <div class="logo-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L2 7l10 5 10-5-10-5z"/>
              <path d="M2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
          </div>
          <h2>Admin Portal</h2>
        </div>
      </div>

      <nav class="sidebar-nav">
        <div class="nav-section">
          <span class="nav-section-label">Content</span>
          <button class="nav-item active" data-section="hero">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            </svg>
            <span>Hero Section</span>
          </button>

          <button class="nav-item" data-section="services">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/>
              <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>
            </svg>
            <span>Services</span>
          </button>

          <button class="nav-item" data-section="portfolio">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
              <circle cx="8.5" cy="8.5" r="1.5"/>
              <polyline points="21 15 16 10 5 21"/>
            </svg>
            <span>Portfolio</span>
          </button>

          <button class="nav-item" data-section="blog">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <line x1="10" y1="9" x2="8" y2="9"/>
            </svg>
            <span>Blog Posts</span>
          </button>

          <button class="nav-item" data-section="about">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="16" x2="12" y2="12"/>
              <line x1="12" y1="8" x2="12.01" y2="8"/>
            </svg>
            <span>About Page</span>
          </button>

          <a href="/admin/contacts" class="nav-item" style="text-decoration: none; color: inherit;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
            </svg>
            <span>Contact Submissions</span>
          </a>
        </div>

        <div class="nav-section">
          <span class="nav-section-label">Settings</span>
          <button class="nav-item" data-section="site-settings">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="3"/>
              <path d="M12 1v6m0 6v6m6-12h-6m-6 0h6M19.071 4.929L14.121 9.88m0 4.24l4.95 4.95M4.929 4.929l4.95 4.95m4.24 0l4.95 4.95"/>
            </svg>
            <span>Site Settings</span>
          </button>

          <a href="/admin/theme" class="nav-item" style="text-decoration: none; color: inherit;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4z"/>
              <path d="M7 21h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343"/>
            </svg>
            <span>Theme Customization</span>
          </a>

          <button class="nav-item" data-section="footer">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 12h16M4 18h16"/>
            </svg>
            <span>Footer & Social</span>
          </button>

          <button class="nav-item" data-section="account">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
            <span>Account</span>
          </button>
        </div>
      </nav>

      <button class="logout-btn" id="logout-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4M16 17l5-5-5-5M21 12H9"/>
        </svg>
        <span>Logout</span>
      </button>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
      <div class="admin-header">
        <div class="header-content">
          <h1 id="section-title">Hero Section</h1>
          <p class="header-subtitle" id="section-subtitle">Manage your homepage hero content</p>
        </div>
        <button class="btn btn-primary" id="save-btn">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
            <polyline points="17 21 17 13 7 13 7 21"/>
            <polyline points="7 3 7 8 15 8"/>
          </svg>
          Save Changes
        </button>
      </div>

      <div class="admin-content">
        <div class="status-message" id="status-message"></div>

        <!-- Hero Section -->
        <div class="content-section active" id="section-hero">
          <div class="section-card glass">
            <div class="card-header">
              <h3>Hero Content</h3>
              <p class="card-description">Main headline and subtitle for your homepage</p>
            </div>

            <div class="form-grid">
              <div class="form-group full-width">
                <label for="hero_title">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="4 7 4 4 20 4 20 7"/>
                    <line x1="9" y1="20" x2="15" y2="20"/>
                    <line x1="12" y1="4" x2="12" y2="20"/>
                  </svg>
                  Main Title
                </label>
                <input type="text" id="hero_title" placeholder="Enter hero title" />
              </div>

              <div class="form-group full-width">
                <label for="hero_subtitle">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                  </svg>
                  Subtitle
                </label>
                <textarea id="hero_subtitle" rows="3" placeholder="Enter hero subtitle"></textarea>
              </div>
            </div>
          </div>

          <div class="section-card glass">
            <div class="card-header">
              <h3>Statistics</h3>
              <p class="card-description">Display impressive numbers on your homepage</p>
            </div>

            <div class="stats-grid-3">
              <div class="stat-group">
                <label>Stat 1</label>
                <input type="text" id="hero_stat1_number" placeholder="500+" />
                <input type="text" id="hero_stat1_label" placeholder="Projects Delivered" />
              </div>
              <div class="stat-group">
                <label>Stat 2</label>
                <input type="text" id="hero_stat2_number" placeholder="98%" />
                <input type="text" id="hero_stat2_label" placeholder="Client Satisfaction" />
              </div>
              <div class="stat-group">
                <label>Stat 3</label>
                <input type="text" id="hero_stat3_number" placeholder="50+" />
                <input type="text" id="hero_stat3_label" placeholder="Team Members" />
              </div>
            </div>
          </div>
        </div>

        <!-- Services Section -->
        <div class="content-section" id="section-services">
          <div class="section-card glass">
            <div class="card-header">
              <div style="display: flex; justify-content: space-between; align-items: start;">
                <div>
                  <h3>Services Management</h3>
                  <p class="card-description">Create and manage your service offerings</p>
                </div>
                <button class="btn btn-primary" id="add-service-btn">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"/>
                    <line x1="5" y1="12" x2="19" y2="12"/>
                  </svg>
                  Add Service
                </button>
              </div>
            </div>

            <div id="services-list" class="crud-list">
              <!-- Services loaded dynamically -->
            </div>
          </div>

          <!-- Add/Edit Service Modal -->
          <div id="service-modal" class="modal" style="display: none;">
            <div class="modal-content">
              <div class="modal-header">
                <h3 id="service-modal-title">Add Service</h3>
                <button class="modal-close" id="service-modal-close">&times;</button>
              </div>
              <form id="service-form">
                <input type="hidden" id="service-id" />
                <div class="form-group">
                  <label for="service-title">Title</label>
                  <input type="text" id="service-title" required placeholder="Service name" />
                </div>
                <div class="form-group">
                  <label for="service-description">Description</label>
                  <textarea id="service-description" required rows="4" placeholder="Brief description"></textarea>
                </div>
                <div class="form-group">
                  <label for="service-icon">Icon Name</label>
                  <input type="text" id="service-icon" required placeholder="e.g. laptop, globe, users" />
                  <small class="field-hint">Feather icon name (see <a href="https://feathericons.com/" target="_blank">feathericons.com</a>)</small>
                </div>
                <div class="form-group">
                  <label for="service-order">Display Order</label>
                  <input type="number" id="service-order" value="0" placeholder="0" />
                </div>
                <div class="modal-actions">
                  <button type="button" class="btn btn-secondary" id="service-cancel-btn">Cancel</button>
                  <button type="submit" class="btn btn-primary">Save Service</button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Portfolio Section -->
        <div class="content-section" id="section-portfolio">
          <div class="section-card glass">
            <div class="card-header">
              <div style="display: flex; justify-content: space-between; align-items: start;">
                <div>
                  <h3>Portfolio Management</h3>
                  <p class="card-description">Showcase your best projects</p>
                </div>
                <button class="btn btn-primary" id="add-portfolio-btn">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"/>
                    <line x1="5" y1="12" x2="19" y2="12"/>
                  </svg>
                  Add Project
                </button>
              </div>
            </div>

            <div id="portfolio-list" class="crud-list portfolio-grid">
              <!-- Portfolio loaded dynamically -->
            </div>
          </div>

          <!-- Add/Edit Portfolio Modal -->
          <div id="portfolio-modal" class="modal" style="display: none;">
            <div class="modal-content">
              <div class="modal-header">
                <h3 id="portfolio-modal-title">Add Project</h3>
                <button class="modal-close" id="portfolio-modal-close">&times;</button>
              </div>
              <form id="portfolio-form">
                <input type="hidden" id="portfolio-id" />
                <div class="form-group">
                  <label for="portfolio-title">Project Title</label>
                  <input type="text" id="portfolio-title" required placeholder="Project name" />
                </div>
                <div class="form-group">
                  <label for="portfolio-description">Description</label>
                  <textarea id="portfolio-description" required rows="4" placeholder="Project description"></textarea>
                </div>
                <div class="form-group">
                  <label for="portfolio-image">Image URL</label>
                  <input type="url" id="portfolio-image" placeholder="https://example.com/image.jpg" />
                </div>
                <div class="form-group">
                  <label for="portfolio-url">Project URL</label>
                  <input type="url" id="portfolio-url" placeholder="https://example.com" />
                </div>
                <div class="form-group">
                  <label for="portfolio-tags">Tags (comma-separated)</label>
                  <input type="text" id="portfolio-tags" placeholder="web, design, react" />
                </div>
                <div class="form-group">
                  <label>
                    <input type="checkbox" id="portfolio-featured" />
                    <span>Featured Project</span>
                  </label>
                </div>
                <div class="modal-actions">
                  <button type="button" class="btn btn-secondary" id="portfolio-cancel-btn">Cancel</button>
                  <button type="submit" class="btn btn-primary">Save Project</button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Blog Posts Section -->
        <div class="content-section" id="section-blog">
          <div class="section-card glass">
            <div class="card-header">
              <div style="display: flex; justify-content: space-between; align-items: start;">
                <div>
                  <h3>Blog Posts Management</h3>
                  <p class="card-description">Create and manage blog posts</p>
                </div>
                <button class="btn btn-primary" id="add-blog-btn">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"/>
                    <line x1="5" y1="12" x2="19" y2="12"/>
                  </svg>
                  New Post
                </button>
              </div>
            </div>

            <div id="blog-list" class="crud-list">
              <!-- Blog posts loaded dynamically -->
            </div>
          </div>

          <!-- Add/Edit Blog Post Modal -->
          <div id="blog-modal" class="modal" style="display: none;">
            <div class="modal-content modal-wide">
              <div class="modal-header">
                <h3 id="blog-modal-title">New Blog Post</h3>
                <button class="modal-close" id="blog-modal-close">&times;</button>
              </div>
              <form id="blog-form">
                <input type="hidden" id="blog-id" />
                <div class="form-grid">
                  <div class="form-group full-width">
                    <label for="blog-title">Title *</label>
                    <input type="text" id="blog-title" required placeholder="Post title" />
                  </div>
                  <div class="form-group">
                    <label for="blog-slug">Slug (URL)</label>
                    <input type="text" id="blog-slug" placeholder="auto-generated-from-title" />
                    <small class="field-hint">Leave blank to auto-generate from title</small>
                  </div>
                  <div class="form-group">
                    <label for="blog-author">Author</label>
                    <input type="text" id="blog-author" placeholder="OHWP Studios" />
                  </div>
                  <div class="form-group full-width">
                    <label for="blog-excerpt">Excerpt</label>
                    <textarea id="blog-excerpt" rows="2" placeholder="Brief summary for post preview"></textarea>
                  </div>
                  <div class="form-group full-width">
                    <label for="blog-content">Content (HTML) *</label>
                    <textarea id="blog-content" required rows="10" placeholder="<p>Post content in HTML format...</p>"></textarea>
                    <small class="field-hint">Use HTML tags for formatting</small>
                  </div>
                  <div class="form-group">
                    <label for="blog-featured-image">Featured Image URL</label>
                    <input type="url" id="blog-featured-image" placeholder="https://example.com/image.jpg" />
                  </div>
                  <div class="form-group">
                    <label for="blog-tags">Tags (comma-separated)</label>
                    <input type="text" id="blog-tags" placeholder="web development, javascript, react" />
                  </div>
                  <div class="form-group">
                    <label for="blog-seo-title">SEO Title</label>
                    <input type="text" id="blog-seo-title" placeholder="Leave blank to use post title" />
                  </div>
                  <div class="form-group">
                    <label for="blog-seo-description">SEO Description</label>
                    <textarea id="blog-seo-description" rows="2" placeholder="Meta description for search engines"></textarea>
                  </div>
                  <div class="form-group full-width">
                    <label style="display: flex; align-items: center; gap: 0.5rem;">
                      <input type="checkbox" id="blog-published" />
                      <span>Publish this post</span>
                    </label>
                    <small class="field-hint">Unpublished posts are saved as drafts</small>
                  </div>
                </div>
                <div class="modal-actions">
                  <button type="button" class="btn btn-secondary" id="blog-cancel-btn">Cancel</button>
                  <button type="submit" class="btn btn-primary">Save Post</button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- About Page Section -->
        <div class="content-section" id="section-about">
          <!-- About Content -->
          <div class="section-card glass">
            <div class="card-header">
              <h3>About Page Content</h3>
              <p class="card-description">Hero section and story content</p>
            </div>

            <div class="form-grid">
              <div class="form-group">
                <label for="about-badge">Hero Badge</label>
                <input type="text" id="about-badge" placeholder="About Us" />
              </div>
              <div class="form-group full-width">
                <label for="about-title">Hero Title</label>
                <input type="text" id="about-title" placeholder="Building Digital Excellence..." />
              </div>
              <div class="form-group full-width">
                <label for="about-description">Hero Description</label>
                <textarea id="about-description" rows="3" placeholder="We're a team of..."></textarea>
              </div>
              <div class="form-group">
                <label for="about-story-title">Story Section Title</label>
                <input type="text" id="about-story-title" placeholder="Our Story" />
              </div>
              <div class="form-group full-width">
                <label for="about-story-content">Story Content</label>
                <textarea id="about-story-content" rows="4" placeholder="Founded with a vision..."></textarea>
              </div>
            </div>

            <button class="btn btn-primary" id="save-about-btn">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
              </svg>
              Save About Content
            </button>
          </div>

          <!-- Team Members -->
          <div class="section-card glass">
            <div class="card-header">
              <div style="display: flex; justify-content: space-between; align-items: start;">
                <div>
                  <h3>Team Members</h3>
                  <p class="card-description">Manage your team</p>
                </div>
                <button class="btn btn-primary" id="add-team-btn">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"/>
                    <line x1="5" y1="12" x2="19" y2="12"/>
                  </svg>
                  Add Member
                </button>
              </div>
            </div>

            <div id="team-list" class="crud-list team-grid">
              <!-- Team loaded dynamically -->
            </div>
          </div>

          <!-- Add/Edit Team Modal -->
          <div id="team-modal" class="modal" style="display: none;">
            <div class="modal-content">
              <div class="modal-header">
                <h3 id="team-modal-title">Add Team Member</h3>
                <button class="modal-close" id="team-modal-close">&times;</button>
              </div>
              <form id="team-form">
                <input type="hidden" id="team-id" />
                <div class="form-group">
                  <label for="team-name">Name</label>
                  <input type="text" id="team-name" required placeholder="Full name" />
                </div>
                <div class="form-group">
                  <label for="team-role">Role</label>
                  <input type="text" id="team-role" required placeholder="Job title" />
                </div>
                <div class="form-group">
                  <label for="team-bio">Bio</label>
                  <textarea id="team-bio" rows="3" placeholder="Short bio"></textarea>
                </div>
                <div class="form-group">
                  <label for="team-image">Image URL</label>
                  <input type="url" id="team-image" placeholder="https://example.com/photo.jpg" />
                </div>
                <div class="form-group">
                  <label for="team-order">Display Order</label>
                  <input type="number" id="team-order" value="0" placeholder="0" />
                </div>
                <div class="modal-actions">
                  <button type="button" class="btn btn-secondary" id="team-cancel-btn">Cancel</button>
                  <button type="submit" class="btn btn-primary">Save Member</button>
                </div>
              </form>
            </div>
          </div>

          <!-- Core Values -->
          <div class="section-card glass">
            <div class="card-header">
              <div style="display: flex; justify-content: space-between; align-items: start;">
                <div>
                  <h3>Core Values</h3>
                  <p class="card-description">Define your company values</p>
                </div>
                <button class="btn btn-primary" id="add-value-btn">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"/>
                    <line x1="5" y1="12" x2="19" y2="12"/>
                  </svg>
                  Add Value
                </button>
              </div>
            </div>

            <div id="values-list" class="crud-list values-grid">
              <!-- Values loaded dynamically -->
            </div>
          </div>

          <!-- Add/Edit Value Modal -->
          <div id="value-modal" class="modal" style="display: none;">
            <div class="modal-content">
              <div class="modal-header">
                <h3 id="value-modal-title">Add Core Value</h3>
                <button class="modal-close" id="value-modal-close">&times;</button>
              </div>
              <form id="value-form">
                <input type="hidden" id="value-id" />
                <div class="form-group">
                  <label for="value-title">Title</label>
                  <input type="text" id="value-title" required placeholder="Value name" />
                </div>
                <div class="form-group">
                  <label for="value-description">Description</label>
                  <textarea id="value-description" required rows="4" placeholder="Value description"></textarea>
                </div>
                <div class="form-group">
                  <label for="value-icon">Icon Name</label>
                  <input type="text" id="value-icon" required placeholder="e.g. heart, star, shield" />
                  <small class="field-hint">Feather icon name (see <a href="https://feathericons.com/" target="_blank">feathericons.com</a>)</small>
                </div>
                <div class="form-group">
                  <label for="value-order">Display Order</label>
                  <input type="number" id="value-order" value="0" placeholder="0" />
                </div>
                <div class="modal-actions">
                  <button type="button" class="btn btn-secondary" id="value-cancel-btn">Cancel</button>
                  <button type="submit" class="btn btn-primary">Save Value</button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Site Settings Section -->
        <div class="content-section" id="section-site-settings">
          <div class="section-card glass">
            <div class="card-header">
              <h3>Site Information</h3>
              <p class="card-description">Basic site settings and contact information</p>
            </div>

            <div class="form-grid-2">
              <div class="form-group">
                <label for="site_name">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
