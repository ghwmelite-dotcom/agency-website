    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <div class="header">
        <h1>Project Estimates</h1>
      </div>

      <!-- Stats -->
      <div class="stats-grid">
        <div class="stat-card info">
          <div class="stat-label">Total Estimates</div>
          <div class="stat-value" id="totalEstimates">0</div>
        </div>
        <div class="stat-card success">
          <div class="stat-label">New Leads</div>
          <div class="stat-value" id="newEstimates">0</div>
        </div>
        <div class="stat-card warning">
          <div class="stat-label">In Progress</div>
          <div class="stat-value" id="inProgressEstimates">0</div>
        </div>
        <div class="stat-card primary">
          <div class="stat-label">Converted</div>
          <div class="stat-value" id="convertedEstimates">0</div>
        </div>
      </div>

      <!-- Filters -->
      <div class="filters">
        <div class="filter-group">
          <label class="filter-label">Status</label>
          <select id="statusFilter">
            <option value="">All Statuses</option>
            <option value="new">New</option>
            <option value="reviewed">Reviewed</option>
            <option value="contacted">Contacted</option>
            <option value="converted">Converted</option>
          </select>
        </div>
        <div class="filter-group">
          <label class="filter-label">Project Type</label>
          <select id="typeFilter">
            <option value="">All Types</option>
            <option value="web">Web</option>
            <option value="mobile">Mobile</option>
            <option value="both">Both</option>
            <option value="other">Other</option>
          </select>
        </div>
        <div class="filter-group">
          <label class="filter-label">Risk Level</label>
          <select id="riskFilter">
            <option value="">All Risks</option>
            <option value="low">Low</option>
            <option value="medium">Medium</option>
            <option value="high">High</option>
          </select>
        </div>
        <div class="filter-group">
          <label class="filter-label">Search</label>
          <input type="text" id="searchInput" placeholder="Search name, email, company...">
        </div>
      </div>

      <!-- Loading State -->
      <div id="loadingState" class="loading">
        <p>Loading estimates...</p>
      </div>

      <!-- Error State -->
      <div id="errorState" class="error" style="display: none;"></div>

      <!-- Table -->
      <div class="table-container" id="tableContainer" style="display: none;">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Contact</th>
              <th>Project Type</th>
              <th>Budget Range</th>
              <th>Estimate</th>
              <th>Risk</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="estimatesTable">
          </tbody>
        </table>
      </div>

      <!-- Empty State -->
      <div id="emptyState" class="empty-state" style="display: none;">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3>No estimates found</h3>
        <p>No project estimates match your current filters.</p>
      </div>
