  <!-- Detail Modal -->
  <div class="modal" id="detailModal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Project Estimate Details</h2>
        <button class="modal-close" onclick="closeModal()">&times;</button>
      </div>
      <div class="modal-body" id="modalBody">
        <!-- Content will be populated by JavaScript -->
      </div>
    </div>
  </div>

  <script>
    let allEstimates = [];
    let currentEstimate = null;

    async function loadEstimates() {
      try {
        const response = await fetch('/api/admin/estimates');
        if (!response.ok) throw new Error('Failed to load estimates');

        const data = await response.json();
        allEstimates = data.estimates || [];

        updateStats();
        renderEstimates();

        document.getElementById('loadingState').style.display = 'none';
        document.getElementById('tableContainer').style.display = allEstimates.length > 0 ? 'block' : 'none';
        document.getElementById('emptyState').style.display = allEstimates.length === 0 ? 'block' : 'none';

      } catch (error) {
        console.error('Error loading estimates:', error);
        document.getElementById('loadingState').style.display = 'none';
        document.getElementById('errorState').textContent = 'Failed to load estimates. Please try again.';
        document.getElementById('errorState').style.display = 'block';
      }
    }

    function updateStats() {
      const total = allEstimates.length;
      const newCount = allEstimates.filter(e => e.status === 'new').length;
      const inProgress = allEstimates.filter(e => ['reviewed', 'contacted'].includes(e.status)).length;
      const converted = allEstimates.filter(e => e.status === 'converted').length;

      document.getElementById('totalEstimates').textContent = total;
      document.getElementById('newEstimates').textContent = newCount;
      document.getElementById('inProgressEstimates').textContent = inProgress;
      document.getElementById('convertedEstimates').textContent = converted;
    }

    function renderEstimates() {
      const statusFilter = document.getElementById('statusFilter').value;
      const typeFilter = document.getElementById('typeFilter').value;
      const riskFilter = document.getElementById('riskFilter').value;
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();

      let filtered = allEstimates.filter(estimate => {
        if (statusFilter && estimate.status !== statusFilter) return false;
        if (typeFilter && estimate.project_type !== typeFilter) return false;
        if (riskFilter && estimate.risk_level !== riskFilter) return false;
        if (searchTerm) {
          const searchable = `${estimate.name} ${estimate.email} ${estimate.company || ''}`.toLowerCase();
          if (!searchable.includes(searchTerm)) return false;
        }
        return true;
      });

      const tbody = document.getElementById('estimatesTable');
      tbody.innerHTML = filtered.map(estimate => `
        <tr>
          <td>${formatDate(estimate.created_at)}</td>
          <td>
            <div style="font-weight: 600;">${estimate.name}</div>
            <div style="font-size: 0.875rem; color: var(--color-text-muted);">${estimate.email}</div>
            ${estimate.company ? `<div style="font-size: 0.8125rem; color: var(--color-text-muted);">${estimate.company}</div>` : ''}
          </td>
          <td>${formatProjectType(estimate.project_type)}</td>
          <td>${formatBudget(estimate.budget_range)}</td>
          <td>
            <div style="font-weight: 600;">$${estimate.estimated_cost_min?.toLocaleString() || '0'} - $${estimate.estimated_cost_max?.toLocaleString() || '0'}</div>
            <div style="font-size: 0.875rem; color: var(--color-text-muted);">${estimate.estimated_timeline_weeks || 0} weeks</div>
          </td>
          <td><span class="risk-badge risk-${estimate.risk_level || 'medium'}">${(estimate.risk_level || 'medium').toUpperCase()}</span></td>
          <td><span class="status-badge status-${estimate.status}">${estimate.status.toUpperCase()}</span></td>
          <td>
            <button class="btn btn-primary btn-sm" onclick="viewDetails(${estimate.id})">View Details</button>
          </td>
        </tr>
      `).join('');

      document.getElementById('tableContainer').style.display = filtered.length > 0 ? 'block' : 'none';
      document.getElementById('emptyState').style.display = filtered.length === 0 ? 'block' : 'none';
    }

    function formatDate(dateString) {
      const date = new Date(dateString);
      return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
    }

    function formatProjectType(type) {
      const types = {
        'web': 'Web App',
        'mobile': 'Mobile App',
        'both': 'Web & Mobile',
        'other': 'Other'
      };
      return types[type] || type;
    }

    function formatBudget(budget) {
      const budgets = {
        'under 10k': '<$10k',
        '10k-25k': '$10k-$25k',
        '25k-50k': '$25k-$50k',
        '50k-100k': '$50k-$100k',
        '100k+': '$100k+'
      };
      return budgets[budget] || budget;
    }

    function viewDetails(id) {
      currentEstimate = allEstimates.find(e => e.id === id);
      if (!currentEstimate) return;

      const analysis = typeof currentEstimate.ai_analysis === 'string'
        ? JSON.parse(currentEstimate.ai_analysis)
        : currentEstimate.ai_analysis;

      const techStack = typeof currentEstimate.technology_stack === 'string'
        ? JSON.parse(currentEstimate.technology_stack)
        : currentEstimate.technology_stack;

      const modalBody = document.getElementById('modalBody');
      modalBody.innerHTML = `
        <div class="detail-section">
          <h3>Contact Information</h3>
          <div class="detail-grid">
            <div class="detail-label">Name:</div>
            <div class="detail-value">${currentEstimate.name}</div>
            <div class="detail-label">Email:</div>
            <div class="detail-value"><a href="mailto:${currentEstimate.email}">${currentEstimate.email}</a></div>
            ${currentEstimate.company ? `
            <div class="detail-label">Company:</div>
            <div class="detail-value">${currentEstimate.company}</div>
            ` : ''}
            ${currentEstimate.phone ? `
            <div class="detail-label">Phone:</div>
            <div class="detail-value"><a href="tel:${currentEstimate.phone}">${currentEstimate.phone}</a></div>
            ` : ''}
          </div>
        </div>

        <div class="detail-section">
          <h3>Project Details</h3>
          <div class="detail-grid">
            <div class="detail-label">Project Type:</div>
            <div class="detail-value">${formatProjectType(currentEstimate.project_type)}</div>
            <div class="detail-label">Timeline:</div>
            <div class="detail-value">${currentEstimate.timeline_preference}</div>
            <div class="detail-label">Budget Range:</div>
            <div class="detail-value">${formatBudget(currentEstimate.budget_range)}</div>
            <div class="detail-label">Submitted:</div>
            <div class="detail-value">${formatDate(currentEstimate.created_at)}</div>
          </div>
          <div style="margin-top: 1rem;">
            <div class="detail-label">Project Description:</div>
            <div class="description-box">${currentEstimate.project_description.replace(/\n/g, '<br>')}</div>
          </div>
        </div>

        <div class="detail-section">
          <h3>AI-Generated Estimate</h3>
          <div class="estimate-highlight">
            <div style="color: var(--color-text-muted); font-size: 0.875rem; font-weight: 600; margin-bottom: 0.5rem;">ESTIMATED COST</div>
            <div class="estimate-value">$${currentEstimate.estimated_cost_min?.toLocaleString() || '0'} - $${currentEstimate.estimated_cost_max?.toLocaleString() || '0'}</div>
          </div>
          <div class="detail-grid">
            <div class="detail-label">Timeline:</div>
            <div class="detail-value">${currentEstimate.estimated_timeline_weeks || 0} weeks</div>
            <div class="detail-label">Team Size:</div>
            <div class="detail-value">${currentEstimate.team_size_needed || 0} people</div>
            <div class="detail-label">Risk Level:</div>
            <div class="detail-value"><span class="risk-badge risk-${currentEstimate.risk_level || 'medium'}">${(currentEstimate.risk_level || 'medium').toUpperCase()}</span></div>
            <div class="detail-label">Complexity:</div>
            <div class="detail-value">${analysis?.complexity_assessment || 'N/A'}</div>
          </div>
          ${techStack && techStack.length > 0 ? `
          <div style="margin-top: 1rem;">
            <div class="detail-label">Technology Stack:</div>
            <div class="tech-stack">
              ${techStack.map(tech => `<span class="tech-badge">${tech}</span>`).join('')}
            </div>
          </div>
          ` : ''}
          ${analysis?.summary ? `
          <div style="margin-top: 1rem;">
            <div class="detail-label">AI Analysis Summary:</div>
            <div class="description-box">${analysis.summary.replace(/\n/g, '<br>')}</div>
          </div>
          ` : ''}
        </div>

        <div class="detail-section">
          <h3>Status Management</h3>
          <div class="detail-grid">
            <div class="detail-label">Current Status:</div>
            <div class="detail-value"><span class="status-badge status-${currentEstimate.status}">${currentEstimate.status.toUpperCase()}</span></div>
          </div>
          <div class="status-actions">
            <button class="btn btn-primary btn-sm" onclick="updateStatus('reviewed')">Mark as Reviewed</button>
            <button class="btn btn-primary btn-sm" onclick="updateStatus('contacted')">Mark as Contacted</button>
            <button class="btn btn-primary btn-sm" onclick="updateStatus('converted')">Mark as Converted</button>
          </div>
          <div style="margin-top: 1rem;">
            <div class="detail-label">Admin Notes:</div>
            <textarea id="adminNotes" placeholder="Add notes about this estimate...">${currentEstimate.admin_notes || ''}</textarea>
            <button class="btn btn-primary btn-sm" style="margin-top: 0.5rem;" onclick="saveNotes()">Save Notes</button>
          </div>
        </div>
      `;

      document.getElementById('detailModal').classList.add('active');
    }

    function closeModal() {
      document.getElementById('detailModal').classList.remove('active');
      currentEstimate = null;
    }

    async function updateStatus(status) {
      if (!currentEstimate) return;

      try {
        const response = await fetch('/api/admin/estimates', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            id: currentEstimate.id,
            status: status
          })
        });

        if (!response.ok) throw new Error('Failed to update status');

        currentEstimate.status = status;
        const index = allEstimates.findIndex(e => e.id === currentEstimate.id);
        if (index !== -1) allEstimates[index].status = status;

        updateStats();
        renderEstimates();
        viewDetails(currentEstimate.id);

      } catch (error) {
        alert('Failed to update status. Please try again.');
        console.error('Error:', error);
      }
    }

    async function saveNotes() {
      if (!currentEstimate) return;

      const notes = document.getElementById('adminNotes').value;

      try {
        const response = await fetch('/api/admin/estimates', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            id: currentEstimate.id,
            admin_notes: notes
          })
        });

        if (!response.ok) throw new Error('Failed to save notes');

        currentEstimate.admin_notes = notes;
        const index = allEstimates.findIndex(e => e.id === currentEstimate.id);
        if (index !== -1) allEstimates[index].admin_notes = notes;

        alert('Notes saved successfully!');

      } catch (error) {
        alert('Failed to save notes. Please try again.');
        console.error('Error:', error);
      }
    }

    // Event Listeners
    document.getElementById('statusFilter').addEventListener('change', renderEstimates);
    document.getElementById('typeFilter').addEventListener('change', renderEstimates);
    document.getElementById('riskFilter').addEventListener('change', renderEstimates);
    document.getElementById('searchInput').addEventListener('input', renderEstimates);

    // Close modal on background click
    document.getElementById('detailModal').addEventListener('click', (e) => {
      if (e.target.id === 'detailModal') closeModal();
    });

    // Load estimates on page load
    loadEstimates();
  </script>
</body>
</html>
