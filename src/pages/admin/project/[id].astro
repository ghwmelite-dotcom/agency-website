---
export const prerender = false;
const { id } = Astro.params;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Project Details - Admin Portal</title>
  <style>
    :root {
      --color-bg: #0f172a;
      --color-surface: #1e293b;
      --color-surface-hover: #334155;
      --color-primary: #6366f1;
      --color-primary-hover: #4f46e5;
      --color-secondary: #ec4899;
      --color-text: #f1f5f9;
      --color-text-muted: #94a3b8;
      --color-border: #334155;
      --color-success: #10b981;
      --color-danger: #ef4444;
      --color-warning: #f59e0b;
      --color-info: #3b82f6;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--color-bg);
      color: var(--color-text);
      line-height: 1.6;
      min-height: 100vh;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }

    /* Header */
    .header {
      background: var(--color-surface);
      border-radius: 16px;
      padding: 2rem;
      margin-bottom: 2rem;
      border: 1px solid var(--color-border);
    }

    .header-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--color-primary);
      text-decoration: none;
      font-weight: 500;
      transition: color 0.2s;
    }

    .back-link:hover {
      color: var(--color-primary-hover);
    }

    .project-title {
      font-size: 2rem;
      font-weight: 700;
      color: var(--color-text);
      margin-bottom: 0.5rem;
    }

    .project-meta {
      display: flex;
      gap: 2rem;
      flex-wrap: wrap;
    }

    .meta-item {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .meta-label {
      font-size: 0.875rem;
      color: var(--color-text-muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .meta-value {
      font-size: 1rem;
      color: var(--color-text);
      font-weight: 600;
    }

    /* Tabs */
    .tabs {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 2rem;
      border-bottom: 2px solid var(--color-border);
      overflow-x: auto;
    }

    .tab-btn {
      background: none;
      border: none;
      color: var(--color-text-muted);
      font-size: 1rem;
      font-weight: 500;
      padding: 1rem 1.5rem;
      cursor: pointer;
      transition: all 0.2s;
      border-bottom: 3px solid transparent;
      white-space: nowrap;
    }

    .tab-btn:hover {
      color: var(--color-text);
      background: rgba(99, 102, 241, 0.1);
    }

    .tab-btn.active {
      color: var(--color-primary);
      border-bottom-color: var(--color-primary);
    }

    /* Tab Content */
    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
    }

    /* Milestone Section */
    .milestone-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    .milestone-header h2 {
      font-size: 1.5rem;
      color: var(--color-text);
    }

    .btn {
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
      border: none;
      font-size: 0.95rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-primary {
      background: var(--color-primary);
      color: white;
    }

    .btn-primary:hover {
      background: var(--color-primary-hover);
      transform: translateY(-1px);
    }

    .btn-secondary {
      background: var(--color-surface-hover);
      color: var(--color-text);
    }

    .btn-secondary:hover {
      background: #475569;
    }

    .btn-danger {
      background: var(--color-danger);
      color: white;
    }

    .btn-success {
      background: var(--color-success);
      color: white;
    }

    .btn-sm {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
    }

    /* Milestone List */
    .milestones-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .milestone-card {
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      padding: 1.5rem;
      transition: all 0.2s;
    }

    .milestone-card:hover {
      border-color: var(--color-primary);
      box-shadow: 0 4px 12px rgba(99, 102, 241, 0.1);
    }

    .milestone-card-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1rem;
    }

    .milestone-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 0.5rem;
    }

    .milestone-actions {
      display: flex;
      gap: 0.5rem;
    }

    .milestone-description {
      color: var(--color-text-muted);
      margin-bottom: 1rem;
      line-height: 1.6;
    }

    .milestone-footer {
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
      padding-top: 1rem;
      border-top: 1px solid var(--color-border);
    }

    .milestone-info {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      color: var(--color-text-muted);
    }

    .status-badge {
      padding: 0.25rem 0.75rem;
      border-radius: 50px;
      font-size: 0.875rem;
      font-weight: 500;
    }

    .status-badge.pending {
      background: rgba(251, 191, 36, 0.2);
      color: #fbbf24;
    }

    .status-badge.in-progress {
      background: rgba(59, 130, 246, 0.2);
      color: #3b82f6;
    }

    .status-badge.completed {
      background: rgba(16, 185, 129, 0.2);
      color: #10b981;
    }

    .priority-badge {
      padding: 0.25rem 0.75rem;
      border-radius: 50px;
      font-size: 0.875rem;
      font-weight: 500;
    }

    .priority-badge.low {
      background: rgba(148, 163, 184, 0.2);
      color: #94a3b8;
    }

    .priority-badge.medium {
      background: rgba(251, 191, 36, 0.2);
      color: #fbbf24;
    }

    .priority-badge.high {
      background: rgba(239, 68, 68, 0.2);
      color: #ef4444;
    }

    /* Modal */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      z-index: 1000;
      padding: 2rem;
      overflow-y: auto;
    }

    .modal.active {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .modal-content {
      background: var(--color-surface);
      border-radius: 16px;
      padding: 2rem;
      max-width: 600px;
      width: 100%;
      border: 1px solid var(--color-border);
      max-height: 90vh;
      overflow-y: auto;
    }

    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
    }

    .modal-header h2 {
      font-size: 1.5rem;
      color: var(--color-text);
    }

    .close-btn {
      background: none;
      border: none;
      color: var(--color-text-muted);
      font-size: 1.5rem;
      cursor: pointer;
      padding: 0;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
      transition: all 0.2s;
    }

    .close-btn:hover {
      background: var(--color-surface-hover);
      color: var(--color-text);
    }

    /* Form */
    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-label {
      display: block;
      font-weight: 500;
      margin-bottom: 0.5rem;
      color: var(--color-text);
    }

    .form-input,
    .form-textarea,
    .form-select {
      width: 100%;
      padding: 0.75rem;
      background: var(--color-bg);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      color: var(--color-text);
      font-size: 1rem;
      transition: all 0.2s;
    }

    .form-input:focus,
    .form-textarea:focus,
    .form-select:focus {
      outline: none;
      border-color: var(--color-primary);
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    .form-textarea {
      resize: vertical;
      min-height: 100px;
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    .modal-footer {
      display: flex;
      justify-content: flex-end;
      gap: 1rem;
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid var(--color-border);
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      color: var(--color-text-muted);
    }

    .empty-state svg {
      width: 80px;
      height: 80px;
      margin-bottom: 1rem;
      opacity: 0.5;
    }

    .empty-state h3 {
      font-size: 1.25rem;
      margin-bottom: 0.5rem;
      color: var(--color-text);
    }

    /* Loading State */
    .loading-state {
      text-align: center;
      padding: 4rem 2rem;
    }

    .spinner {
      width: 48px;
      height: 48px;
      border: 4px solid var(--color-border);
      border-top-color: var(--color-primary);
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 1rem;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* Deliverables */
    .deliverables-list {
      margin-top: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .deliverable-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.5rem;
      background: var(--color-bg);
      border-radius: 6px;
    }

    .deliverable-checkbox {
      width: 18px;
      height: 18px;
    }

    .deliverable-text {
      flex: 1;
      color: var(--color-text-muted);
    }

    .deliverable-input-group {
      display: flex;
      gap: 0.5rem;
      margin-top: 0.5rem;
    }

    .deliverable-input-group input {
      flex: 1;
    }

    /* Checkbox Label */
    .checkbox-label {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      cursor: pointer;
      color: var(--color-text);
    }

    .checkbox-label input[type="checkbox"] {
      width: 18px;
      height: 18px;
      cursor: pointer;
    }

    /* Filter Buttons */
    .file-filters {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .filter-btn {
      padding: 0.5rem 1rem;
      border: 1px solid var(--color-border);
      background: var(--color-surface);
      color: var(--color-text-muted);
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.875rem;
      transition: all 0.2s;
    }

    .filter-btn:hover {
      background: var(--color-surface-hover);
      color: var(--color-text);
    }

    .filter-btn.active {
      background: var(--color-primary);
      color: white;
      border-color: var(--color-primary);
    }

    /* Update Card */
    .update-card {
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      transition: all 0.2s;
    }

    .update-card:hover {
      border-color: var(--color-primary);
      transform: translateY(-2px);
    }

    .update-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1rem;
    }

    .update-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 0.5rem;
    }

    .update-meta {
      display: flex;
      gap: 1rem;
      font-size: 0.875rem;
      color: var(--color-text-muted);
      margin-bottom: 0.5rem;
    }

    .update-type-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 500;
      text-transform: uppercase;
    }

    .update-type-progress {
      background: rgba(16, 185, 129, 0.2);
      color: var(--color-success);
    }

    .update-type-blocker {
      background: rgba(239, 68, 68, 0.2);
      color: var(--color-danger);
    }

    .update-type-milestone {
      background: rgba(99, 102, 241, 0.2);
      color: var(--color-primary);
    }

    .update-type-delivery {
      background: rgba(236, 72, 153, 0.2);
      color: var(--color-secondary);
    }

    .update-type-other {
      background: rgba(148, 163, 184, 0.2);
      color: var(--color-text-muted);
    }

    .update-content {
      color: var(--color-text);
      line-height: 1.6;
      margin-bottom: 1rem;
      white-space: pre-wrap;
    }

    .update-actions {
      display: flex;
      gap: 0.5rem;
    }

    /* File Card */
    .file-card {
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      display: flex;
      gap: 1.5rem;
      align-items: flex-start;
      transition: all 0.2s;
    }

    .file-card:hover {
      border-color: var(--color-primary);
      transform: translateY(-2px);
    }

    .file-icon {
      width: 48px;
      height: 48px;
      border-radius: 8px;
      background: rgba(99, 102, 241, 0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-primary);
      flex-shrink: 0;
    }

    .file-details {
      flex: 1;
      min-width: 0;
    }

    .file-name {
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 0.5rem;
    }

    .file-meta {
      display: flex;
      gap: 1rem;
      font-size: 0.875rem;
      color: var(--color-text-muted);
      margin-bottom: 0.5rem;
      flex-wrap: wrap;
    }

    .file-description {
      color: var(--color-text-muted);
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

    .file-actions {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .category-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 500;
      background: rgba(99, 102, 241, 0.2);
      color: var(--color-primary);
    }

    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      color: var(--color-text-muted);
    }

    .empty-state svg {
      width: 64px;
      height: 64px;
      margin: 0 auto 1rem;
      opacity: 0.5;
    }

    @media (max-width: 768px) {
      .form-row {
        grid-template-columns: 1fr;
      }

      .milestone-footer {
        flex-direction: column;
        gap: 0.75rem;
      }

      .container {
        padding: 1rem;
      }

      .file-card {
        flex-direction: column;
      }

      .update-header {
        flex-direction: column;
        gap: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <div class="header-top">
        <a href="/admin/clients" class="back-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Back to Clients
        </a>
      </div>

      <div id="project-header">
        <div class="loading-state">
          <div class="spinner"></div>
          <p>Loading project...</p>
        </div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="tabs">
      <button class="tab-btn active" data-tab="overview">Overview</button>
      <button class="tab-btn" data-tab="milestones">Milestones</button>
      <button class="tab-btn" data-tab="updates">Updates</button>
      <button class="tab-btn" data-tab="files">Files</button>
    </div>

    <!-- Tab Contents -->
    <div class="tab-content active" data-content="overview">
      <div class="loading-state">
        <div class="spinner"></div>
        <p>Loading overview...</p>
      </div>
    </div>

    <div class="tab-content" data-content="milestones">
      <div class="milestone-header">
        <h2>Project Milestones</h2>
        <button class="btn btn-primary" id="add-milestone-btn">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 5v14M5 12h14"/>
          </svg>
          Add Milestone
        </button>
      </div>

      <div id="milestones-container">
        <div class="loading-state">
          <div class="spinner"></div>
          <p>Loading milestones...</p>
        </div>
      </div>
    </div>

    <div class="tab-content" data-content="updates">
      <div class="milestone-header">
        <h2>Project Updates</h2>
        <button class="btn btn-primary" id="add-update-btn">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 20px; height: 20px;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add Update
        </button>
      </div>
      <div id="updates-list"></div>
    </div>

    <div class="tab-content" data-content="files">
      <div class="milestone-header">
        <h2>Project Files</h2>
        <button class="btn btn-primary" id="add-file-btn">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 20px; height: 20px;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          Add File
        </button>
      </div>

      <div class="file-filters" style="margin-bottom: 1.5rem;">
        <button class="filter-btn active" data-category="all">All</button>
        <button class="filter-btn" data-category="designs">Designs</button>
        <button class="filter-btn" data-category="documents">Documents</button>
        <button class="filter-btn" data-category="code">Code</button>
        <button class="filter-btn" data-category="deliverables">Deliverables</button>
        <button class="filter-btn" data-category="general">General</button>
      </div>

      <div id="files-list"></div>
    </div>
  </div>

  <!-- Milestone Modal -->
  <div class="modal" id="milestone-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="modal-title">Add Milestone</h2>
        <button class="close-btn" id="close-modal-btn">&times;</button>
      </div>

      <form id="milestone-form">
        <input type="hidden" id="milestone-id">

        <div class="form-group">
          <label class="form-label" for="milestone-title">Title *</label>
          <input type="text" id="milestone-title" class="form-input" required>
        </div>

        <div class="form-group">
          <label class="form-label" for="milestone-description">Description</label>
          <textarea id="milestone-description" class="form-textarea"></textarea>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label class="form-label" for="milestone-due-date">Due Date</label>
            <input type="date" id="milestone-due-date" class="form-input">
          </div>

          <div class="form-group">
            <label class="form-label" for="milestone-status">Status</label>
            <select id="milestone-status" class="form-select">
              <option value="pending">Pending</option>
              <option value="in-progress">In Progress</option>
              <option value="completed">Completed</option>
            </select>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label class="form-label" for="milestone-priority">Priority</label>
            <select id="milestone-priority" class="form-select">
              <option value="low">Low</option>
              <option value="medium" selected>Medium</option>
              <option value="high">High</option>
            </select>
          </div>

          <div class="form-group">
            <label class="form-label" for="milestone-order">Display Order</label>
            <input type="number" id="milestone-order" class="form-input" value="0" min="0">
          </div>
        </div>

        <div class="form-group">
          <label class="form-label">Deliverables</label>
          <div id="deliverables-list"></div>
          <div class="deliverable-input-group">
            <input type="text" id="new-deliverable" class="form-input" placeholder="Add a deliverable...">
            <button type="button" class="btn btn-secondary btn-sm" id="add-deliverable-btn">Add</button>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="cancel-btn">Cancel</button>
          <button type="submit" class="btn btn-primary" id="save-milestone-btn">Save Milestone</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Update Modal -->
  <div class="modal" id="update-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="update-modal-title">Add Update</h2>
        <button class="close-btn" id="close-update-modal-btn">&times;</button>
      </div>

      <form id="update-form">
        <input type="hidden" id="update-id">

        <div class="form-group">
          <label class="form-label" for="update-title">Title *</label>
          <input type="text" id="update-title" class="form-input" required>
        </div>

        <div class="form-group">
          <label class="form-label" for="update-type">Update Type</label>
          <select id="update-type" class="form-select">
            <option value="progress">Progress Update</option>
