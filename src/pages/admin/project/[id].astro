  <script define:vars={{ projectId: id }}>
    // Check admin authentication
    const adminToken = localStorage.getItem('admin_token');
    if (!adminToken) {
      window.location.href = '/admin/login';
    }

    let currentProject = null;
    let currentMilestones = [];
    let editingMilestoneId = null;
    let deliverables = [];
    let currentUpdates = [];
    let editingUpdateId = null;
    let currentFiles = [];
    let editingFileId = null;
    let currentFileFilter = 'all';

    // Fetch project details
    async function loadProject() {
      try {
        const response = await fetch(`/api/admin/client-projects?id=${projectId}`, {
          headers: {
            'Authorization': `Bearer ${adminToken}`
          }
        });
        const data = await response.json();

        if (data.success && data.projects.length > 0) {
          currentProject = data.projects[0];
          renderProjectHeader();
          renderOverview();
        }
      } catch (error) {
        console.error('Error loading project:', error);
      }
    }

    // Render project header
    function renderProjectHeader() {
      if (!currentProject) return;

      document.getElementById('project-header').innerHTML = `
        <h1 class="project-title">${escapeHtml(currentProject.project_name)}</h1>
        <div class="project-meta">
          <div class="meta-item">
            <span class="meta-label">Client</span>
            <span class="meta-value">${escapeHtml(currentProject.company_name || 'N/A')}</span>
          </div>
          <div class="meta-item">
            <span class="meta-label">Type</span>
            <span class="meta-value">${escapeHtml(currentProject.project_type)}</span>
          </div>
          <div class="meta-item">
            <span class="meta-label">Status</span>
            <span class="meta-value">
              <span class="status-badge ${currentProject.status}">${formatStatus(currentProject.status)}</span>
            </span>
          </div>
          <div class="meta-item">
            <span class="meta-label">Progress</span>
            <span class="meta-value">${currentProject.progress_percentage || 0}%</span>
          </div>
        </div>
      `;
    }

    // Render overview
    function renderOverview() {
      const overviewContent = document.querySelector('[data-content="overview"]');
      overviewContent.innerHTML = `
        <div style="background: var(--color-surface); border-radius: 12px; padding: 2rem; border: 1px solid var(--color-border);">
          <h2 style="color: var(--color-text); margin-bottom: 1.5rem;">Project Information</h2>

          ${currentProject.description ? `
            <div style="margin-bottom: 1.5rem;">
              <h3 style="color: var(--color-text-muted); font-size: 0.875rem; margin-bottom: 0.5rem; text-transform: uppercase; letter-spacing: 0.05em;">Description</h3>
              <p style="color: var(--color-text);">${escapeHtml(currentProject.description)}</p>
            </div>
          ` : ''}

          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem;">
            ${currentProject.start_date ? `
              <div>
                <h3 style="color: var(--color-text-muted); font-size: 0.875rem; margin-bottom: 0.5rem; text-transform: uppercase; letter-spacing: 0.05em;">Start Date</h3>
                <p style="color: var(--color-text); font-weight: 600;">${new Date(currentProject.start_date).toLocaleDateString()}</p>
              </div>
            ` : ''}

            ${currentProject.estimated_completion ? `
              <div>
                <h3 style="color: var(--color-text-muted); font-size: 0.875rem; margin-bottom: 0.5rem; text-transform: uppercase; letter-spacing: 0.05em;">Estimated Completion</h3>
                <p style="color: var(--color-text); font-weight: 600;">${new Date(currentProject.estimated_completion).toLocaleDateString()}</p>
              </div>
            ` : ''}

            ${currentProject.budget ? `
              <div>
                <h3 style="color: var(--color-text-muted); font-size: 0.875rem; margin-bottom: 0.5rem; text-transform: uppercase; letter-spacing: 0.05em;">Budget</h3>
                <p style="color: var(--color-text); font-weight: 600;">${escapeHtml(currentProject.budget)}</p>
              </div>
            ` : ''}
          </div>
        </div>
      `;
    }

    // Load milestones
    async function loadMilestones() {
      try {
        const response = await fetch(`/api/admin/milestones?project_id=${projectId}`, {
          headers: {
            'Authorization': `Bearer ${adminToken}`
          }
        });
        const data = await response.json();

        if (data.success) {
          currentMilestones = data.milestones;
          renderMilestones();
        }
      } catch (error) {
        console.error('Error loading milestones:', error);
        document.getElementById('milestones-container').innerHTML = `
          <div class="empty-state">
            <p style="color: var(--color-danger);">Failed to load milestones</p>
          </div>
        `;
      }
    }

    // Render milestones
    function renderMilestones() {
      const container = document.getElementById('milestones-container');

      if (currentMilestones.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            <h3>No milestones yet</h3>
            <p>Add your first milestone to start tracking project progress</p>
          </div>
        `;
        return;
      }

      container.innerHTML = `
        <div class="milestones-list">
          ${currentMilestones.map(milestone => `
            <div class="milestone-card">
              <div class="milestone-card-header">
                <div>
                  <h3 class="milestone-title">${escapeHtml(milestone.title)}</h3>
                  ${milestone.description ? `<p class="milestone-description">${escapeHtml(milestone.description)}</p>` : ''}
                </div>
                <div class="milestone-actions">
                  <button class="btn btn-secondary btn-sm" onclick="editMilestone(${milestone.id})">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                      <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                    </svg>
                    Edit
                  </button>
                  <button class="btn btn-danger btn-sm" onclick="deleteMilestone(${milestone.id})">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="3 6 5 6 21 6"/>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                    </svg>
                    Delete
                  </button>
                </div>
              </div>

              ${milestone.deliverables ? renderDeliverables(JSON.parse(milestone.deliverables)) : ''}

              <div class="milestone-footer">
                <div class="milestone-info">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                  </svg>
                  ${milestone.due_date ? new Date(milestone.due_date).toLocaleDateString() : 'No due date'}
                </div>
                <div class="milestone-info">
                  <span class="status-badge ${milestone.status || 'pending'}">${formatStatus(milestone.status || 'pending')}</span>
                </div>
                <div class="milestone-info">
                  <span class="priority-badge ${milestone.priority || 'medium'}">${milestone.priority || 'Medium'}</span>
                </div>
              </div>
            </div>
          `).join('')}
        </div>
      `;
    }

    function renderDeliverables(items) {
      if (!items || items.length === 0) return '';

      return `
        <div class="deliverables-list">
          ${items.map((item, idx) => `
            <div class="deliverable-item">
              <input type="checkbox" ${item.completed ? 'checked' : ''} disabled class="deliverable-checkbox">
              <span class="deliverable-text" style="${item.completed ? 'text-decoration: line-through;' : ''}">${escapeHtml(item.text)}</span>
            </div>
          `).join('')}
        </div>
      `;
    }

    // Modal controls
    document.getElementById('add-milestone-btn').addEventListener('click', () => {
      editingMilestoneId = null;
      deliverables = [];
      document.getElementById('modal-title').textContent = 'Add Milestone';
      document.getElementById('milestone-form').reset();
      document.getElementById('deliverables-list').innerHTML = '';
      document.getElementById('milestone-modal').classList.add('active');
    });

    document.getElementById('close-modal-btn').addEventListener('click', closeModal);
    document.getElementById('cancel-btn').addEventListener('click', closeModal);

    function closeModal() {
      document.getElementById('milestone-modal').classList.remove('active');
      editingMilestoneId = null;
      deliverables = [];
    }

    // Edit milestone
    window.editMilestone = async function(id) {
      const milestone = currentMilestones.find(m => m.id === id);
      if (!milestone) return;

      editingMilestoneId = id;
      document.getElementById('modal-title').textContent = 'Edit Milestone';
      document.getElementById('milestone-id').value = id;
      document.getElementById('milestone-title').value = milestone.title || '';
      document.getElementById('milestone-description').value = milestone.description || '';
      document.getElementById('milestone-due-date').value = milestone.due_date || '';
      document.getElementById('milestone-status').value = milestone.status || 'pending';
      document.getElementById('milestone-priority').value = milestone.priority || 'medium';
      document.getElementById('milestone-order').value = milestone.display_order || 0;

      deliverables = milestone.deliverables ? JSON.parse(milestone.deliverables) : [];
      renderDeliverablesInForm();

      document.getElementById('milestone-modal').classList.add('active');
    };

    // Delete milestone
    window.deleteMilestone = async function(id) {
      if (!confirm('Are you sure you want to delete this milestone?')) return;

      try {
        const response = await fetch(`/api/admin/milestones?id=${id}`, {
          method: 'DELETE',
          headers: {
            'Authorization': `Bearer ${adminToken}`
          }
        });

        const data = await response.json();

        if (data.success) {
          await loadMilestones();
        } else {
          alert('Failed to delete milestone');
        }
      } catch (error) {
        console.error('Error deleting milestone:', error);
        alert('Failed to delete milestone');
      }
    };

    // Deliverables management
    document.getElementById('add-deliverable-btn').addEventListener('click', () => {
      const input = document.getElementById('new-deliverable');
      const text = input.value.trim();

      if (text) {
        deliverables.push({ text, completed: false });
        input.value = '';
        renderDeliverablesInForm();
      }
    });

    function renderDeliverablesInForm() {
      const container = document.getElementById('deliverables-list');

      container.innerHTML = deliverables.map((item, idx) => `
        <div class="deliverable-item">
          <input type="checkbox" ${item.completed ? 'checked' : ''} onchange="toggleDeliverable(${idx})" class="deliverable-checkbox">
          <span class="deliverable-text" style="${item.completed ? 'text-decoration: line-through;' : ''}">${escapeHtml(item.text)}</span>
          <button type="button" onclick="removeDeliverable(${idx})" class="btn btn-danger btn-sm" style="margin-left: auto; padding: 0.25rem 0.5rem;">
            &times;
          </button>
        </div>
      `).join('');
    }

    window.toggleDeliverable = function(idx) {
      deliverables[idx].completed = !deliverables[idx].completed;
      renderDeliverablesInForm();
    };

    window.removeDeliverable = function(idx) {
      deliverables.splice(idx, 1);
      renderDeliverablesInForm();
    };

    // Save milestone
    document.getElementById('milestone-form').addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = {
        project_id: projectId,
        title: document.getElementById('milestone-title').value,
        description: document.getElementById('milestone-description').value,
        due_date: document.getElementById('milestone-due-date').value,
        status: document.getElementById('milestone-status').value,
        priority: document.getElementById('milestone-priority').value,
        display_order: parseInt(document.getElementById('milestone-order').value),
        deliverables: deliverables
      };

      if (editingMilestoneId) {
        formData.id = editingMilestoneId;
      }

      try {
        const response = await fetch('/api/admin/milestones', {
          method: editingMilestoneId ? 'PUT' : 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${adminToken}`
          },
          body: JSON.stringify(formData)
        });

        const data = await response.json();

        if (data.success) {
          closeModal();
          await loadMilestones();
        } else {
          alert(data.error || 'Failed to save milestone');
        }
      } catch (error) {
        console.error('Error saving milestone:', error);
        alert('Failed to save milestone');
      }
    });

    // ===== PROJECT UPDATES FUNCTIONS =====

    // Load updates
    async function loadUpdates() {
      try {
        const response = await fetch(`/api/admin/project-updates?project_id=${projectId}`, {
          headers: { 'Authorization': `Bearer ${adminToken}` }
        });
        const data = await response.json();

        if (data.success) {
          currentUpdates = data.updates || [];
          renderUpdates();
        }
      } catch (error) {
        console.error('Error loading updates:', error);
      }
    }

    // Render updates list
    function renderUpdates() {
      const container = document.getElementById('updates-list');
      if (currentUpdates.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
            <h3>No updates yet</h3>
            <p>Create your first project update to keep everyone informed</p>
          </div>
        `;
        return;
      }

      container.innerHTML = currentUpdates.map(update => `
        <div class="update-card">
          <div>
            <div class="update-title">${escapeHtml(update.title)}</div>
            <div class="update-meta">
              <span class="update-type-badge update-type-${update.update_type}">${update.update_type.replace('_', ' ')}</span>
              <span>${new Date(update.created_at).toLocaleDateString()}</span>
              <span>by ${escapeHtml(update.created_by || 'Admin')}</span>
              ${update.is_visible_to_client ? '<span style="color: var(--color-success);">üëÅ Visible to client</span>' : '<span style="color: var(--color-text-muted);">üîí Internal only</span>'}
            </div>
            <div class="update-content">${escapeHtml(update.content)}</div>
            <div class="update-actions">
              <button class="btn btn-secondary btn-sm" onclick="editUpdate(${update.id})">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 16px; height: 16px;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit
              </button>
              <button class="btn btn-danger btn-sm" onclick="deleteUpdate(${update.id})">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 16px; height: 16px;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete
              </button>
            </div>
          </div>
        </div>
      `).join('');
    }

    // Edit update
    window.editUpdate = function(id) {
      const update = currentUpdates.find(u => u.id === id);
      if (!update) return;

      editingUpdateId = id;
      document.getElementById('update-modal-title').textContent = 'Edit Update';
      document.getElementById('update-id').value = id;
      document.getElementById('update-title').value = update.title;
      document.getElementById('update-type').value = update.update_type;
      document.getElementById('update-content').value = update.content;
      document.getElementById('update-visible').checked = update.is_visible_to_client;
      document.getElementById('update-modal').style.display = 'block';
    };

    // Delete update
    window.deleteUpdate = async function(id) {
      if (!confirm('Are you sure you want to delete this update?')) return;

      try {
        const response = await fetch(`/api/admin/project-updates?id=${id}`, {
          method: 'DELETE',
          headers: { 'Authorization': `Bearer ${adminToken}` }
        });
        const data = await response.json();

        if (data.success) {
          await loadUpdates();
        } else {
          alert(data.error || 'Failed to delete update');
        }
      } catch (error) {
        console.error('Error deleting update:', error);
        alert('Failed to delete update');
      }
    };

    // ===== PROJECT FILES FUNCTIONS =====

    // Load files
    async function loadFiles() {
      try {
        const response = await fetch(`/api/admin/project-files?project_id=${projectId}`, {
          headers: { 'Authorization': `Bearer ${adminToken}` }
        });
        const data = await response.json();

        if (data.success) {
          currentFiles = data.files || [];
          renderFiles();
        }
      } catch (error) {
        console.error('Error loading files:', error);
      }
    }

    // Render files list
    function renderFiles() {
      const container = document.getElementById('files-list');
      let filesToShow = currentFiles;

      if (currentFileFilter !== 'all') {
        filesToShow = currentFiles.filter(f => f.category === currentFileFilter);
      }

      if (filesToShow.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            <h3>No files ${currentFileFilter !== 'all' ? 'in this category' : 'yet'}</h3>
            <p>Add files to share deliverables and resources with your team</p>
          </div>
        `;
        return;
      }

      container.innerHTML = filesToShow.map(file => `
        <div class="file-card">
          <div class="file-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 24px; height: 24px;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="file-details">
            <div class="file-name">${escapeHtml(file.original_filename)}</div>
            <div class="file-meta">
              <span class="category-badge">${file.category}</span>
              ${file.file_type ? `<span>${escapeHtml(file.file_type)}</span>` : ''}
              ${file.file_size ? `<span>${formatFileSize(file.file_size)}</span>` : ''}
              <span>${new Date(file.created_at).toLocaleDateString()}</span>
              ${file.is_visible_to_client ? '<span style="color: var(--color-success);">üëÅ Visible to client</span>' : '<span style="color: var(--color-text-muted);">üîí Internal only</span>'}
            </div>
            ${file.description ? `<div class="file-description">${escapeHtml(file.description)}</div>` : ''}
            <div class="file-actions">
              <a href="${file.file_url}" target="_blank" class="btn btn-primary btn-sm">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 16px; height: 16px;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
                Download
              </a>
              <button class="btn btn-secondary btn-sm" onclick="editFile(${file.id})">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 16px; height: 16px;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit
              </button>
              <button class="btn btn-danger btn-sm" onclick="deleteFile(${file.id})">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 16px; height: 16px;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete
              </button>
            </div>
          </div>
        </div>
      `).join('');
    }

    // Edit file
    window.editFile = function(id) {
      const file = currentFiles.find(f => f.id === id);
      if (!file) return;

      editingFileId = id;
      document.getElementById('file-modal-title').textContent = 'Edit File';
      document.getElementById('file-id').value = id;
      document.getElementById('file-url').value = file.file_url;
      document.getElementById('file-name').value = file.original_filename;
      document.getElementById('file-category').value = file.category;
      document.getElementById('file-type').value = file.file_type || '';
      document.getElementById('file-description').value = file.description || '';
      document.getElementById('file-visible').checked = file.is_visible_to_client;
      document.getElementById('file-modal').style.display = 'block';
    };

    // Delete file
    window.deleteFile = async function(id) {
      if (!confirm('Are you sure you want to delete this file?')) return;

      try {
        const response = await fetch(`/api/admin/project-files?id=${id}`, {
          method: 'DELETE',
          headers: { 'Authorization': `Bearer ${adminToken}` }
        });
        const data = await response.json();

        if (data.success) {
          await loadFiles();
        } else {
          alert(data.error || 'Failed to delete file');
        }
      } catch (error) {
        console.error('Error deleting file:', error);
        alert('Failed to delete file');
      }
    };

    // Format file size
    function formatFileSize(bytes) {
      if (!bytes) return '';
      const sizes = ['B', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(1024));
      return Math.round(bytes / Math.pow(1024, i) * 100) / 100 + ' ' + sizes[i];
    }

    // ===== MODAL EVENT HANDLERS =====

    // Update modal handlers
    document.getElementById('add-update-btn').addEventListener('click', () => {
      editingUpdateId = null;
      document.getElementById('update-modal-title').textContent = 'Add Update';
      document.getElementById('update-form').reset();
      document.getElementById('update-id').value = '';
      document.getElementById('update-modal').style.display = 'block';
    });

    document.getElementById('close-update-modal-btn').addEventListener('click', () => {
      document.getElementById('update-modal').style.display = 'none';
    });

    document.getElementById('cancel-update-btn').addEventListener('click', () => {
      document.getElementById('update-modal').style.display = 'none';
    });

    document.getElementById('update-form').addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = {
        project_id: projectId,
        title: document.getElementById('update-title').value,
        content: document.getElementById('update-content').value,
        update_type: document.getElementById('update-type').value,
        is_visible_to_client: document.getElementById('update-visible').checked ? 1 : 0,
        created_by: 'Admin'
      };

      if (editingUpdateId) {
        formData.id = editingUpdateId;
      }

      try {
        const response = await fetch('/api/admin/project-updates', {
          method: editingUpdateId ? 'PUT' : 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${adminToken}`
          },
          body: JSON.stringify(formData)
        });

        const data = await response.json();

        if (data.success) {
          document.getElementById('update-modal').style.display = 'none';
          await loadUpdates();
        } else {
          alert(data.error || 'Failed to save update');
        }
      } catch (error) {
        console.error('Error saving update:', error);
        alert('Failed to save update');
      }
    });

    // File modal handlers
    document.getElementById('add-file-btn').addEventListener('click', () => {
      editingFileId = null;
      document.getElementById('file-modal-title').textContent = 'Add File';
      document.getElementById('file-form').reset();
      document.getElementById('file-id').value = '';
      document.getElementById('file-modal').style.display = 'block';
    });

    document.getElementById('close-file-modal-btn').addEventListener('click', () => {
      document.getElementById('file-modal').style.display = 'none';
    });

    document.getElementById('cancel-file-btn').addEventListener('click', () => {
      document.getElementById('file-modal').style.display = 'none';
    });

    document.getElementById('file-form').addEventListener('submit', async (e) => {
      e.preventDefault();

      const fileUrl = document.getElementById('file-url').value;
      const fileName = document.getElementById('file-name').value;

      const formData = {
        project_id: projectId,
        filename: fileName.replace(/[^a-z0-9.]/gi, '_'),
        original_filename: fileName,
        file_url: fileUrl,
        file_type: document.getElementById('file-type').value,
        category: document.getElementById('file-category').value,
        description: document.getElementById('file-description').value,
        is_visible_to_client: document.getElementById('file-visible').checked ? 1 : 0,
        uploaded_by: 'Admin'
      };

      if (editingFileId) {
        formData.id = editingFileId;
      }

      try {
        const response = await fetch('/api/admin/project-files', {
          method: editingFileId ? 'PUT' : 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${adminToken}`
          },
          body: JSON.stringify(formData)
        });

        const data = await response.json();

        if (data.success) {
          document.getElementById('file-modal').style.display = 'none';
          await loadFiles();
        } else {
          alert(data.error || 'Failed to save file');
        }
      } catch (error) {
        console.error('Error saving file:', error);
        alert('Failed to save file');
      }
    });

    // File filter handlers
    document.querySelectorAll('.filter-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        currentFileFilter = btn.dataset.category;
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        renderFiles();
      });
    });

    // Tab switching
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const tab = btn.dataset.tab;

        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

        btn.classList.add('active');
        document.querySelector(`[data-content="${tab}"]`).classList.add('active');

        if (tab === 'milestones' && currentMilestones.length === 0) {
          loadMilestones();
        } else if (tab === 'updates' && currentUpdates.length === 0) {
          loadUpdates();
        } else if (tab === 'files' && currentFiles.length === 0) {
          loadFiles();
        }
      });
    });

    // Utility functions
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function formatStatus(status) {
      return status.replace(/_/g, ' ').replace(/-/g, ' ');
    }

    // Initialize
    loadProject();
    loadMilestones();
  </script>
</body>
