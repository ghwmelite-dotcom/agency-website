---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Reset Password" description="Reset your admin password">
  <main class="login-page">
    <div class="login-background">
      <div class="gradient-orb orb-1"></div>
      <div class="gradient-orb orb-2"></div>
      <div class="gradient-orb orb-3"></div>
    </div>

    <div class="login-container">
      <div class="login-card glass">
        <div class="login-header">
          <div class="header-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 16v-4M12 8h.01"/>
            </svg>
          </div>
          <h1>Reset Password</h1>
          <p>Enter your username to reset your password</p>
        </div>

        <form class="login-form" id="reset-form">
          <div class="form-group">
            <label for="username">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
              Username
            </label>
            <input
              type="text"
              id="username"
              name="username"
              required
              autocomplete="username"
              placeholder="Enter your username"
            />
          </div>

          <div class="info-box">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="16" x2="12" y2="12"/>
              <line x1="12" y1="8" x2="12.01" y2="8"/>
            </svg>
            <p>A password reset token will be generated. You can use it to set a new password.</p>
          </div>

          <button type="submit" class="btn btn-primary btn-full">
            <span>Request Reset</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
          </button>

          <div class="form-status" id="reset-status"></div>
        </form>

        <div class="reset-token-display" id="token-display" style="display: none;">
          <h3>Password Reset Token</h3>
          <div class="token-box">
            <code id="reset-token"></code>
            <button type="button" class="btn-copy" id="copy-token" aria-label="Copy token">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
              </svg>
            </button>
          </div>
          <p class="token-info">Copy this token and use it on the confirm page. It expires in 1 hour.</p>
          <a href="/admin/reset-password/confirm" class="btn btn-secondary btn-full">
            Continue to Reset Password →
          </a>
        </div>

        <div class="login-footer">
          <a href="/admin/login" class="back-link">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            Back to login
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .login-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    padding: 2rem;
  }

  .login-background {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    z-index: 0;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.6;
    animation: float 20s infinite ease-in-out;
  }

  .orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.8), transparent);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(236, 72, 153, 0.6), transparent);
    bottom: -10%;
    right: -10%;
    animation-delay: 7s;
  }

  .orb-3 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.7), transparent);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 14s;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -30px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
  }

  .login-container {
    width: 100%;
    max-width: 520px;
    position: relative;
    z-index: 1;
    animation: slideUp 0.6s ease-out;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .login-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 3rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(255, 255, 255, 0.2) inset;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  :global(.dark) .login-card {
    background: rgba(17, 24, 39, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .login-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .header-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: 20px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    margin-bottom: 1.5rem;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
  }

  .login-header h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
    font-weight: 700;
  }

  .login-header p {
    color: var(--color-text-muted);
    font-size: 1rem;
  }

  .login-form {
    margin-bottom: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--color-text);
    font-size: 0.95rem;
  }

  .form-group label svg {
    color: var(--color-primary);
  }

  .form-group input {
    width: 100%;
    padding: 1rem 1.25rem;
    border: 2px solid var(--color-border);
    border-radius: 12px;
    background: var(--color-bg);
    color: var(--color-text);
    font-size: 1rem;
    font-family: var(--font-sans);
    transition: all var(--transition-base);
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
    transform: translateY(-2px);
  }

  .info-box {
    display: flex;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 12px;
    color: #3b82f6;
    margin-bottom: 1.5rem;
  }

  .info-box svg {
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .info-box p {
    font-size: 0.875rem;
    line-height: 1.5;
    margin: 0;
  }

  .btn-full {
    width: 100%;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-size: 1.05rem;
    font-weight: 600;
    border-radius: 12px;
    transition: all var(--transition-base);
  }

  .btn-full:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
  }

  .form-status {
    margin-top: 1rem;
    padding: 1rem;
    border-radius: 12px;
    text-align: center;
    font-size: 0.95rem;
    display: none;
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .form-status.success {
    display: block;
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
    border: 2px solid rgba(16, 185, 129, 0.3);
  }

  .form-status.error {
    display: block;
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    border: 2px solid rgba(239, 68, 68, 0.3);
  }

  .reset-token-display {
    padding: 1.5rem;
    background: var(--color-bg-alt);
    border-radius: 16px;
    border: 2px solid var(--color-border);
    margin-bottom: 2rem;
    animation: slideDown 0.5s ease-out;
  }

  .reset-token-display h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .token-box {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background: var(--color-surface);
    border: 2px solid var(--color-primary);
    border-radius: 12px;
    margin-bottom: 1rem;
  }

  .token-box code {
    flex: 1;
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
    color: var(--color-primary);
    word-break: break-all;
  }

  .btn-copy {
    flex-shrink: 0;
    padding: 0.5rem;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-copy:hover {
    background: #5558d9;
    transform: scale(1.05);
  }

  .token-info {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .login-footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: all var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  @media (max-width: 640px) {
    .login-page {
      padding: 1rem;
    }

    .login-card {
      padding: 2rem 1.5rem;
    }

    .header-icon {
      width: 64px;
      height: 64px;
    }

    .login-header h1 {
      font-size: 1.75rem;
    }

    .token-box code {
      font-size: 0.75rem;
    }
  }
</style>

<script>
  function initResetPassword() {
    const form = document.getElementById('reset-form') as HTMLFormElement;
    const status = document.getElementById('reset-status') as HTMLDivElement;
    const tokenDisplay = document.getElementById('token-display') as HTMLDivElement;
    const resetTokenElement = document.getElementById('reset-token');
    const copyButton = document.getElementById('copy-token');

    if (!form || !status) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const username = formData.get('username');

      try {
        const response = await fetch('/api/admin/reset-password/request', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username }),
        });

        const result = await response.json();

        if (response.ok && result.success) {
          status.className = 'form-status success';
          status.textContent = '✓ Password reset token generated successfully!';

          // Show token display
          if (tokenDisplay && resetTokenElement) {
            resetTokenElement.textContent = result.token;
            tokenDisplay.style.display = 'block';
            form.style.display = 'none';
          }
        } else {
          status.className = 'form-status error';
          status.textContent = '✗ ' + (result.error || 'User not found or error occurred.');
        }
      } catch (error) {
        status.className = 'form-status error';
        status.textContent = '✗ Connection error. Please try again.';
      }
    });

    // Copy token to clipboard
    if (copyButton && resetTokenElement) {
      copyButton.addEventListener('click', async () => {
        const token = resetTokenElement.textContent || '';
        try {
          await navigator.clipboard.writeText(token);
          const originalHTML = copyButton.innerHTML;
          copyButton.innerHTML = '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>';
          setTimeout(() => {
            copyButton.innerHTML = originalHTML;
          }, 2000);
        } catch (err) {
          console.error('Failed to copy token:', err);
        }
      });
    }
  }

  initResetPassword();
</script>
