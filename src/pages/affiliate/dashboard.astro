<script>
  // Check authentication
  const token = localStorage.getItem('affiliate_token');
  if (!token) {
    window.location.href = '/affiliate/login';
  }

  // Load dashboard data
  async function loadDashboard() {
    try {
      const response = await fetch('/api/affiliate/dashboard', {
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });

      if (!response.ok) {
        throw new Error('Failed to load dashboard');
      }

      const data = await response.json();

      if (data.success) {
        // Update stats
        document.getElementById('affiliate-name')!.textContent = data.affiliate.name;
        document.getElementById('total-clicks')!.textContent = data.stats.total_clicks.toLocaleString();
        document.getElementById('total-leads')!.textContent = data.stats.total_leads.toLocaleString();
        document.getElementById('total-conversions')!.textContent = data.stats.total_conversions.toLocaleString();
        document.getElementById('total-earned')!.textContent = `$${data.stats.total_earned.toLocaleString()}`;
        document.getElementById('pending-payout')!.textContent = `$${data.stats.pending_payout.toLocaleString()}`;
        document.getElementById('total-paid')!.textContent = `$${data.stats.total_paid.toLocaleString()}`;

        // Update affiliate link
        const baseUrl = window.location.origin;
        const affiliateLink = `${baseUrl}?ref=${data.affiliate.affiliate_code}`;
        document.getElementById('affiliate-link')!.setAttribute('value', affiliateLink);
        document.getElementById('affiliate-code')!.setAttribute('value', data.affiliate.affiliate_code);

        // Update status
        document.getElementById('affiliate-status')!.textContent = data.affiliate.status.charAt(0).toUpperCase() + data.affiliate.status.slice(1);

        // Load recent activity
        loadActivity(data.recent_activity || []);
      }
    } catch (error) {
      console.error('Error loading dashboard:', error);
      localStorage.removeItem('affiliate_token');
      window.location.href = '/affiliate/login';
    }
  }

  function loadActivity(activities: any[]) {
    const tbody = document.getElementById('activity-tbody')!;

    if (activities.length === 0) {
      tbody.innerHTML = `
        <tr>
          <td colspan="4" style="text-align: center; padding: 3rem; color: var(--color-text-muted);">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin: 0 auto 1rem; opacity: 0.3;">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 8v4l3 3"></path>
            </svg>
            <div>No activity yet. Start promoting to see your stats!</div>
          </td>
        </tr>
      `;
      return;
    }

    tbody.innerHTML = activities.map(activity => `
      <tr>
        <td>${new Date(activity.created_at).toLocaleDateString()}</td>
        <td>${activity.type}</td>
        <td><span class="badge badge-${activity.status}">${activity.status}</span></td>
        <td style="font-weight: 700; color: var(--color-primary);">$${activity.amount?.toFixed(2) || '0.00'}</td>
      </tr>
    `).join('');
  }

  // Copy buttons with better feedback
  function copyToClipboard(text: string, button: HTMLElement) {
    navigator.clipboard.writeText(text).then(() => {
      const originalHTML = button.innerHTML;
      button.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>';
      button.style.background = '#10b981';

      setTimeout(() => {
        button.innerHTML = originalHTML;
        button.style.background = '';
      }, 2000);
    });
  }

  document.getElementById('copy-btn')?.addEventListener('click', (e) => {
    const input = document.getElementById('affiliate-link') as HTMLInputElement;
    copyToClipboard(input.value, e.currentTarget as HTMLElement);
  });

  document.getElementById('copy-code-btn')?.addEventListener('click', (e) => {
    const input = document.getElementById('affiliate-code') as HTMLInputElement;
    copyToClipboard(input.value, e.currentTarget as HTMLElement);
  });

  // Logout
  document.getElementById('logout-btn')?.addEventListener('click', () => {
    localStorage.removeItem('affiliate_token');
    localStorage.removeItem('affiliate_remember');
    window.location.href = '/affiliate/login';
  });

  // Load dashboard on page load
  loadDashboard();
</script>
