---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
  <Header />
  <main class="blog-post">
    <article class="container">
      <header class="post-header" data-animate>
        <a href="/blog" class="back-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"/>
            <polyline points="12 19 5 12 12 5"/>
          </svg>
          Back to Blog
        </a>

        <div class="post-meta">
          <span class="post-author">{entry.data.author}</span>
          <span class="separator">â€¢</span>
          <time class="post-date">{formatDate(entry.data.pubDate)}</time>
        </div>

        <h1>{entry.data.title}</h1>
        <p class="post-description">{entry.data.description}</p>

        <div class="post-tags">
          {entry.data.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </header>

      {entry.data.image && (
        <div class="post-image" data-animate>
          <img src={entry.data.image} alt={entry.data.title} />
        </div>
      )}

      <div class="post-content prose" data-animate>
        <Content />
      </div>

      <footer class="post-footer" data-animate>
        <div class="share-section">
          <h3>Share this article</h3>
          <div class="share-buttons">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(entry.data.title)}&url=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener"
              class="share-btn"
            >
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
              </svg>
              Twitter
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener"
              class="share-btn"
            >
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"/>
                <circle cx="4" cy="4" r="2"/>
              </svg>
              LinkedIn
            </a>
          </div>
        </div>

        <a href="/blog" class="btn btn-secondary">Read More Articles</a>
      </footer>
    </article>
  </main>
  <Footer />
</BaseLayout>

<style>
  .blog-post {
    padding-top: calc(var(--header-height) + var(--spacing-3xl));
    padding-bottom: var(--spacing-3xl);
    min-height: 100vh;
  }

  .post-header {
    max-width: 800px;
    margin: 0 auto var(--spacing-3xl);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.95rem;
    margin-bottom: var(--spacing-lg);
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: var(--spacing-md);
    font-size: 0.95rem;
  }

  .post-author {
    color: var(--color-primary);
    font-weight: 600;
  }

  .separator {
    color: var(--color-text-muted);
  }

  .post-date {
    color: var(--color-text-muted);
  }

  .post-header h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: var(--spacing-md);
  }

  .post-description {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-lg);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.85rem;
    padding: 0.375rem 1rem;
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text-muted);
  }

  .post-image {
    max-width: 1200px;
    margin: 0 auto var(--spacing-3xl);
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }

  .post-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .post-content {
    max-width: 800px;
    margin: 0 auto var(--spacing-3xl);
  }

  /* Prose styles for blog content */
  .prose {
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .prose :global(h2) {
    font-size: 2rem;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .prose :global(h3) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .prose :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .prose :global(blockquote) {
    margin: 2rem 0;
    padding: 1.5rem;
    border-left: 4px solid var(--color-primary);
    background: var(--color-bg-alt);
    border-radius: var(--radius-md);
    font-style: italic;
  }

  .prose :global(code) {
    font-family: 'Monaco', 'Courier New', monospace;
    background: var(--color-bg-alt);
    padding: 0.2rem 0.4rem;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
  }

  .prose :global(pre) {
    margin: 2rem 0;
    padding: 1.5rem;
    background: var(--color-bg-alt);
    border-radius: var(--radius-md);
    overflow-x: auto;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    margin: 2rem 0;
  }

  .post-footer {
    max-width: 800px;
    margin: 0 auto;
    padding-top: var(--spacing-2xl);
    border-top: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }

  .share-section h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-md);
  }

  .share-buttons {
    display: flex;
    gap: 1rem;
  }

  .share-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text);
    font-weight: 600;
    font-size: 0.95rem;
    transition: all var(--transition-base);
  }

  .share-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
  }
</style>
