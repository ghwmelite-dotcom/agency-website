---
// Mark as server-rendered (not prerendered)
export const prerender = false;

import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Chatbot from '@/components/Chatbot.astro';

const { slug } = Astro.params;

// Fetch all blog posts to find the one with matching slug
let post = null;
let error = null;

try {
  // Use origin-relative URL - works in both dev and production
  const apiUrl = `${Astro.url.origin}/api/admin/blog`;

  const response = await fetch(apiUrl);
  const data = await response.json();

  if (data.success && data.posts) {
    post = data.posts.find((p: any) => p.slug === slug);
  }

  if (!post) {
    return Astro.redirect('/blog');
  }
} catch (e) {
  console.error('Error fetching blog post:', e);
  error = 'Unable to load blog post';
}

// Generate structured data for SEO
const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post?.title,
  "description": post?.excerpt || post?.seo_description,
  "author": {
    "@type": "Person",
    "name": post?.author || "OHWP Studios"
  },
  "datePublished": post?.published_at,
  "publisher": {
    "@type": "Organization",
    "name": "OHWP Studios",
    "url": "https://ohwpstudios.pages.dev"
  },
  ...(post?.featured_image && {
    "image": post.featured_image
  })
};
---

<BaseLayout
  title={post?.seo_title || `${post?.title} | OHWP Studios Blog`}
  description={post?.seo_description || post?.excerpt || post?.title}
>
  <Fragment slot="head">
    {post?.tags && <meta name="keywords" content={post.tags} />}
    <script type="application/ld+json" set:html={JSON.stringify(schema)}></script>
  </Fragment>

  <Header />

  <main class="blog-post-page">
    {error ? (
      <div class="container">
        <div class="error-message">
          <p>{error}</p>
          <a href="/blog" class="btn btn-primary">Back to Blog</a>
        </div>
      </div>
    ) : post && (
      <article class="blog-post">
        <!-- Hero Section -->
        <header class="post-header">
          <div class="container">
            <div class="post-header-content">
              <div class="post-meta">
                {post.published_at && (
                  <time datetime={post.published_at}>
                    {new Date(post.published_at).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                )}
                {post.author && <span class="author">By {post.author}</span>}
              </div>
              <h1>{post.title}</h1>
              {post.excerpt && (
                <p class="post-excerpt">{post.excerpt}</p>
              )}
              {post.tags && (
                <div class="post-tags">
                  {post.tags.split(',').map((tag: string) => (
                    <span class="tag">{tag.trim()}</span>
                  ))}
                </div>
              )}
            </div>
          </div>
        </header>

        {post.featured_image && (
          <div class="post-image-container">
            <div class="container">
              <img src={post.featured_image} alt={post.title} class="post-image" />
            </div>
          </div>
        )}

        <!-- Post Content -->
        <div class="post-content-wrapper">
          <div class="container">
            <div class="post-content" set:html={post.content} />
          </div>
        </div>

        <!-- Post Footer -->
        <footer class="post-footer">
          <div class="container">
            <a href="/blog" class="back-link">
              ‚Üê Back to Blog
            </a>
          </div>
        </footer>
      </article>
    )}
  </main>

  <Footer />
  <Chatbot />
</BaseLayout>

<style>
  .blog-post-page {
    min-height: 100vh;
  }

  .post-header {
    padding: calc(var(--header-height) + var(--spacing-3xl)) 0 var(--spacing-2xl);
    background: radial-gradient(circle at top, rgba(99, 102, 241, 0.1), transparent 50%);
  }

  .post-header-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .post-meta {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    margin-bottom: var(--spacing-md);
    font-size: 0.95rem;
    color: var(--color-text-muted);
    flex-wrap: wrap;
  }

  .post-header h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
  }

  .post-excerpt {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background: rgba(99, 102, 241, 0.1);
    color: var(--color-primary);
    border-radius: var(--radius-sm);
    font-size: 0.85rem;
  }

  .post-image-container {
    padding: var(--spacing-xl) 0;
  }

  .post-image {
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    border-radius: var(--radius-lg);
    display: block;
    box-shadow: var(--shadow-lg);
  }

  .post-content-wrapper {
    padding: var(--spacing-3xl) 0;
  }

  .post-content {
    max-width: 800px;
    margin: 0 auto;
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  .post-content :global(h2) {
    font-size: 2rem;
    font-weight: 700;
    margin: 2.5rem 0 1rem;
    color: var(--color-text);
  }

  .post-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem;
    color: var(--color-text);
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .post-content :global(strong) {
    font-weight: 600;
    color: var(--color-text);
  }

  .post-content :global(a) {
    color: var(--color-primary);
    text-decoration: none;
    border-bottom: 1px solid var(--color-primary-light);
    transition: all var(--transition-fast);
  }

  .post-content :global(a:hover) {
    border-bottom-color: var(--color-primary);
  }

  .post-content :global(code) {
    background: var(--color-surface);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
  }

  .post-content :global(pre) {
    background: var(--color-surface);
    padding: 1.5rem;
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-text-muted);
  }

  .post-footer {
    padding: var(--spacing-2xl) 0;
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .back-link:hover {
    gap: 0.5rem;
  }

  .error-message {
    text-align: center;
    padding: var(--spacing-3xl);
    margin-top: calc(var(--header-height) + var(--spacing-2xl));
  }

  @media (max-width: 768px) {
    .post-header {
      padding: calc(var(--header-height) + var(--spacing-2xl)) 0 var(--spacing-xl);
    }

    .post-content {
      font-size: 1rem;
    }

    .post-content :global(h2) {
      font-size: 1.75rem;
    }

    .post-content :global(h3) {
      font-size: 1.35rem;
    }
  }
</style>
