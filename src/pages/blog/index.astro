---
// Mark as server-rendered (not prerendered)
export const prerender = false;

import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

// Fetch blog posts from API
let posts = [];
let error = null;

try {
  // Use origin-relative URL - works in both dev and production
  const apiUrl = `${Astro.url.origin}/api/admin/blog`;

  const response = await fetch(apiUrl);
  const data = await response.json();

  if (data.success && data.posts) {
    posts = data.posts;
  }
} catch (e) {
  console.error('Error fetching blog posts:', e);
  error = 'Unable to load blog posts';
}
---

<BaseLayout
  title="Blog | OHWP Studios"
  description="Read our latest insights on web development, mobile apps, and software engineering best practices."
>
  <Header />

  <main class="blog-page">
    <!-- Hero Section -->
    <section class="blog-hero">
      <div class="container">
        <div class="hero-content">
          <h1>Blog</h1>
          <p class="hero-subtitle">
            Insights, tutorials, and best practices in web and mobile development
          </p>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="blog-section">
      <div class="container">
        {error ? (
          <div class="error-message">
            <p>{error}</p>
          </div>
        ) : posts.length === 0 ? (
          <div class="empty-state">
            <h3>No blog posts yet</h3>
            <p>Check back soon for new content!</p>
          </div>
        ) : (
          <div class="blog-grid">
            {posts.map((post: any) => (
              <article class="blog-card">
                {post.featured_image && (
                  <a href={`/blog/${post.slug}`} class="blog-card-image">
                    <img src={post.featured_image} alt={post.title} />
                  </a>
                )}
                <div class="blog-card-content">
                  <div class="blog-meta">
                    {post.published_at && (
                      <time datetime={post.published_at}>
                        {new Date(post.published_at).toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </time>
                    )}
                    {post.author && <span class="author">By {post.author}</span>}
                  </div>
                  <h2>
                    <a href={`/blog/${post.slug}`}>{post.title}</a>
                  </h2>
                  {post.excerpt && (
                    <p class="excerpt">{post.excerpt}</p>
                  )}
                  {post.tags && (
                    <div class="blog-tags">
                      {post.tags.split(',').map((tag: string) => (
                        <span class="tag">{tag.trim()}</span>
                      ))}
                    </div>
                  )}
                  <a href={`/blog/${post.slug}`} class="read-more">
                    Read More â†’
                  </a>
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .blog-page {
    min-height: 100vh;
  }

  .blog-hero {
    padding: calc(var(--header-height) + var(--spacing-3xl)) 0 var(--spacing-2xl);
    background: radial-gradient(circle at top, rgba(99, 102, 241, 0.1), transparent 50%);
    text-align: center;
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    margin-bottom: var(--spacing-md);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-section {
    padding: var(--spacing-3xl) 0;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-xl);
  }

  .blog-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary-light);
  }

  .blog-card-image {
    display: block;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .blog-card:hover .blog-card-image img {
    transform: scale(1.05);
  }

  .blog-card-content {
    padding: var(--spacing-lg);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .blog-meta {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    font-size: 0.9rem;
    color: var(--color-text-muted);
    flex-wrap: wrap;
  }

  .blog-card-content h2 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
  }

  .blog-card-content h2 a {
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .blog-card-content h2 a:hover {
    color: var(--color-primary);
  }

  .excerpt {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
    flex: 1;
  }

  .blog-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: var(--spacing-md);
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background: rgba(99, 102, 241, 0.1);
    color: var(--color-primary);
    border-radius: var(--radius-sm);
    font-size: 0.85rem;
  }

  .read-more {
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .read-more:hover {
    gap: 0.5rem;
  }

  .empty-state,
  .error-message {
    text-align: center;
    padding: var(--spacing-3xl);
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
  }

  .empty-state h3,
  .error-message p {
    margin-bottom: var(--spacing-md);
  }

  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .blog-hero {
      padding: calc(var(--header-height) + var(--spacing-2xl)) 0 var(--spacing-xl);
    }
  }
</style>
