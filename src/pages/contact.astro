---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ContactFormAdvanced from '@/components/ContactFormAdvanced.astro';

const title = 'Contact Us';
const description = 'Get in touch with our team to discuss your project. We respond within 24 hours.';
---

<BaseLayout title={title} description={description}>
  <Header />

  <main>
    <ContactFormAdvanced />

    <!-- Contact Info Section -->
    <section class="contact-info-section">
      <div class="container">
        <div class="info-grid">
          <div class="info-card">
            <div class="info-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <h3>Email Us</h3>
            <p>Send us an email anytime</p>
            <a href="mailto:ohwpstudios@gmail.com" class="info-link">ohwpstudios@gmail.com</a>
          </div>

          <div class="info-card">
            <div class="info-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <h3>Call Us</h3>
            <p>Mon-Fri from 8am to 6pm</p>
            <a href="tel:+233123456789" class="info-link">+233 (123) 456-789</a>
          </div>

          <div class="info-card">
            <div class="info-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <h3>Visit Us</h3>
            <p>Come say hello at our office</p>
            <span class="info-link">Accra, Ghana</span>
          </div>

          <div class="info-card">
            <div class="info-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <h3>Response Time</h3>
            <p>We typically respond within</p>
            <span class="info-link">24 hours</span>
          </div>
        </div>

        <!-- FAQ Section -->
        <div class="faq-section">
          <h2 class="faq-title">Frequently Asked Questions</h2>
          <div class="faq-grid">
            <div class="faq-item">
              <h4>How quickly will I hear back?</h4>
              <p>We aim to respond to all inquiries within 24 hours during business days. Urgent requests are prioritized.</p>
            </div>
            <div class="faq-item">
              <h4>What information should I provide?</h4>
              <p>The more details you can share about your project, timeline, and budget, the better we can tailor our proposal to your needs.</p>
            </div>
            <div class="faq-item">
              <h4>Do you offer free consultations?</h4>
              <p>Yes! We offer a free 30-minute discovery call to discuss your project and determine if we're a good fit.</p>
            </div>
            <div class="faq-item">
              <h4>What are your payment terms?</h4>
              <p>We typically work with a 50% upfront deposit and 50% upon completion. Custom payment plans are available for larger projects.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .contact-info-section {
    padding: 6rem 0;
    background: var(--color-background);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 6rem;
  }

  .info-card {
    padding: 2rem;
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: 20px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .info-card:hover {
    transform: translateY(-8px);
    border-color: var(--color-primary);
    box-shadow: 0 12px 32px rgba(99, 102, 241, 0.15);
  }

  .info-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    background: var(--gradient-primary);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .info-card h3 {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .info-card p {
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
  }

  .info-link {
    display: inline-block;
    font-weight: 700;
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .info-link:hover {
    color: var(--color-secondary);
  }

  /* FAQ Section */
  .faq-section {
    text-align: center;
  }

  .faq-title {
    font-size: 2.5rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 3rem;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    text-align: left;
  }

  .faq-item {
    padding: 2rem;
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    border-color: var(--color-primary);
    box-shadow: 0 8px 24px rgba(99, 102, 241, 0.1);
  }

  .faq-item h4 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .faq-item p {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .contact-info-section {
      padding: 3rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .info-grid,
    .faq-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .faq-title {
      font-size: 2rem;
    }
  }
</style>
