---
export const prerender = true;

import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
---

<BaseLayout
  title="Thank You! | OHWP Studios"
  description="Thank you for completing our project discovery quiz. We'll be in touch shortly with your personalized recommendations."
>
  <Header />

  <main class="thank-you-page">
    <section class="thank-you-section">
      <div class="container">
        <div class="thank-you-card glass">
          <div class="success-icon">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
              <path d="M22 4L12 14.01l-3-3"/>
            </svg>
          </div>
          <h1>Thank You!</h1>
          <p class="subtitle">We've received your quiz responses and are preparing your personalized recommendation.</p>

          <div class="next-steps">
            <h2>What Happens Next?</h2>
            <div class="steps-grid">
              <div class="step-card">
                <div class="step-number">1</div>
                <h3>We Review Your Answers</h3>
                <p>Our team analyzes your responses to understand your unique needs</p>
              </div>
              <div class="step-card">
                <div class="step-number">2</div>
                <h3>Personalized Recommendation</h3>
                <p>We'll email you a detailed recommendation within 24 hours</p>
              </div>
              <div class="step-card">
                <div class="step-number">3</div>
                <h3>Free Consultation</h3>
                <p>Schedule a 30-minute call to discuss your project in detail</p>
              </div>
            </div>
          </div>

          <div class="cta-section">
            <p class="cta-text">Want to get started right away?</p>
            <div class="cta-buttons">
              <a href="/contact" class="btn btn-primary">
                Schedule a Call
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
              <a href="/portfolio" class="btn btn-secondary">
                View Our Work
              </a>
            </div>
          </div>

          <div class="social-proof">
            <p>Join 100+ businesses who trust OHWP Studios</p>
            <div class="trust-badges">
              <div class="trust-badge">
                <span class="badge-icon">‚≠ê</span>
                <span>5.0 Rating</span>
              </div>
              <div class="trust-badge">
                <span class="badge-icon">üèÜ</span>
                <span>50+ Projects</span>
              </div>
              <div class="trust-badge">
                <span class="badge-icon">üöÄ</span>
                <span>10+ Years</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .thank-you-page {
    min-height: 100vh;
    padding: calc(var(--header-height) + 3rem) 0 4rem;
    background: radial-gradient(circle at top, rgba(99, 102, 241, 0.1), transparent 50%);
  }

  .thank-you-section {
    display: flex;
    align-items: center;
    min-height: calc(100vh - var(--header-height) - 7rem);
  }

  .thank-you-card {
    max-width: 900px;
    margin: 0 auto;
    padding: 4rem 3rem;
    border-radius: 24px;
    text-align: center;
  }

  .success-icon {
    display: inline-flex;
    padding: 1.5rem;
    background: linear-gradient(135deg, #10b981, #34d399);
    border-radius: 50%;
    margin-bottom: 2rem;
    color: white;
    animation: scaleIn 0.5s ease;
  }

  @keyframes scaleIn {
    from {
      transform: scale(0);
    }
    to {
      transform: scale(1);
    }
  }

  .thank-you-card h1 {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .next-steps {
    margin-bottom: 3rem;
  }

  .next-steps h2 {
    font-size: 1.75rem;
    font-weight: 800;
    margin-bottom: 2rem;
    color: var(--color-text);
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    text-align: left;
  }

  .step-card {
    padding: 2rem;
    background: var(--glass-bg);
    border: 2px solid var(--glass-border);
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .step-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-primary);
  }

  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--gradient-primary);
    color: white;
    border-radius: 12px;
    font-size: 1.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }

  .step-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .step-card p {
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .cta-section {
    padding: 2rem 0;
    border-top: 1px solid var(--glass-border);
    border-bottom: 1px solid var(--glass-border);
    margin-bottom: 3rem;
  }

  .cta-text {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .social-proof p {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .trust-badges {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .badge-icon {
    font-size: 1.5rem;
  }

  .glass {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    backdrop-filter: blur(10px);
  }

  @media (max-width: 768px) {
    .thank-you-card {
      padding: 3rem 2rem;
    }

    .thank-you-card h1 {
      font-size: 2rem;
    }

    .steps-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-buttons .btn {
      width: 100%;
    }
  }
</style>
