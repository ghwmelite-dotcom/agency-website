---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
---

<BaseLayout title="Free Website Analyzer | Get Instant Performance Insights" description="Analyze your website's performance, SEO, mobile-friendliness, and security for free. Get actionable insights in seconds.">
  <Header />
  <main>
    <section class="analyzer-hero">
      <div class="container">
        <div class="hero-content">
          <span class="badge">üöÄ Free Tool</span>
          <h1 class="title-hero">
            <span class="title-gradient">Website Performance Analyzer</span>
            <div class="title-underline"></div>
          </h1>
          <p class="hero-description">
            Get instant insights into your website's performance, SEO, security, and mobile-friendliness.
            Enter your URL below for a comprehensive free analysis.
          </p>

          <div class="analyzer-form glass">
            <form id="analyzer-form">
              <div class="input-group">
                <input
                  type="url"
                  id="website-url"
                  placeholder="https://yourwebsite.com"
                  required
                  pattern="https?://.+"
                  class="url-input"
                />
                <button type="submit" class="btn btn-primary" data-magnetic>
                  <span id="btn-text">Analyze Now</span>
                  <span id="btn-loader" class="loader" style="display: none;">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10" opacity="0.25"></circle>
                      <path d="M12 2a10 10 0 0 1 10 10" stroke-linecap="round"></path>
                    </svg>
                  </span>
                </button>
              </div>
              <div class="trust-indicators">
                <span>‚úì 100% Free</span>
                <span>‚úì No Credit Card Required</span>
                <span>‚úì Instant Results</span>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Results Section -->
    <section class="results-section" id="results-section" style="display: none;">
      <div class="container">
        <div class="results-header">
          <h2>Analysis Results for <span id="analyzed-url"></span></h2>
          <button class="btn btn-secondary" id="new-analysis-btn">
            Analyze Another Site
          </button>
        </div>

        <div class="overall-score glass">
          <div class="score-circle">
            <svg viewBox="0 0 200 200" class="score-svg">
              <circle cx="100" cy="100" r="90" class="score-bg"></circle>
              <circle cx="100" cy="100" r="90" class="score-fill" id="score-circle"></circle>
            </svg>
            <div class="score-value">
              <span id="overall-score">0</span>
              <span class="score-max">/100</span>
            </div>
          </div>
          <div class="score-details">
            <h3>Overall Performance Score</h3>
            <p id="score-description">Calculating your website's health...</p>
            <div class="score-status" id="score-status"></div>
          </div>
        </div>

        <div class="metrics-grid">
          <!-- Performance Card -->
          <div class="metric-card glass" id="performance-card">
            <div class="metric-header">
              <div class="metric-icon" style="background: linear-gradient(135deg, #6366f1 0%, #818cf8 100%);">
                ‚ö°
              </div>
              <h3>Performance</h3>
            </div>
            <div class="metric-score" id="performance-score">--</div>
            <div class="metric-details">
              <div class="detail-item">
                <span>Load Time</span>
                <span id="load-time" class="detail-value">--</span>
              </div>
              <div class="detail-item">
                <span>Page Size</span>
                <span id="page-size" class="detail-value">--</span>
              </div>
              <div class="detail-item">
                <span>Requests</span>
                <span id="requests" class="detail-value">--</span>
              </div>
            </div>
          </div>

          <!-- SEO Card -->
          <div class="metric-card glass" id="seo-card">
            <div class="metric-header">
              <div class="metric-icon" style="background: linear-gradient(135deg, #0073aa 0%, #00a0d2 100%);">
                üîç
              </div>
              <h3>SEO</h3>
            </div>
            <div class="metric-score" id="seo-score">--</div>
            <div class="metric-details">
              <div class="detail-item">
                <span>Meta Tags</span>
                <span id="meta-tags" class="detail-value">--</span>
              </div>
              <div class="detail-item">
                <span>Headings</span>
                <span id="headings" class="detail-value">--</span>
              </div>
              <div class="detail-item">
                <span>Images Alt</span>
                <span id="images-alt" class="detail-value">--</span>
              </div>
            </div>
          </div>

          <!-- Mobile Card -->
          <div class="metric-card glass" id="mobile-card">
            <div class="metric-header">
              <div class="metric-icon" style="background: linear-gradient(135deg, #ec4899 0%, #f59e0b 100%);">
                üì±
              </div>
              <h3>Mobile</h3>
            </div>
            <div class="metric-score" id="mobile-score">--</div>
            <div class="metric-details">
              <div class="detail-item">
                <span>Responsive</span>
                <span id="responsive" class="detail-value">--</span>
              </div>
              <div class="detail-item">
                <span>Viewport</span>
                <span id="viewport" class="detail-value">--</span>
              </div>
              <div class="detail-item">
                <span>Touch Targets</span>
                <span id="touch-targets" class="detail-value">--</span>
              </div>
            </div>
          </div>

          <!-- Security Card -->
          <div class="metric-card glass" id="security-card">
            <div class="metric-header">
              <div class="metric-icon" style="background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);">
                üîí
              </div>
              <h3>Security</h3>
            </div>
            <div class="metric-score" id="security-score">--</div>
            <div class="metric-details">
              <div class="detail-item">
                <span>HTTPS</span>
                <span id="https" class="detail-value">--</span>
              </div>
              <div class="detail-item">
                <span>SSL Certificate</span>
                <span id="ssl" class="detail-value">--</span>
              </div>
              <div class="detail-item">
                <span>Security Headers</span>
                <span id="security-headers" class="detail-value">--</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Recommendations -->
        <div class="recommendations glass">
          <h3>üéØ Recommendations</h3>
          <div class="recommendations-list" id="recommendations-list">
            <div class="loading-dots">
              <span></span><span></span><span></span>
            </div>
          </div>
        </div>

        <!-- CTA Section -->
        <div class="cta-section glass">
          <h3>Want Professional Help Fixing These Issues?</h3>
          <p>Our team of experts can optimize your website for peak performance, better SEO, and higher conversions.</p>
          <div class="cta-buttons">
            <a href="/contact" class="btn btn-primary" data-magnetic>
              Get Free Consultation
            </a>
            <a href="/pricing-calculator" class="btn btn-secondary">
              See Pricing
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="benefits-section">
      <div class="container">
        <h2>Why Analyze Your Website?</h2>
        <div class="benefits-grid">
          <div class="benefit-card">
            <div class="benefit-icon">‚ö°</div>
            <h3>Faster Loading</h3>
            <p>Identify and fix performance bottlenecks that slow down your site</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">üöÄ</div>
            <h3>Better Rankings</h3>
            <p>Improve SEO to rank higher on Google and get more organic traffic</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">üí∞</div>
            <h3>More Conversions</h3>
            <p>Optimize user experience to turn more visitors into customers</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">üîí</div>
            <h3>Enhanced Security</h3>
            <p>Protect your site and users with proper security measures</p>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<style>
  .analyzer-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(135deg, var(--color-bg) 0%, var(--color-bg-alt) 100%);
    position: relative;
    overflow: hidden;
  }

  .analyzer-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 50%, rgba(99, 102, 241, 0.1), transparent 50%),
                radial-gradient(circle at 80% 50%, rgba(236, 72, 153, 0.1), transparent 50%);
    pointer-events: none;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .badge {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: var(--gradient-primary);
    color: white;
    border-radius: var(--radius-full);
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .title-hero {
    position: relative;
    display: inline-block;
    padding-bottom: 1rem;
    margin-bottom: 2rem;
  }

  .title-gradient {
    background: linear-gradient(135deg, #6366f1 0%, #ec4899 50%, #f59e0b 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 4s ease infinite;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
  }

  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .title-underline {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 4px;
    background: linear-gradient(90deg, transparent, #6366f1, #ec4899, #f59e0b, transparent);
    border-radius: 2px;
    animation: underlineExpand 1.5s ease-out forwards 0.5s;
    box-shadow: 0 2px 10px rgba(99, 102, 241, 0.5);
  }

  @keyframes underlineExpand {
    to { width: 80%; }
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    margin-bottom: 3rem;
  }

  .analyzer-form {
    padding: 2.5rem;
    border-radius: var(--radius-2xl);
  }

  .input-group {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .url-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-xl);
    font-size: 1.0625rem;
    background: var(--color-surface);
    color: var(--color-text);
    transition: all 0.3s ease;
  }

  .url-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
  }

  .trust-indicators {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    font-size: 0.9375rem;
    color: var(--color-text-muted);
  }

  .loader svg {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .results-section {
    padding: 4rem 0;
    background: var(--color-bg);
  }

  .results-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .results-header h2 {
    font-size: 2rem;
    color: var(--color-text);
  }

  .overall-score {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 3rem;
    padding: 3rem;
    border-radius: var(--radius-2xl);
    margin-bottom: 3rem;
    align-items: center;
  }

  .score-circle {
    position: relative;
    width: 200px;
    height: 200px;
  }

  .score-svg {
    width: 100%;
    height: 100%;
    transform: rotate(-90deg);
  }

  .score-bg {
    fill: none;
    stroke: var(--color-border);
    stroke-width: 12;
  }

  .score-fill {
    fill: none;
    stroke: url(#scoreGradient);
    stroke-width: 12;
    stroke-linecap: round;
    stroke-dasharray: 565.48;
    stroke-dashoffset: 565.48;
    transition: stroke-dashoffset 2s ease;
  }

  .score-value {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    font-size: 3rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .score-max {
    font-size: 1.5rem;
    opacity: 0.6;
  }

  .score-details h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .score-status {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    border-radius: var(--radius-full);
    font-weight: 600;
    margin-top: 1rem;
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .metric-card {
    padding: 2rem;
    border-radius: var(--radius-2xl);
  }

  .metric-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .metric-icon {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
  }

  .metric-header h3 {
    font-size: 1.5rem;
    color: var(--color-text);
  }

  .metric-score {
    font-size: 3rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1.5rem;
  }

  .metric-details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .detail-item {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text-muted);
  }

  .detail-item:last-child {
    border-bottom: none;
  }

  .detail-value {
    font-weight: 600;
    color: var(--color-text);
  }

  .recommendations {
    padding: 2.5rem;
    border-radius: var(--radius-2xl);
    margin-bottom: 3rem;
  }

  .recommendations h3 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }

  .recommendations-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .recommendation-item {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: var(--color-surface);
    border-left: 3px solid var(--color-primary);
    border-radius: var(--radius-md);
  }

  .recommendation-item .icon {
    font-size: 1.5rem;
  }

  .loading-dots {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    padding: 2rem;
  }

  .loading-dots span {
    width: 12px;
    height: 12px;
    background: var(--color-primary);
    border-radius: 50%;
    animation: bounce 1.4s infinite ease-in-out both;
  }

  .loading-dots span:nth-child(1) { animation-delay: -0.32s; }
  .loading-dots span:nth-child(2) { animation-delay: -0.16s; }

  @keyframes bounce {
    0%, 80%, 100% { transform: scale(0); }
    40% { transform: scale(1); }
  }

  .cta-section {
    text-align: center;
    padding: 3rem;
    border-radius: var(--radius-2xl);
  }

  .cta-section h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .benefits-section {
    padding: 4rem 0;
    background: var(--color-bg-alt);
  }

  .benefits-section h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .benefit-card {
    text-align: center;
    padding: 2rem;
  }

  .benefit-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .benefit-card h3 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .benefit-card p {
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .analyzer-hero {
      padding: 6rem 0 3rem;
    }

    .input-group {
      flex-direction: column;
    }

    .overall-score {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 2rem;
    }

    .score-circle {
      margin: 0 auto;
    }

    .results-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

<script>
  // Website Analyzer Logic
  class WebsiteAnalyzer {
    private form: HTMLFormElement | null;
    private urlInput: HTMLInputElement | null;
    private resultsSection: HTMLElement | null;

    constructor() {
      this.form = document.getElementById('analyzer-form') as HTMLFormElement;
      this.urlInput = document.getElementById('website-url') as HTMLInputElement;
      this.resultsSection = document.getElementById('results-section');

      this.init();
    }

    init() {
      if (!this.form) return;

      this.form.addEventListener('submit', (e) => {
        e.preventDefault();
        this.analyzeWebsite();
      });

      const newAnalysisBtn = document.getElementById('new-analysis-btn');
      if (newAnalysisBtn) {
        newAnalysisBtn.addEventListener('click', () => {
          this.resetAnalyzer();
        });
      }
    }

    async analyzeWebsite() {
      if (!this.urlInput || !this.resultsSection) return;

      const url = this.urlInput.value.trim();
      if (!url) return;

      // Show loading state
      const btnText = document.getElementById('btn-text');
      const btnLoader = document.getElementById('btn-loader');
      const submitBtn = this.form?.querySelector('button[type="submit"]') as HTMLButtonElement;

      if (btnText && btnLoader && submitBtn) {
        btnText.style.display = 'none';
        btnLoader.style.display = 'block';
        submitBtn.disabled = true;
      }

      // Simulate analysis (in production, this would call a real API)
      await this.simulateAnalysis(url);

      // Show results
      this.resultsSection.style.display = 'block';
      this.resultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });

      // Reset button
      if (btnText && btnLoader && submitBtn) {
        btnText.style.display = 'block';
        btnLoader.style.display = 'none';
        submitBtn.disabled = false;
      }
    }

    async simulateAnalysis(url: string) {
      // Update analyzed URL
      const analyzedUrlEl = document.getElementById('analyzed-url');
      if (analyzedUrlEl) {
        analyzedUrlEl.textContent = url;
      }

      // Simulate delay
      await new Promise(resolve => setTimeout(resolve, 2000));

      // Generate mock scores (in production, these would be real)
      const performanceScore = Math.floor(Math.random() * 30) + 60; // 60-90
      const seoScore = Math.floor(Math.random() * 30) + 65; // 65-95
      const mobileScore = Math.floor(Math.random() * 25) + 70; // 70-95
      const securityScore = Math.floor(Math.random() * 20) + 75; // 75-95

      const overallScore = Math.round((performanceScore + seoScore + mobileScore + securityScore) / 4);

      // Update scores with animation
      this.updateScore('overall-score', overallScore);
      this.updateScore('performance-score', performanceScore);
      this.updateScore('seo-score', seoScore);
      this.updateScore('mobile-score', mobileScore);
      this.updateScore('security-score', securityScore);

      // Update circle
      this.updateCircle(overallScore);

      // Update status
      this.updateStatus(overallScore);

      // Update details
      this.updateDetails(performanceScore, seoScore, mobileScore, securityScore);

      // Generate recommendations
      this.generateRecommendations(performanceScore, seoScore, mobileScore, securityScore);
    }

    updateScore(elementId: string, score: number) {
      const el = document.getElementById(elementId);
      if (!el) return;

      let current = 0;
      const increment = score / 50;
      const timer = setInterval(() => {
        current += increment;
        if (current >= score) {
          current = score;
          clearInterval(timer);
        }
        el.textContent = Math.round(current).toString();
      }, 20);
    }

    updateCircle(score: number) {
      const circle = document.getElementById('score-circle');
      if (!circle) return;

      const circumference = 565.48;
      const offset = circumference - (score / 100) * circumference;

      setTimeout(() => {
        circle.style.strokeDashoffset = offset.toString();
      }, 100);
    }

    updateStatus(score: number) {
      const statusEl = document.getElementById('score-status');
      const descEl = document.getElementById('score-description');
      if (!statusEl || !descEl) return;

      if (score >= 90) {
        statusEl.textContent = 'üéâ Excellent';
        statusEl.style.background = 'rgba(16, 185, 129, 0.2)';
        statusEl.style.color = '#10b981';
        descEl.textContent = 'Your website is in great shape!';
      } else if (score >= 70) {
        statusEl.textContent = '‚úÖ Good';
        statusEl.style.background = 'rgba(99, 102, 241, 0.2)';
        statusEl.style.color = '#6366f1';
        descEl.textContent = 'Your website is performing well with room for improvement.';
      } else if (score >= 50) {
        statusEl.textContent = '‚ö†Ô∏è Needs Improvement';
        statusEl.style.background = 'rgba(245, 158, 11, 0.2)';
        statusEl.style.color = '#f59e0b';
        descEl.textContent = 'There are several areas that need attention.';
      } else {
        statusEl.textContent = '‚ùå Poor';
        statusEl.style.background = 'rgba(239, 68, 68, 0.2)';
        statusEl.style.color = '#ef4444';
        descEl.textContent = 'Your website needs significant improvements.';
      }
    }

    updateDetails(perf: number, seo: number, mobile: number, security: number) {
      // Performance details
      document.getElementById('load-time')!.textContent = `${(Math.random() * 2 + 1).toFixed(2)}s`;
      document.getElementById('page-size')!.textContent = `${(Math.random() * 2 + 0.5).toFixed(1)} MB`;
      document.getElementById('requests')!.textContent = `${Math.floor(Math.random() * 50 + 30)}`;

      // SEO details
      document.getElementById('meta-tags')!.textContent = seo > 80 ? '‚úì Good' : '‚ö†Ô∏è Missing';
      document.getElementById('headings')!.textContent = seo > 70 ? '‚úì Proper' : '‚ö†Ô∏è Issues';
      document.getElementById('images-alt')!.textContent = `${Math.floor(Math.random() * 30 + 60)}%`;

      // Mobile details
      document.getElementById('responsive')!.textContent = mobile > 75 ? '‚úì Yes' : '‚úó No';
      document.getElementById('viewport')!.textContent = mobile > 70 ? '‚úì Set' : '‚úó Missing';
      document.getElementById('touch-targets')!.textContent = mobile > 80 ? '‚úì Good' : '‚ö†Ô∏è Small';

      // Security details
      document.getElementById('https')!.textContent = security > 70 ? '‚úì Enabled' : '‚úó Disabled';
      document.getElementById('ssl')!.textContent = security > 75 ? '‚úì Valid' : '‚ö†Ô∏è Expired';
      document.getElementById('security-headers')!.textContent = `${Math.floor(security / 20)}/5`;
    }

    generateRecommendations(perf: number, seo: number, mobile: number, security: number) {
      const listEl = document.getElementById('recommendations-list');
      if (!listEl) return;

      const recommendations: string[] = [];

      if (perf < 80) recommendations.push('üöÄ Optimize images and enable compression to improve load times');
      if (perf < 70) recommendations.push('‚ö° Minimize JavaScript and CSS files to reduce page weight');
      if (seo < 85) recommendations.push('üîç Add missing meta descriptions and improve title tags');
      if (seo < 75) recommendations.push('üìù Improve heading structure and add more descriptive alt text to images');
      if (mobile < 85) recommendations.push('üì± Improve mobile responsiveness and touch target sizes');
      if (mobile < 75) recommendations.push('üì≤ Add viewport meta tag and optimize for mobile devices');
      if (security < 90) recommendations.push('üîí Implement additional security headers (CSP, HSTS)');
      if (security < 80) recommendations.push('üõ°Ô∏è Ensure SSL certificate is valid and up to date');

      if (recommendations.length === 0) {
        recommendations.push('üéâ Great job! Your website is well-optimized. Keep up the good work!');
      }

      listEl.innerHTML = recommendations.map(rec => `
        <div class="recommendation-item">
          <div class="icon">${rec.split(' ')[0]}</div>
          <div>${rec.substring(rec.indexOf(' ') + 1)}</div>
        </div>
      `).join('');
    }

    resetAnalyzer() {
      if (this.resultsSection) {
        this.resultsSection.style.display = 'none';
      }
      if (this.urlInput) {
        this.urlInput.value = '';
        this.urlInput.focus();
      }
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
  }

  // Initialize analyzer
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => new WebsiteAnalyzer());
  } else {
    new WebsiteAnalyzer();
  }

  // Add SVG gradient definition
  const svg = document.querySelector('.score-svg');
  if (svg) {
    const defs = document.createElementNS('http://www.w3.org/2000/svg', 'defs');
    defs.innerHTML = `
