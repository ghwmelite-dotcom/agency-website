---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
---

<BaseLayout title="Free Website Audit - Hodges & Co." description="Get a comprehensive analysis of your website's performance, SEO, accessibility, and security.">
  <Header />
  <main class="audit-page">
    <!-- Hero Section -->
    <section class="audit-hero">
      <div class="container">
        <h1>Website Performance Audit</h1>
        <p>Comprehensive analysis of performance, SEO, accessibility, and security</p>
      </div>
    </section>

    <!-- Audit Tool Section -->
    <section class="audit-tool-section">
      <div class="container">
        <div class="audit-card">
          <form class="audit-form" id="full-audit-form">
            <div class="form-row">
              <div class="form-group">
                <label for="audit-url">Website URL</label>
                <input
                  type="text"
                  id="audit-url"
                  placeholder="example.com"
                  required
                />
              </div>
              <button type="submit" class="audit-submit-btn">
                <span>Analyze Website</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="13 17 18 12 13 7"/><polyline points="6 17 11 12 6 7"/>
                </svg>
              </button>
            </div>
          </form>

          <!-- Loading State -->
          <div class="loading-container hidden" id="loading-container">
            <div class="loading-spinner"></div>
            <p>Analyzing your website...</p>
          </div>

          <!-- Results Container -->
          <div class="results-container hidden" id="results-container">
            <!-- Overall Score -->
            <div class="overall-score-section">
              <div class="score-display">
                <div class="score-circle" id="overall-score-circle">
                  <svg viewBox="0 0 200 200">
                    <circle cx="100" cy="100" r="90" fill="none" stroke="#e5e7eb" stroke-width="12"/>
                    <circle id="score-progress" cx="100" cy="100" r="90" fill="none" stroke="url(#scoreGradient)" stroke-width="12" stroke-linecap="round" stroke-dasharray="0, 565"/>
                  </svg>
                  <div class="score-value">
                    <span id="overall-score-value">0</span>
                    <span class="score-label">Overall Score</span>
                  </div>
                </div>
                <defs>
                  <linearGradient id="scoreGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" stop-color="#6366f1"/>
                    <stop offset="100%" stop-color="#ec4899"/>
                  </linearGradient>
                </defs>
              </div>
              <div class="score-info">
                <h2 id="analyzed-url">Website Analysis</h2>
                <p>Comprehensive audit of performance, SEO, accessibility, and security</p>
              </div>
            </div>

            <!-- Metrics Grid -->
            <div class="metrics-grid">
              <!-- Performance -->
              <div class="metric-card">
                <div class="metric-header">
                  <div class="metric-icon performance">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
                    </svg>
                  </div>
                  <div>
                    <h3>Performance</h3>
                    <div class="metric-score" id="performance-score">0</div>
                  </div>
                </div>
                <div class="metric-details" id="performance-details"></div>
              </div>

              <!-- SEO -->
              <div class="metric-card">
                <div class="metric-header">
                  <div class="metric-icon seo">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="11" cy="11" r="8"/>
                      <path d="m21 21-4.35-4.35"/>
                    </svg>
                  </div>
                  <div>
                    <h3>SEO</h3>
                    <div class="metric-score" id="seo-score">0</div>
                  </div>
                </div>
                <div class="metric-details" id="seo-details"></div>
              </div>

              <!-- Accessibility -->
              <div class="metric-card">
                <div class="metric-header">
                  <div class="metric-icon accessibility">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <circle cx="12" cy="8" r="2"/>
                      <path d="M12 14v6M8 14h8M8 18h8"/>
                    </svg>
                  </div>
                  <div>
                    <h3>Accessibility</h3>
                    <div class="metric-score" id="accessibility-score">0</div>
                  </div>
                </div>
                <div class="metric-details" id="accessibility-details"></div>
              </div>

              <!-- Security -->
              <div class="metric-card">
                <div class="metric-header">
                  <div class="metric-icon security">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                    </svg>
                  </div>
                  <div>
                    <h3>Security</h3>
                    <div class="metric-score" id="security-score">0</div>
                  </div>
                </div>
                <div class="metric-details" id="security-details"></div>
              </div>
            </div>

            <!-- Recommendations -->
            <div class="recommendations-section">
              <h3>Recommendations</h3>
              <div class="recommendations-list" id="recommendations-list"></div>
            </div>

            <!-- Email Capture for Detailed Report -->
            <div class="email-capture-section">
              <div class="email-capture-content">
                <h3>Get Your Detailed Report</h3>
                <p>Enter your email to receive a comprehensive PDF report with actionable insights</p>
                <form class="email-form" id="email-capture-form">
                  <div class="email-inputs">
                    <input type="text" id="report-name" placeholder="Your Name" required />
                    <input type="email" id="report-email" placeholder="Your Email" required />
                    <button type="submit">Send Report</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<style>
  .audit-page {
    min-height: 100vh;
    background: var(--color-bg);
  }

  .audit-hero {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.05) 0%, rgba(236, 72, 153, 0.05) 100%);
    padding: 8rem 2rem 4rem;
    text-align: center;
  }

  .audit-hero h1 {
    font-size: 3.5rem;
    font-weight: 900;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, #6366f1, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .audit-hero p {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .audit-tool-section {
    padding: 4rem 2rem;
  }

  .audit-card {
    background: var(--color-surface);
    border-radius: 24px;
    padding: 3rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--color-border);
  }

  .audit-form {
    margin-bottom: 3rem;
  }

  .form-row {
    display: flex;
    gap: 1rem;
    align-items: flex-end;
  }

  .form-group {
    flex: 1;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .form-group input {
    width: 100%;
    padding: 1rem 1.25rem;
    border: 2px solid var(--color-border);
    border-radius: 12px;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .form-group input:focus {
    outline: none;
    border-color: #6366f1;
    box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
  }

  .audit-submit-btn {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .audit-submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(99, 102, 241, 0.4);
  }

  .loading-container {
    text-align: center;
    padding: 4rem 2rem;
  }

  .loading-spinner {
    width: 60px;
    height: 60px;
    margin: 0 auto 1.5rem;
    border: 4px solid rgba(99, 102, 241, 0.1);
    border-top-color: #6366f1;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .hidden {
    display: none !important;
  }

  /* Results Styling */
  .overall-score-section {
    display: flex;
    align-items: center;
    gap: 3rem;
    margin-bottom: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.05), rgba(236, 72, 153, 0.05));
    border-radius: 20px;
  }

  .score-circle {
    position: relative;
    width: 200px;
    height: 200px;
  }

  .score-circle svg {
    transform: rotate(-90deg);
  }

  .score-value {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  #overall-score-value {
    display: block;
    font-size: 3rem;
    font-weight: 900;
    background: linear-gradient(135deg, #6366f1, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .score-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-weight: 600;
  }

  .score-info h2 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .score-info p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .metric-card {
    background: var(--color-bg);
    border: 1.5px solid var(--color-border);
    border-radius: 16px;
    padding: 2rem;
  }

  .metric-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .metric-icon {
    width: 56px;
    height: 56px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .metric-icon.performance { background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.1)); color: #10b981; }
  .metric-icon.seo { background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(37, 99, 235, 0.1)); color: #3b82f6; }
  .metric-icon.accessibility { background: linear-gradient(135deg, rgba(168, 85, 247, 0.1), rgba(126, 34, 206, 0.1)); color: #a855f7; }
  .metric-icon.security { background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(220, 38, 38, 0.1)); color: #ef4444; }

  .metric-header h3 {
    font-size: 1.125rem;
    font-weight: 700;
    margin: 0 0 0.25rem 0;
  }

  .metric-score {
    font-size: 2rem;
    font-weight: 900;
    background: linear-gradient(135deg, #6366f1, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .metric-details {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.8;
  }

  .metric-details ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .metric-details li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .metric-details li:last-child {
    border-bottom: none;
  }

  .recommendations-section {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.05), rgba(236, 72, 153, 0.05));
    border-radius: 20px;
    padding: 2rem;
    margin-bottom: 3rem;
  }

  .recommendations-section h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
  }

  .recommendations-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .recommendation-item {
    padding: 1.25rem;
    background: var(--color-surface);
    border-radius: 12px;
    border-left: 4px solid #6366f1;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .recommendation-item svg {
    color: #6366f1;
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .email-capture-section {
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    border-radius: 20px;
    padding: 3rem;
    color: white;
    text-align: center;
  }

  .email-capture-content h3 {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
  }

  .email-capture-content p {
    font-size: 1.125rem;
    opacity: 0.9;
    margin: 0 0 2rem 0;
  }

  .email-inputs {
    display: flex;
    gap: 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .email-inputs input {
    flex: 1;
    padding: 1rem 1.25rem;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    font-size: 1rem;
  }

  .email-inputs input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  .email-inputs input:focus {
    outline: none;
    border-color: white;
    background: rgba(255, 255, 255, 0.2);
  }

  .email-inputs button {
    padding: 1rem 2rem;
    background: white;
    color: #6366f1;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    white-space: nowrap;
    transition: all 0.3s ease;
  }

  .email-inputs button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 768px) {
    .audit-hero {
      padding: 6rem 1.5rem 3rem;
    }

    .audit-hero h1 {
      font-size: 2rem;
    }

    .audit-card {
      padding: 1.5rem;
    }

    .form-row {
      flex-direction: column;
      align-items: stretch;
    }

    .audit-submit-btn {
      justify-content: center;
    }

    .overall-score-section {
      flex-direction: column;
      text-align: center;
    }

    .email-inputs {
      flex-direction: column;
    }
  }
</style>

<script>
  let currentResult: any = null;

  function initAuditPage() {
    // Check if we have results from homepage
    const storedResult = sessionStorage.getItem('auditResult');
    if (storedResult) {
      try {
        currentResult = JSON.parse(storedResult);
        displayResults(currentResult);
        sessionStorage.removeItem('auditResult');
      } catch (e) {
        console.error('Failed to load stored results:', e);
      }
    }

    const form = document.getElementById('full-audit-form') as HTMLFormElement;
    const emailForm = document.getElementById('email-capture-form') as HTMLFormElement;

    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const urlInput = document.getElementById('audit-url') as HTMLInputElement;
        const url = urlInput.value.trim();

        if (!url) return;

        const loadingContainer = document.getElementById('loading-container');
        const resultsContainer = document.getElementById('results-container');

        loadingContainer?.classList.remove('hidden');
        resultsContainer?.classList.add('hidden');

        try {
          const response = await fetch('/api/website-audit', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ url })
          });

          const data = await response.json();

          if (data.success && data.result) {
            currentResult = data.result;
            displayResults(data.result);
            loadingContainer?.classList.add('hidden');
            resultsContainer?.classList.remove('hidden');
          } else {
            throw new Error(data.error || 'Audit failed');
          }
        } catch (error) {
          loadingContainer?.classList.add('hidden');
          alert(error instanceof Error ? error.message : 'Failed to analyze website');
        }
      });
    }

    if (emailForm) {
      emailForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const nameInput = document.getElementById('report-name') as HTMLInputElement;
        const emailInput = document.getElementById('report-email') as HTMLInputElement;

        const name = nameInput.value.trim();
        const email = emailInput.value.trim();

        if (!name || !email || !currentResult) return;

        try {
          // Re-submit audit with email for report
          const response = await fetch('/api/website-audit', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              url: currentResult.url,
              email,
              name
            })
          });

          const data = await response.json();

          if (data.success) {
            alert('Report request submitted! We\'ll send your detailed analysis to ' + email);
            emailForm.reset();
          } else {
            throw new Error(data.error || 'Failed to send report');
          }
        } catch (error) {
          alert(error instanceof Error ? error.message : 'Failed to send report');
        }
      });
    }
  }

  function displayResults(result: any) {
    // Overall score
    const overallScore = result.overallScore || 0;
    document.getElementById('overall-score-value')!.textContent = overallScore.toString();
    document.getElementById('analyzed-url')!.textContent = result.url;

    // Animate progress ring
    const progress = document.getElementById('score-progress');
    if (progress) {
      const circumference = 2 * Math.PI * 90;
      const offset = circumference - (overallScore / 100) * circumference;
      progress.setAttribute('stroke-dasharray', `${circumference} ${circumference}`);
      setTimeout(() => {
        progress.setAttribute('stroke-dashoffset', offset.toString());
      }, 100);
    }

    // Individual scores
    document.getElementById('performance-score')!.textContent = result.performanceScore;
    document.getElementById('seo-score')!.textContent = result.seoScore;
    document.getElementById('accessibility-score')!.textContent = result.accessibilityScore;
    document.getElementById('security-score')!.textContent = result.securityScore;

    // Performance details
    const perfDetails = result.metrics.performance;
    document.getElementById('performance-details')!.innerHTML = `
      <ul>
        <li>Load Time: ${perfDetails.loadTime}ms</li>
        <li>Page Size: ${Math.round(perfDetails.pageSize / 1024)}KB</li>
        <li>Resources: ${perfDetails.resourceCount}</li>
      </ul>
    `;

    // SEO details
    const seoDetails = result.metrics.seo;
    document.getElementById('seo-details')!.innerHTML = `
      <ul>
        <li>Title Tag: ${seoDetails.hasTitleTag ? '✓ Yes' : '✗ Missing'}</li>
        <li>Meta Description: ${seoDetails.hasMetaDescription ? '✓ Yes' : '✗ Missing'}</li>
        <li>Mobile Friendly: ${seoDetails.isMobileFriendly ? '✓ Yes' : '✗ No'}</li>
      </ul>
    `;

    // Accessibility details
    const a11yDetails = result.metrics.accessibility;
    document.getElementById('accessibility-details')!.innerHTML = `
      <ul>
        <li>WCAG Level: ${a11yDetails.wcagLevel}</li>
        <li>Missing Alt Tags: ${a11yDetails.missingAltTags}</li>
        <li>Lang Attribute: ${a11yDetails.hasLangAttribute ? '✓ Yes' : '✗ No'}</li>
      </ul>
    `;

    // Security details
    const secDetails = result.metrics.security;
    document.getElementById('security-details')!.innerHTML = `
      <ul>
        <li>HTTPS: ${secDetails.hasHTTPS ? '✓ Enabled' : '✗ Disabled'}</li>
        <li>SSL Certificate: ${secDetails.hasSSL ? '✓ Valid' : '✗ Missing'}</li>
        <li>Security Headers: ${secDetails.securityHeadersCount}/6</li>
      </ul>
    `;

    // Recommendations
    const recsContainer = document.getElementById('recommendations-list');
    if (recsContainer && result.recommendations) {
      recsContainer.innerHTML = result.recommendations.map((rec: string) => `
        <div class="recommendation-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          <span>${rec}</span>
        </div>
      `).join('');
    }
  }

  initAuditPage();
  document.addEventListener('astro:page-load', initAuditPage);
</script>
